<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PaymentTermTypeMaintenanceDocument" parent="PaymentTermTypeMaintenanceDocument-parentBean" />

  <bean id="PaymentTermTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.vendor.bo.PaymentTermType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PaymentTermTypeMaintenanceDocument-EditPaymentTermsType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>vendorPaymentTermsCode</value>
      </list>
    </property>
    <property name="label" value="Payment Terms Type" />
    <property name="shortLabel" value="Payment Terms Type" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-VN"
            p:parameterName="PAYMENT_TERM_TYPE"
            p:parameterDetailType="PaymentTermType" />
    </property>
    <property name="documentTypeName" value="PaymentTermTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMPA" />
    <property name="workflowProperties" >
      <ref bean="PaymentTermTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PaymentTermTypeMaintenanceDocument-EditPaymentTermsType" parent="PaymentTermTypeMaintenanceDocument-EditPaymentTermsType-parentBean" />

  <bean id="PaymentTermTypeMaintenanceDocument-EditPaymentTermsType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Payment Terms Type" />
    <property name="title" value="Edit Payment Terms Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorPaymentTermsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorPaymentTermsDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorPaymentTermsPercent"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorDiscountDueNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorDiscountDueTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorNetDueNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorNetDueTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PaymentTermTypeMaintenanceDocument-workflowProperties" parent="PaymentTermTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="PaymentTermTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
