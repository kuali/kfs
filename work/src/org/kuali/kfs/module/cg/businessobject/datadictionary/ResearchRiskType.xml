<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.kra.routingform.bo.ResearchRiskType">


        <inquiry>
            <title>Research Risk Type Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="researchRiskTypeCode" />
                <field attributeName="controlAttributeTypeCode" />
                <field attributeName="researchRiskTypeDescription" />
                <field attributeName="researchRiskTypeSortNumber" />
                <field attributeName="researchRiskTypeNotificationGroupText" />
                <field attributeName="researchRiskTypeNotificationValue" />
                <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Research Risk Type Lookup</title>

            <instructions>Look up a Research Risk Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="researchRiskTypeSortNumber" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="researchRiskTypeCode" required="false" />
                <lookupField attributeName="controlAttributeTypeCode" required="false" />
                <lookupField attributeName="researchRiskTypeDescription" required="false" />
                <lookupField attributeName="researchRiskTypeSortNumber" required="false" />
                <lookupField attributeName="researchRiskTypeNotificationGroupText" required="false" />
                <lookupField attributeName="researchRiskTypeNotificationValue" required="false" />
                <lookupField attributeName="dataObjectMaintenanceCodeActiveIndicator" required="false">
                    <defaultValue>Y</defaultValue>
                </lookupField>
            </lookupFields>

            <resultFields>
                <field attributeName="researchRiskTypeCode" />
                <field attributeName="controlAttributeTypeCode" />
                <field attributeName="researchRiskTypeDescription" />
                <field attributeName="researchRiskTypeSortNumber" />
                <field attributeName="researchRiskTypeNotificationGroupText" />
                <field attributeName="researchRiskTypeNotificationValue" />
                <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attributeReference name="dataObjectMaintenanceCodeActiveIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attribute name="researchRiskTypeCode" forceUppercase="true">
                <label>Research Risk Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>researchRiskTypeCode</summary>
                <description>researchRiskTypeCode description...</description>
			</attribute>

            <attribute name="controlAttributeTypeCode" forceUppercase="true">
                <label>Control Attribute Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="3" />
                </control>

                <summary>controlAttributeTypeCode</summary>
                <description>Specifies how the research risk is displayed. A=all columns; S=some columns; D=description textarea</description>
			</attribute>

            <attribute name="researchRiskTypeDescription" forceUppercase="false">
                <label>Research Risk Type Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>30</maxLength>

                <control>
                    <text size="32" />
                </control>

                <summary>researchRiskTypeDescription</summary>
                <description>researchRiskTypeDescription description...</description>
			</attribute>
			
			<attribute name="researchRiskTypeSortNumber" forceUppercase="true">
                <label>Sort Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>sortNumber</summary>
                <description>sortNumber description...</description>
			</attribute>
			
			<attribute name="researchRiskTypeNotificationGroupText" forceUppercase="true">
                <label>Research Risk Type Notification Group</label>
                <shortLabel>Not. Group</shortLabel>

                <maxLength>70</maxLength>
                <required>false</required>

                <control>
                    <workflowWorkgroup size="32" />
                </control>

                <summary>researchRiskTypeNotificationGroupText</summary>
                <description>Workgroup to notify if the user-entered value for this research risk matches the notification value.</description>
            </attribute>
            
            <attribute name="researchRiskTypeNotificationValue" forceUppercase="true">
            	<label>Research Risk Type Notification Value</label>
            	<shortLabel>Not. Val</shortLabel>
            	
            	<maxLength>1</maxLength>
            	
            	<control>
            		<text size="3" />
            	</control>
            	
            	<summary>Research Risk Type Notification Value</summary>
            	<description>Value on which to route to the notification group.  Valid options are Y (yes), N (no), A (all), X (never).</description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>