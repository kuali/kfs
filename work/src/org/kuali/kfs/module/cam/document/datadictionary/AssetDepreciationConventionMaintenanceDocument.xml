<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetDepreciationConventionMaintenanceDocument" parent="AssetDepreciationConventionMaintenanceDocument-parentBean" />

  <bean id="AssetDepreciationConventionMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetDepreciationConvention" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetDepreciationConventionMaintenanceDocument-EditAssetDepreciationConvention" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="financialObjectSubType"
              p:attributeToHighlightOnFail="financialObjectSubTypeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>financialObjectSubTypeCode</value>
      </list>
    </property>
    <property name="label" value="Asset Depreciation Convention" />
    <property name="shortLabel" value="Asset Depreciation Convention" />
    <property name="summary" value="Asset Depreciation Convention maintenance document" />
    <property name="description" value="Document used to create or update asset depreciation convention objects" />
    <property name="documentTypeName" value="AssetDepreciationConventionMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="DPRC" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>CM_ADMINISTRATORS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetDepreciationConventionMaintenanceDocument-EditAssetDepreciationConvention" parent="AssetDepreciationConventionMaintenanceDocument-EditAssetDepreciationConvention-parentBean" />

  <bean id="AssetDepreciationConventionMaintenanceDocument-EditAssetDepreciationConvention-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Asset Depreciation Convention" />
    <property name="title" value="Edit Asset Depreciation Convention" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="financialObjectSubTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="depreciationConventionCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
