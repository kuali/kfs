<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetConditionMaintenanceDocument" parent="AssetConditionMaintenanceDocument-parentBean" />

  <bean id="AssetConditionMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetCondition" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetConditionMaintenanceDocument-EditAssetConditionCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>assetConditionCode</value>
      </list>
    </property>
    <property name="label" value="Asset Condition" />
    <property name="shortLabel" value="Asset Condition" />
    <property name="summary" value="Asset condition maintenance document" />
    <property name="description" value="Document used to create or update Asset condition objects" />
    <property name="documentTypeName" value="AssetConditionMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ACON" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>CM_ADMINISTRATORS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetConditionMaintenanceDocument-EditAssetConditionCode" parent="AssetConditionMaintenanceDocument-EditAssetConditionCode-parentBean" />

  <bean id="AssetConditionMaintenanceDocument-EditAssetConditionCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Asset Condition Code" />
    <property name="title" value="Edit Asset Condition Code" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="assetConditionCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="assetConditionName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
