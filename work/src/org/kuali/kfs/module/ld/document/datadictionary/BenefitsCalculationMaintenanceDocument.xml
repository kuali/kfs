<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
	<maintenanceDocument>
        <businessObjectClass>org.kuali.module.labor.bo.BenefitsCalculation</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
		<businessRulesClass>org.kuali.module.labor.rules.BenefitsCalculationDocumentRule</businessRulesClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>SY_MAINTAINENANCE_USERS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

		<documentTypeName>KualiLaborBenefitsCalculationMaintenanceDocument</documentTypeName>
		<documentTypeCode>BCAL</documentTypeCode>

		<label>Labor Benefits Calculation</label>
		
		<summary>Labor Calculation Maintenance Document</summary>
		<description>Document used to create or update Labor calculations.</description>
        <help parameterNamespace="KFS-LD" parameterDetailType="BenefitsCalculation" parameterName="LABOR_BENEFITS_CALCULATION" />

        <lockingKeys>
			<field attributeName="universityFiscalYear" />
			<field attributeName="chartOfAccountsCode" />
			<field attributeName="positionBenefitTypeCode" />	
		</lockingKeys>         

        <defaultExistenceChecks>
            <reference attributeName="universityFiscal" attributeToHighlightOnFail="universityFiscalYear" />
            <reference attributeName="chartOfAccounts" attributeToHighlightOnFail="chartOfAccountsCode" />          
            <reference attributeName="positionFringeBenefitObject" attributeToHighlightOnFail="positionFringeBenefitObjectCode" />          
            <reference attributeName="positionBenefitType" attributeToHighlightOnFail="positionBenefitTypeCode" />          
        </defaultExistenceChecks>

	    <maintainableSections>
	        <maintainableSection title="Edit Labor Calculation">
	        	<maintainableItems>
	            	<maintainableField name="universityFiscalYear" required="true" />
	            	<maintainableField name="chartOfAccountsCode" required="true" />
	            	<maintainableField name="positionBenefitTypeCode" required="true"/>
	            	<maintainableField name="positionFringeBenefitObjectCode" required="true"/>
	            	<maintainableField name="positionFringeBenefitPercent" required="true"/>
	            	<maintainableField name="versionNumber" />
	         	</maintainableItems>
	        </maintainableSection>
	    </maintainableSections>
	</maintenanceDocument>
</dictionaryEntry>
