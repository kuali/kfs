<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="DelegateMaintenanceDocument" parent="DelegateMaintenanceDocument-parentBean" />

  <bean id="DelegateMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.Delegate" />
    <property name="maintainableClass" value="org.kuali.module.chart.maintenance.KualiDelegateMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="DelegateMaintenanceDocument-EditAccountDelegate" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="account"
              p:attributeToHighlightOnFail="accountNumber" />
        <bean parent="ReferenceDefinition"
              p:attributeName="accountDelegate"
              p:attributeToHighlightOnFail="accountDelegate.personUserIdentifier" />
        <bean parent="ReferenceDefinition"
              p:attributeName="documentType"
              p:attributeToHighlightOnFail="financialDocumentTypeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>chartOfAccountsCode</value>
        <value>accountNumber</value>
        <value>financialDocumentTypeCode</value>
        <value>accountDelegateSystemId</value>
      </list>
    </property>
    <property name="label" value="Account Delegate" />
    <property name="shortLabel" value="Account Delegate" />
    <property name="summary" value="Account Delegate Maintenance Document" />
    <property name="description" value="Maintenance document which allows you to create, remove or modify Account Delegates." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="ACCOUNT_DELEGATE"
            p:parameterDetailType="Delegate" />
    </property>
    <property name="documentTypeName" value="DelegateMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.chart.rules.DelegateRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="preRulesCheckClass" value="org.kuali.module.chart.rules.DelegatePreRules" />
    <property name="documentTypeCode" value="ADEL" />
    <property name="workflowProperties" >
      <ref bean="DelegateMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="DelegateMaintenanceDocument-EditAccountDelegate" parent="DelegateMaintenanceDocument-EditAccountDelegate-parentBean" />

  <bean id="DelegateMaintenanceDocument-EditAccountDelegate-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Account Delegate" />
    <property name="title" value="Edit Account Delegate" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountDelegateSystemId"
              p:readOnly="true"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountDelegate.personUserIdentifier"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountDelegate.personName"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="finDocApprovalFromThisAmt"
              p:defaultValue="0.00" />
        <bean parent="MaintainableFieldDefinition"
              p:name="finDocApprovalToThisAmount"
              p:defaultValue="0.00" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountsDelegatePrmrtIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountDelegateActiveIndicator"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountDelegateStartDate"
              p:required="true"
              p:defaultValueFinderClass="org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="DelegateMaintenanceDocument-workflowProperties" parent="DelegateMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="DelegateMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
