<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BudgetConstructionPositionMaintenanceDocument" parent="BudgetConstructionPositionMaintenanceDocument-parentBean" />

  <bean id="BudgetConstructionPositionMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.budget.bo.BudgetConstructionPosition" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="BudgetConstructionPositionMaintenanceDocument-EditBCPosition" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>positionNumber</value>
        <value>universityFiscalYear</value>
      </list>
    </property>
    <property name="label" value="Budget Construction Position" />
    <property name="shortLabel" value="BC - BC Position Maint Doc" />
    <property name="summary" value="Budget Construction Position Maintenance Document" />
    <property name="description" value="Document used to create or update Budget Construction Position Maintenance Document objects" />
    <property name="documentTypeName" value="BudgetConstructionPositionMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="preRulesCheckClass" value="org.kuali.module.budget.rules.BudgetConstructionPositionPreRules" />
    <property name="documentTypeCode" value="BCPS" />
    <property name="webScriptFiles" >
      <list>
        <value>../dwr/interface/BudgetConstructionPosition.js</value>
        <value>../scripts/budget/budgetConstructionPositionDocument.js</value>
      </list>
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="BudgetConstructionPositionMaintenanceDocument-EditBCPosition" parent="BudgetConstructionPositionMaintenanceDocument-EditBCPosition-parentBean" />

  <bean id="BudgetConstructionPositionMaintenanceDocument-EditBCPosition-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit BC Position" />
    <property name="title" value="Edit BC Position" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="positionNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalYear"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionEffectiveDate" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionEffectiveStatus"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionStatus" />
        <bean parent="MaintainableFieldDefinition"
              p:name="setidDepartment" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionDepartmentIdentifier"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="jobCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="jobCodeDescription" />
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetedPosition"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="confidentialPosition" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionUnionCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionRegularTemporary" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionStandardHoursDefault"
              p:required="true"
              p:webUILeaveFieldFunction="updateBCPositionFTE" />
        <bean parent="MaintainableFieldDefinition"
              p:name="iuNormalWorkMonths"
              p:required="true"
              p:webUILeaveFieldFunction="updateBCPositionFTE" />
        <bean parent="MaintainableFieldDefinition"
              p:name="iuPayMonths"
              p:required="true"
              p:webUILeaveFieldFunction="updateBCPositionFTE" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionFullTimeEquivalency"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionSalaryPlanDefault"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="positionGradeDefault"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="responsibilityCenterCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="setidSalary" />
        <bean parent="MaintainableFieldDefinition"
              p:name="setidJobCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="iuDefaultObjectCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="iuPositionType"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
