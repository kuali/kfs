<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="FunctionControlCodeMaintenanceDocument" parent="FunctionControlCodeMaintenanceDocument-parentBean" />

  <bean id="FunctionControlCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.financial.bo.FunctionControlCode" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="FunctionControlCodeMaintenanceDocument-EditFunctionControlCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>financialSystemFunctionControlCode</value>
      </list>
    </property>
    <property name="label" value="Function Control Code" />
    <property name="shortLabel" value="Function Control Code" />
    <property name="summary" value="Function Control Code Maintenance Document" />
    <property name="description" value="Document used to create or update Function Control Code objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="FUNCTION_CONTROL_CODE"
            p:parameterDetailType="FiscalYearFunctionControl" />
    </property>
    <property name="documentTypeName" value="FunctionControlCodeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="BFNC" />
    <property name="workflowProperties" >
      <ref bean="FunctionControlCodeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="FunctionControlCodeMaintenanceDocument-EditFunctionControlCode" parent="FunctionControlCodeMaintenanceDocument-EditFunctionControlCode-parentBean" />

  <bean id="FunctionControlCodeMaintenanceDocument-EditFunctionControlCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Function Control Code" />
    <property name="title" value="Edit Function Control Code" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="financialSystemFunctionControlCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialSystemFunctionDefaultIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialSystemFunctionDescription" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="FunctionControlCodeMaintenanceDocument-workflowProperties" parent="FunctionControlCodeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="FunctionControlCodeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
