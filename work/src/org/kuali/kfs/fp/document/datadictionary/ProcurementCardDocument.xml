<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProcurementCardDocument" parent="ProcurementCardDocument-parentBean" />

  <bean id="ProcurementCardDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Procurement Card" />
    <property name="shortLabel" value="Procurement Card" />
    <property name="summary" value="Procurement Card Document" />
    <property name="description" value="Document for the distribution of procurement card expenses." />
    <property name="documentTypeName" value="ProcurementCardDocument" />
    <property name="documentClass" value="org.kuali.module.financial.document.ProcurementCardDocument" />
    <property name="businessRulesClass" value="org.kuali.module.financial.rules.ProcurementCardDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.financial.document.authorization.ProcurementCardDocumentAuthorizer" />
    <property name="documentTypeCode" value="PCDO" />
    <property name="workflowProperties" >
      <ref bean="ProcurementCardDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ProcurementCardDocument-workflowProperties" parent="ProcurementCardDocument-workflowProperties-parentBean" />

  <bean id="ProcurementCardDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="transactionEntries.sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="transactionEntries.targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="transactionEntries.sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="transactionEntries.targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
