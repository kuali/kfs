<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PurchaseOrderVoidDocument" parent="PurchaseOrderVoidDocument-parentBean" />

  <bean id="PurchaseOrderVoidDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Purchase Order Void" />
    <property name="shortLabel" value="Purchase Order Void" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PURAP"
            p:parameterName="PURCHASE_ORDER"
            p:parameterDetailType="PurchaseOrder" />
    </property>
    <property name="documentTypeName" value="PurchaseOrderVoidDocument" />
    <property name="sessionDocument" value="true" />
    <property name="documentClass" value="org.kuali.kfs.module.purap.document.PurchaseOrderVoidDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.sys.document.validation.impl.AccountingRuleEngineRuleBase" />
    <!-- property name="businessRulesClass" value="org.kuali.kfs.module.purap.document.validation.impl.PurchaseOrderVoidDocumentRule" /-->
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.AccountingDocumentAuthorizerBase" />
    <property name="documentPresentationControllerClass" value="org.kuali.kfs.module.purap.document.authorization.PurchaseOrderVoidDocumentPresentationController" />
    <property name="documentTypeCode" value="POV" />
    <property name="workflowProperties" >
      <ref bean="PurchaseOrderVoidDocument-workflowProperties" />
    </property>
    <property name="accountingLineGroups">
    	<map>
    		<entry>
    			<key><value>source</value></key>
	    		<ref bean="PurchaseOrderDocument-sourceAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
    	</map>
    </property>    
    <property name="validationMap" ref="PurchaseOrderVoidDocument-validations" />
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PurchaseOrderVoidDocument-workflowProperties" parent="PurchaseOrderVoidDocument-workflowProperties-parentBean" />

  <bean id="PurchaseOrderVoidDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="accountsForRouting" />
              <bean parent="WorkflowProperty"
                    p:path="accountsForRouting.account" />
              <bean parent="WorkflowProperty"
                    p:path="status" />
              <bean parent="WorkflowProperty"
                    p:path="contractManager" />
              <bean parent="WorkflowProperty"
                    p:path="vendorContract" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

	<bean id="PurchaseOrderVoidDocument-validations" parent="PurchaseOrderVoidDocument-validations-parentBean" />
  
    <bean id="PurchaseOrderVoidDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
    	<property name="sourceMap">
	    	<map>			
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
					<value>PurchaseOrderVoid-routeDocumentValidation</value>
				</entry>
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedApproveDocumentEvent</value></key>
					<value>PurchaseOrderVoid-approveDocumentValidation</value>
				</entry>		
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
					<value>PurchaseOrderVoid-addAccountingLineValidation</value>
				</entry>
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedUpdateAccountingLineEvent</value></key>
					<value>PurchaseOrderVoid-updateAccountingLineValidation</value>
				</entry>	
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedReviewAccountingLineEvent</value></key>
					<value>PurchaseOrderVoid-reviewAccountingLineValidation</value>
				</entry>
				<entry>
					<key><value>org.kuali.kfs.module.purap.document.validation.event.AttributedAddPurchasingAccountsPayableItemEvent</value></key>
					<value>PurchaseOrderVoid-addPurchasingAccountsPayableItemValidation</value>				
				</entry>
				<entry>
					<key><value>org.kuali.kfs.module.purap.document.validation.event.AttributedImportPurchasingAccountsPayableItemEvent</value></key>
					<value>PurchaseOrderVoid-importPurchasingAccountsPayableItemValidation</value>				
				</entry>																									
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedSaveDocumentEvent</value></key>
					<value>PurchaseOrderVoid-saveDocumentValidation</value>				
				</entry>												
		    </map>
	    </property>	  
    </bean>
  
</beans>
