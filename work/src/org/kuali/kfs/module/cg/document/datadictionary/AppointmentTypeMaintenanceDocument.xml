<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AppointmentTypeMaintenanceDocument" parent="AppointmentTypeMaintenanceDocument-parentBean" />

  <bean id="AppointmentTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.budget.bo.AppointmentType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AppointmentTypeMaintenanceDocument-EditAppointmentType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>appointmentTypeCode</value>
      </list>
    </property>
    <property name="label" value="Appointment Type" />
    <property name="shortLabel" value="Appointment Type" />
    <property name="summary" value="Appointment Type maintenance document" />
    <property name="description" value="Document used to create or update AppointmentType objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-RA"
            p:parameterName="APPOINTMENT_TYPE"
            p:parameterDetailType="AppointmentType" />
    </property>
    <property name="documentTypeName" value="AppointmentTypeMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.kra.budget.rules.AppointmentTypeMaintenanceDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="APPT" />
    <property name="workflowProperties" >
      <ref bean="AppointmentTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>RA_PRE_AWARD_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AppointmentTypeMaintenanceDocument-EditAppointmentType" parent="AppointmentTypeMaintenanceDocument-EditAppointmentType-parentBean" />

  <bean id="AppointmentTypeMaintenanceDocument-EditAppointmentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Appointment Type" />
    <property name="title" value="Edit Appointment Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="appointmentTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="appointmentTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="appointmentTypeAbbrieviation"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="fringeRateAmount"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="costShareFringeRateAmount"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="relatedAppointmentTypeCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="AppointmentTypeMaintenanceDocument-workflowProperties" parent="AppointmentTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="AppointmentTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
