<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProjectCodeMaintenanceDocument" parent="ProjectCodeMaintenanceDocument-parentBean" />

  <bean id="ProjectCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.ProjectCode" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ProjectCodeMaintenanceDocument-EditProjectCode" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="chartOfAccounts"
              p:activeIndicatorAttributeName="finChartOfAccountActiveIndicator"
              p:attributeToHighlightOnFail="chartOfAccountsCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="projectManagerUniversal"
              p:activeIndicatorAttributeName="activeForAnyModule"
              p:attributeToHighlightOnFail="projectManagerUniversal.personUserIdentifier" />
        <bean parent="ReferenceDefinition"
              p:attributeName="organization"
              p:activeIndicatorAttributeName="organizationActiveIndicator"
              p:attributeToHighlightOnFail="organizationCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>code</value>
      </list>
    </property>
    <property name="label" value="Project Code" />
    <property name="shortLabel" value="Project Code" />
    <property name="summary" value="Project Code maintenance document" />
    <property name="description" value="Document used to create or update Project Code objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="PROJECT"
            p:parameterDetailType="ProjectCode" />
    </property>
    <property name="documentTypeName" value="ProjectCodeMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.chart.rules.ProjectCodeRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PROJ" />
    <property name="workflowProperties" >
      <ref bean="ProjectCodeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ProjectCodeMaintenanceDocument-EditProjectCode" parent="ProjectCodeMaintenanceDocument-EditProjectCode-parentBean" />

  <bean id="ProjectCodeMaintenanceDocument-EditProjectCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Project Code" />
    <property name="title" value="Edit Project Code" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="code"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="name"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="projectManagerUniversalId"
              p:readOnly="true"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="projectManagerUniversal.personUserIdentifier"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="projectManagerUniversal.personName"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="projectDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ProjectCodeMaintenanceDocument-workflowProperties" parent="ProjectCodeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ProjectCodeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
