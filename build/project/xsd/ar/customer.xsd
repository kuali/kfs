<xsd:schema elementFormDefault="qualified"
    targetNamespace="http://www.kuali.org/kfs/ar/customer"
    xmlns:kfs="http://www.kuali.org/kfs/sys/types"
    xmlns:dd="http://www.kuali.org/kfs/sys/ddTypes"
    xmlns="http://www.kuali.org/kfs/ar/customer" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:import namespace="http://www.kuali.org/kfs/sys/types" schemaLocation="@externalizable.static.content.url@/xsd/sys/types.xsd" />
    <xsd:import namespace="http://www.kuali.org/kfs/sys/ddTypes" schemaLocation="@externalizable.static.content.url@/xsd/sys/ddTypes.xsd" />
  
	<!--  elements -->
	<xsd:element name="customers" type="customersType" />
	<xsd:element name="customer" type="customerType" />
	<xsd:element name="addresses" type="addressesType" />
	<xsd:element name="address" type="addressType" />
	
	<xsd:element name="customerNumber"                type="${xsd:normalizedString,dd:Customer.customerNumber}" />
	<xsd:element name="customerName"                  type="${xsd:normalizedString,dd:Customer.customerName}" />
	<xsd:element name="customerParentCompanyNumber"   type="${xsd:normalizedString,dd:Customer.customerParentCompanyNumber}" />
	<xsd:element name="customerTypeCode"              type="${xsd:normalizedString,dd:Customer.customerTypeCode}" />
	<xsd:element name="customerAddressChangeDate"     type="${xsd:date,dd:Customer.customerAddressChangeDate}" />
	<xsd:element name="customerRecordAddDate"         type="${xsd:date,dd:Customer.customerRecordAddDate}" />
	<xsd:element name="customerLastActivityDate"      type="${xsd:date,dd:Customer.customerLastActivityDate}" />
	<xsd:element name="customerTaxTypeCode"           type="${xsd:normalizedString,dd:Customer.customerTaxTypeCode}" />
	<xsd:element name="customerTaxNbr"                type="${xsd:normalizedString,dd:Customer.customerTaxNbr}" />
	<xsd:element name="customerActiveIndicator"       type="${xsd:normalizedString,dd:Customer.active}" />
	<xsd:element name="customerPhoneNumber"           type="${xsd:normalizedString,dd:Customer.customerPhoneNumber}" />
	<xsd:element name="customer800PhoneNumber"        type="${xsd:normalizedString,dd:Customer.customer800PhoneNumber}" />
	<xsd:element name="customerContactName"           type="${xsd:normalizedString,dd:Customer.customerContactName}" />
	<xsd:element name="customerContactPhoneNumber"    type="${xsd:normalizedString,dd:Customer.customerContactPhoneNumber}" />
	<xsd:element name="customerFaxNumber"             type="${xsd:normalizedString,dd:Customer.customerFaxNumber}" />
	<xsd:element name="customerBirthDate"             type="${xsd:date,dd:Customer.customerBirthDate}" />
	<xsd:element name="customerTaxExemptIndicator"    type="${xsd:normalizedString,dd:Customer.customerTaxExemptIndicator}" />
	<xsd:element name="customerCreditLimitAmount"     type="${xsd:decimal,dd:Customer.customerCreditLimitAmount}" />
	<xsd:element name="customerCreditApprovedByName"  type="${xsd:normalizedString,dd:Customer.customerCreditApprovedByName}" />
	<xsd:element name="customerEmailAddress"          type="${xsd:normalizedString,dd:Customer.customerEmailAddress}" />
	<xsd:element name="customerAddressIdentifier"     type="${xsd:normalizedString,dd:CustomerAddress.customerAddressIdentifier}" />
	<xsd:element name="customerAddressName"           type="${xsd:normalizedString,dd:CustomerAddress.customerAddressName}" />
	<xsd:element name="customerLine1StreetAddress"    type="${xsd:normalizedString,dd:CustomerAddress.customerLine1StreetAddress}" />
	<xsd:element name="customerLine2StreetAddress"    type="${xsd:normalizedString,dd:CustomerAddress.customerLine2StreetAddress}" />
	<xsd:element name="customerCityName"              type="${xsd:normalizedString,dd:CustomerAddress.customerCityName}" />
	<xsd:element name="customerStateCode"             type="${xsd:normalizedString,dd:CustomerAddress.customerStateCode}" />
	<xsd:element name="customerZipCode"               type="${xsd:normalizedString,dd:CustomerAddress.customerZipCode}" />
	<xsd:element name="customerCountryCode"           type="${xsd:normalizedString,dd:CustomerAddress.customerCountryCode}" />
	<xsd:element name="customerAddressInternationalProvinceName" type="${xsd:normalizedString,dd:CustomerAddress.customerAddressInternationalProvinceName}" />
	<xsd:element name="customerInternationalMailCode" type="${xsd:normalizedString,dd:CustomerAddress.customerInternationalMailCode}" />
	<xsd:element name="customerAddressTypeCode"       type="${xsd:normalizedString,dd:CustomerAddress.customerAddressTypeCode}" />
	<xsd:element name="customerAddressEndDate"        type="${xsd:date,dd:CustomerAddress.customerAddressEndDate}" />

    
    
    <!-- definition of complex type elements -->
    <xsd:complexType name="addressType">
	    <xsd:sequence>
	       <xsd:element maxOccurs="1" minOccurs="1" ref="customerAddressName" />
	       <xsd:element maxOccurs="1" minOccurs="1" ref="customerLine1StreetAddress" />
	       <xsd:element maxOccurs="1" minOccurs="0" ref="customerLine2StreetAddress" />
	       <xsd:element maxOccurs="1" minOccurs="1" ref="customerCityName" />
	       <xsd:element maxOccurs="1" minOccurs="0" ref="customerStateCode" />
	       <xsd:element maxOccurs="1" minOccurs="0" ref="customerZipCode" />
	       <xsd:element maxOccurs="1" minOccurs="1" ref="customerCountryCode" />
	       <xsd:element maxOccurs="1" minOccurs="0" ref="customerAddressInternationalProvinceName" />
	       <xsd:element maxOccurs="1" minOccurs="0" ref="customerInternationalMailCode" />
	       <xsd:element maxOccurs="1" minOccurs="0" ref="customerEmailAddress" />
	       <xsd:element maxOccurs="1" minOccurs="1" ref="customerAddressTypeCode" />
	       <xsd:element maxOccurs="1" minOccurs="0" ref="customerAddressEndDate" />
	     </xsd:sequence>  
    </xsd:complexType>

    <xsd:complexType name="addressesType">
		<xsd:sequence>
		    <xsd:element maxOccurs="unbounded" minOccurs="1" ref="address"/>
		</xsd:sequence>
    </xsd:complexType>
    
    <xsd:complexType name="customerType">
	   <xsd:sequence>
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerNumber" />
	      <xsd:element maxOccurs="1" minOccurs="1" ref="customerName" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerParentCompanyNumber" />
	      <xsd:element maxOccurs="1" minOccurs="1" ref="customerTypeCode" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerLastActivityDate" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerTaxTypeCode" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerTaxNbr" />
	      <xsd:element maxOccurs="1" minOccurs="1" ref="customerActiveIndicator" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerPhoneNumber" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customer800PhoneNumber" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerContactName" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerContactPhoneNumber" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerFaxNumber" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerBirthDate" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerTaxExemptIndicator" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerCreditLimitAmount" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerCreditApprovedByName" />
	      <xsd:element maxOccurs="1" minOccurs="0" ref="customerEmailAddress" />
	      <xsd:element maxOccurs="unbounded" minOccurs="1" ref="addresses" />
	    </xsd:sequence>  
    </xsd:complexType>

    <xsd:complexType name="customersType">
	    <xsd:sequence>
	        <xsd:element maxOccurs="unbounded" minOccurs="1" ref="customer"/>
	    </xsd:sequence>
    </xsd:complexType>
    
</xsd:schema>
