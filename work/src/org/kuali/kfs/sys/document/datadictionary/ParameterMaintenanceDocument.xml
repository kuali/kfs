<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.core.bo.Parameter</businessObjectClass>
        <maintainableClass>
            org.kuali.core.maintenance.KualiMaintainableImpl
        </maintainableClass>
        <businessRulesClass>
            org.kuali.kfs.rules.ParameterRule
        </businessRulesClass>
        <documentAuthorizerClass>
            org.kuali.core.document.authorization.ParameterMaintenanceDocumentAuthorizer
        </documentAuthorizerClass>
        <authorizations>
            <!-- initiation is controlled by the workgroup stored on the system parameter table rather than the DD -->
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>
        <documentTypeName>ParameterMaintenanceDocument</documentTypeName>
        <documentTypeCode>PARM</documentTypeCode>
        <label>Parameter Maintenance Document</label>
        <shortLabel>Parm Maint. Doc.</shortLabel>
        <summary>Parameter Maintenance Document</summary>
        <description>
            This document can be used to create or update system parameters.
        </description>
        <help parameterNamespace="KR-NS" parameterDetailType="N/A"
            parameterName="NERVOUS_SYSTEM_HELP_PARAMETER"
        />

        <lockingKeys>
            <field attributeName="parameterNamespaceCode" />
            <field attributeName="parameterDetailTypeCode" />
            <field attributeName="parameterName" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="parameterNamespace"
                attributeToHighlightOnFail="parameterNamespaceCode"
                activeIndicatorAttributeName="active"
            />
            <reference attributeName="parameterType"
                attributeToHighlightOnFail="parameterTypeCode"
                activeIndicatorAttributeName="active"
            />
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit Parameter">
                <maintainableItems>
                    <maintainableField name="parameterNamespaceCode" required="true" />
                    <maintainableField name="parameterDetailTypeCode" required="true" />
                    <maintainableField name="parameterName" required="true" />
                    <maintainableField name="parameterValue" />
                    <maintainableField name="parameterDescription" required="true" />
                    <maintainableField name="parameterTypeCode" required="true" />
                    <maintainableField name="parameterConstraintCode" required="true">
                        <defaultValue>A</defaultValue>
                    </maintainableField>
                    <maintainableField name="parameterWorkgroupName" required="true" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>