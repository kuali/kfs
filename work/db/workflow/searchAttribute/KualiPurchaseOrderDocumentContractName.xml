<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
  <ruleAttributes xmlns="ns:workflow/RuleAttribute" xsi:schemaLocation="ns:workflow/RuleAttribute resource:RuleAttribute">
    <ruleAttribute>
      <name>KualiPurchaseOrderDocumentContractName</name>
      <className>org.kuali.workflow.attribute.KualiXmlSearchableAttributeImpl</className>
      <label>Kuali Purchase Order Document Contract Name</label>
      <description>Attribute to identify the Contract Name of the Vendor Contract on a Purchase Order Document</description>
      <type>SearchableXmlAttribute</type>
      <searchingConfig>
        <fieldDef name="purchaseOrderDocumentContractName" title="kuali_dd_label(PurchaseOrderDocument)">
          <display>
            <type>text</type>
          </display>
          <visibility>
            <column visible="false" />
          </visibility>
          <searchDefinition allowWildcards="false" autoWildcardLocation="suffixonly" />
          <fieldEvaluation>
            <xpathexpression>wf:xstreamsafe('//document/vendorContract/vendorContractName')</xpathexpression>
          </fieldEvaluation>
        </fieldDef>
      </searchingConfig>
    </ruleAttribute>
  </ruleAttributes>
</data>
