<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.ContactType">

        <inquiry>
            <title>Contact Type Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="vendorContactTypeCode" />
                <field attributeName="vendorContactTypeDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Contact Type Lookup</title>

            <instructions>Lookup a Contact Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="vendorContactTypeDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="vendorContactTypeCode" required="false" />
                <lookupField attributeName="vendorContactTypeDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="vendorContactTypeCode" />
                <field attributeName="vendorContactTypeDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>vendorContactTypeCode</titleAttribute>

        <attributes>

            <attribute name="vendorContactTypeCode" forceUppercase="true">
                <label>Contact Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>
                <required>true</required>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="vendorContactTypeDescription" forceUppercase="true">
                <label>Contact Type Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>
                <required>true</required>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Contact Type</objectLabel>
    </businessObject>
</dictionaryEntry>
