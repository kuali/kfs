<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.chart.bo.BasicAccountingCategory">
 
        <inquiry>
            <title>Account Category Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="code" />
                        <field attributeName="description" />
                        <field attributeName="shortName" />
                        <field attributeName="active" />
                        <field attributeName="sortCode" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Basic Accounting Category Lookup</title>

            <instructions>Look up an Basic Accounting Category</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="sortCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="code" required="false" />
                <lookupField attributeName="description" required="false" />
                <lookupField attributeName="shortName" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="code" />
                <field attributeName="description" />
                <field attributeName="shortName" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="code" forceUppercase="true">
                <label>Basic Accounting Category Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>basicAccountingCategoryCode</summary>
                <description>a code for this basic accounting category</description>
			</attribute>

            <attribute name="description" forceUppercase="true">
                <label>Basic Accounting Category Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="42" />
                </control>

                <summary>basicAccountingCategoryDescription</summary>
                <description>The basic accounting category</description>
			</attribute>

            <attribute name="shortName" forceUppercase="true">
                <label>Basic Accounting Category Short Name</label>
                <shortLabel>ShortName</shortLabel>

                <maxLength>12</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="14" />
                </control>

                <summary>basicAccountingCategoryShortName</summary>
                <description>Short name of Basic Accounting Category; used for reporting.</description>
			</attribute>

            <attribute name="active" forceUppercase="true">
                <label>Active</label>
                <shortLabel>Active</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>active</summary>
                <description>Is this category active?</description>
			</attribute>

            <attribute name="sortCode" forceUppercase="true">
                <label>Financial Reporting Sort Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>financialReportingSortCode</summary>
                <description>Sort order of basic accounting categories.</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
