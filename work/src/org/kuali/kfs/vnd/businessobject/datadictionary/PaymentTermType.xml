<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.PaymentTermType">

        <inquiry>
            <title>Payment Terms Type Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="vendorPaymentTermsCode" />
                <field attributeName="vendorPaymentTermsDescription" />
                <field attributeName="vendorPaymentTermsPercent" />
                <field attributeName="vendorDiscountDueNumber" />
                <field attributeName="vendorDiscountDueTypeDescription" />
                <field attributeName="vendorNetDueNumber" />
                <field attributeName="vendorNetDueTypeDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Payment Terms Type Lookup</title>

            <instructions>Lookup a Payment Terms Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="vendorPaymentTermsDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="vendorPaymentTermsCode" required="false" />
            	<lookupField attributeName="vendorPaymentTermsDescription" required="false" />
            	<lookupField attributeName="vendorPaymentTermsPercent" required="false" />
                <lookupField attributeName="vendorDiscountDueNumber" required="false" />
                <lookupField attributeName="vendorDiscountDueTypeDescription" required="false" />
                <lookupField attributeName="vendorNetDueNumber" required="false" />
                <lookupField attributeName="vendorNetDueTypeDescription" required="false" >
                	<defaultValueFinderClass>org.kuali.module.vendor.lookup.keyvalues.PaymentTypeValuesFinder</defaultValueFinderClass>
                </lookupField>
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="vendorPaymentTermsCode" />
                <field attributeName="vendorPaymentTermsDescription" />
                <field attributeName="vendorPaymentTermsPercent" />
                <field attributeName="vendorDiscountDueNumber" />
                <field attributeName="vendorDiscountDueTypeDescription" />
                <field attributeName="vendorNetDueNumber" />
                <field attributeName="vendorNetDueTypeDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>vendorPaymentTermsCode</titleAttribute>

        <attributes>

            <attribute name="vendorDiscountDueNumber">
                <label>Discount Due Number</label>
                <shortLabel>Discount Due Num.</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="4" />
                </control>

			</attribute>

            <attribute name="vendorDiscountDueTypeDescription" >
                <label>Discount Due Type Description</label>
                <shortLabel>Discount Due Type Desc.</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <radio valuesFinderClass="org.kuali.module.vendor.lookup.keyvalues.PaymentTypeValuesFinder" />
                </control>

			</attribute>

            <attribute name="vendorNetDueNumber">
                <label>Net Due Number</label>
                <shortLabel>Net Due Num.</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="4" />
                </control>

			</attribute>

            <attribute name="vendorNetDueTypeDescription">
                <label>Net Due Type Description</label>
                <shortLabel>Net Due Type Desc.</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <radio valuesFinderClass="org.kuali.module.vendor.lookup.keyvalues.PaymentTypeValuesFinder" />
                </control>

			</attribute>

            <attribute name="vendorPaymentTermsCode" forceUppercase="true">
                <label>Payment Terms Code</label>
                <shortLabel>Payment Terms Cd.</shortLabel>

                <maxLength>5</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="7" />
                </control>

			</attribute>

            <attribute name="vendorPaymentTermsDescription">
                <label>Payment Terms Description</label>
                <shortLabel>Payment Terms Desc.</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attribute name="vendorPaymentTermsPercent">
                <label>Payment Terms Percent</label>
                <shortLabel>Payment Terms Percent</shortLabel>

                <maxLength>6</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="8" />
                </control>

			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Payment Terms Type</objectLabel>
    </businessObject>
</dictionaryEntry>
