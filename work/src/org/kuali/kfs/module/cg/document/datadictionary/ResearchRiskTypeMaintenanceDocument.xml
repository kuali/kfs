<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ResearchRiskTypeMaintenanceDocument" parent="ResearchRiskTypeMaintenanceDocument-parentBean" />

  <bean id="ResearchRiskTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.routingform.bo.ResearchRiskType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ResearchRiskTypeMaintenanceDocument-EditRiskTypeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>researchRiskTypeCode</value>
      </list>
    </property>
    <property name="label" value="Research Risk Type" />
    <property name="shortLabel" value="Research Risk Type" />
    <property name="summary" value="Research Risk Type Maintenance Document" />
    <property name="description" value="Document used to create or update Research Risk Type objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-RA"
            p:parameterName="RESEARCH_RISK_TYPE"
            p:parameterDetailType="ResearchRiskType" />
    </property>
    <property name="documentTypeName" value="ResearchRiskTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.module.kra.routingform.document.ResearchRiskTypeMaintenanceDocumentAuthorizer" />
    <property name="documentTypeCode" value="RRT" />
    <property name="workflowProperties" >
      <ref bean="ResearchRiskTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>RA_PRE_AWARD_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ResearchRiskTypeMaintenanceDocument-EditRiskTypeCode" parent="ResearchRiskTypeMaintenanceDocument-EditRiskTypeCode-parentBean" />

  <bean id="ResearchRiskTypeMaintenanceDocument-EditRiskTypeCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Risk Type Code" />
    <property name="title" value="Edit Risk Type Code" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="researchRiskTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="researchRiskTypeDescription" />
        <bean parent="MaintainableFieldDefinition"
              p:name="controlAttributeTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="researchRiskTypeSortNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="researchRiskTypeNotificationGroupText" />
        <bean parent="MaintainableFieldDefinition"
              p:name="researchRiskTypeNotificationValue" />
        <bean parent="MaintainableFieldDefinition"
              p:name="dataObjectMaintenanceCodeActiveIndicator"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ResearchRiskTypeMaintenanceDocument-workflowProperties" parent="ResearchRiskTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ResearchRiskTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
