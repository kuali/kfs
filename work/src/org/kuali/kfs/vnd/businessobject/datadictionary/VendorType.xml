<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.VendorType">

        <inquiry>
            <title>Vendor Type Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="vendorTypeCode" />
                <field attributeName="vendorTypeDescription" />
                <field attributeName="vendorAddressTypeRequiredCode" />
                <field attributeName="vendorTaxNumberRequiredIndicator" />
                <field attributeName="vendorTypeChangeAllowedIndicator" />
                <field attributeName="vendorContractAllowedIndicator" />
                <field attributeName="vendorShowReviewIndicator" />
                <field attributeName="commodityRequiredIndicator" />
                <field attributeName="vendorReviewText" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Vendor Type Lookup</title>

            <instructions>Lookup a Vendor Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="vendorTypeDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="vendorTypeCode" required="false"/>
                <lookupField attributeName="vendorTypeDescription" required="false" />
                <lookupField attributeName="vendorAddressTypeRequiredCode" required="false" />
                <lookupField attributeName="vendorTaxNumberRequiredIndicator" required="false" />
                <lookupField attributeName="vendorTypeChangeAllowedIndicator" required="false" />
                <lookupField attributeName="vendorContractAllowedIndicator" required="false" />
                <lookupField attributeName="vendorShowReviewIndicator" />
                <lookupField attributeName="commodityRequiredIndicator" />
                <lookupField attributeName="vendorReviewText" />
                <lookupField attributeName="active" required="false"/>               
            </lookupFields>

            <resultFields>
                <field attributeName="vendorTypeCode" />
                <field attributeName="vendorTypeDescription" />
                <field attributeName="addressType.vendorAddressTypeDescription" />
                <field attributeName="vendorTaxNumberRequiredIndicator" />
                <field attributeName="vendorTypeChangeAllowedIndicator" />
                <field attributeName="vendorContractAllowedIndicator" />
                <field attributeName="vendorShowReviewIndicator" />
                <field attributeName="commodityRequiredIndicator" />
                <field attributeName="vendorReviewText" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>vendorTypeCode</titleAttribute>

        <attributes>

            <attribute name="vendorTypeCode" forceUppercase="true">
                <label>Vendor Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="vendorTypeDescription" forceUppercase="true">
                <label>Vendor Type Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>
			
			<attributeReference name="vendorTaxNumberRequiredIndicator"
					sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
					sourceAttributeName="oneDigitTextCode">
				<label>Tax Number Required</label>
				<shortLabel>Tax # Required</shortLabel>
				
				<control>
					<checkbox />
				</control>

			</attributeReference>
			
			<attributeReference name="vendorTypeChangeAllowedIndicator"
					sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
					sourceAttributeName="oneDigitTextCode">
				<label>Type Change Allowed</label>
				<shortLabel>Type Change</shortLabel>
				
				<control>
					<checkbox />
				</control>

			</attributeReference>
			
			<attributeReference name="vendorContractAllowedIndicator"
					sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
					sourceAttributeName="oneDigitTextCode">
				<label>Vendor Contract Allowed</label>
				<shortLabel>Contract Allowed</shortLabel>
				
				<control>
					<checkbox />
				</control>

			</attributeReference>
											
			<attributeReference name="vendorShowReviewIndicator"
					sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
					sourceAttributeName="oneDigitTextCode">
				<label>Show Review Page</label>
				<shortLabel>Show Review Page</shortLabel>
				
				<control>
					<checkbox />
				</control>

			</attributeReference>

            <attributeReference name="commodityRequiredIndicator"
                    sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                    sourceAttributeName="oneDigitTextCode">
                <label>Commodity Code Required</label>
                <shortLabel>Commodity Code Required</shortLabel>
                
                <control>
                    <checkbox />
                </control>

            </attributeReference>
            
            <attribute name="vendorReviewText" forceUppercase="false">
                <label>Vendor Review Page Text</label>
                <shortLabel>Review Text</shortLabel>

                <maxLength>4000</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <textarea rows="5" cols="60" />
                </control>

			</attribute>
			
            <attributeReference name="vendorAddressTypeRequiredCode" sourceClassName="org.kuali.module.vendor.bo.AddressType" sourceAttributeName="vendorAddressTypeCode">
                <label>Address Type Required</label>
                <shortLabel>Address Type Required</shortLabel>
                <control>
                    <select valuesFinderClass="org.kuali.module.vendor.lookup.keyvalues.AddressTypeValuesFinder" />
                </control>
            </attributeReference>

            <attributeReference name="addressType.vendorAddressTypeDescription" sourceClassName="org.kuali.module.vendor.bo.AddressType" sourceAttributeName="vendorAddressTypeDescription" >
                <label>Address Type Required</label>
                <shortLabel>Address Type Required</shortLabel>
            </attributeReference>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Vendor Type</objectLabel>
    </businessObject>
</dictionaryEntry>
