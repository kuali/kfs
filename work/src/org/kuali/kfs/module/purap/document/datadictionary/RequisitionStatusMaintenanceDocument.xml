<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RequisitionStatusMaintenanceDocument" parent="RequisitionStatusMaintenanceDocument-parentBean" />

  <bean id="RequisitionStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.purap.bo.RequisitionStatus" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RequisitionStatusMaintenanceDocument-EditRequisitionStatus" />
      </list>
    </property>
    <property name="allowsNewOrCopy" value="false" />
    <property name="lockingKeys" >
      <list>
        <value>statusCode</value>
      </list>
    </property>
    <property name="label" value="Requisition Status" />
    <property name="shortLabel" value="Requisition Status" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PA"
            p:parameterName="REQUISITION_STATUS"
            p:parameterDetailType="RequisitionStatus" />
    </property>
    <property name="documentTypeName" value="RequisitionStatusMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMRS" />
    <property name="workflowProperties" >
      <ref bean="RequisitionStatusMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PUR_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="RequisitionStatusMaintenanceDocument-EditRequisitionStatus" parent="RequisitionStatusMaintenanceDocument-EditRequisitionStatus-parentBean" />

  <bean id="RequisitionStatusMaintenanceDocument-EditRequisitionStatus-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Requisition Status" />
    <property name="title" value="Edit Requisition Status" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="statusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="statusDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="RequisitionStatusMaintenanceDocument-workflowProperties" parent="RequisitionStatusMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="RequisitionStatusMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
