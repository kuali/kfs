<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.gl.bo.UniversityDate</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>SY_MAINTAINENANCE_USERS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>UniversityDateMaintenanceDocument</documentTypeName>
        <documentTypeCode>UDAT</documentTypeCode>

        <label>University Date</label>

        <summary>University Date maintenance document</summary>
        <description>Document used to create or update University Date objects</description>
        <help parameterNamespace="KFS-GL" parameterDetailType="UniversityDate" parameterName="UNIVERSITY_DATE" />

        <lockingKeys>
            <field attributeName="universityDate" />
        </lockingKeys>
		<defaultExistenceChecks>
            <reference attributeName="accountingPeriod" attributeToHighlightOnFail="universityFiscalAccountingPeriod" />
        
        </defaultExistenceChecks>
        <maintainableSections>
            <maintainableSection title="Edit University Date">
                <maintainableItems>
                    <maintainableField name="universityDate" required="true" />
                    <maintainableField name="universityFiscalYear" required="true" />
                    <maintainableField name="universityFiscalAccountingPeriod" required="true" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
        <workflowProperties/>
    </maintenanceDocument>
</dictionaryEntry>
