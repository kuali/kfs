<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.ObjectCodeGlobal</businessObjectClass>
        <maintainableClass>org.kuali.module.chart.maintenance.ObjectCodeGlobalMaintainableImpl</maintainableClass>

        <businessRulesClass>org.kuali.module.chart.rules.ObjectCodeGlobalRule</businessRulesClass>
        <preRulesCheckClass>org.kuali.module.chart.rules.ObjectCodeGlobalPreRules</preRulesCheckClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>Kuali_ROLE_GLOBAL_OBJECT_CODE_USER</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>ObjectCodeGlobalMaintenanceDocument</documentTypeName>
        <documentTypeCode>GOBJ</documentTypeCode>

        <label>Object Code Global</label>

        <summary>Global Object Code Maintenance Document</summary>
        <description>Document used to create or update global account document.</description>
        <help parameterNamespace="KFS-CA" parameterDetailType="ObjectCodeGlobal" parameterName="OBJECT_CODE_GLOBAL" />

        <lockingKeys>
            <field attributeName="documentNumber" />
        </lockingKeys>
        <defaultExistenceChecks>
            <reference attributeName="finObjMandatoryTrnfrelim" attributeToHighlightOnFail="finObjMandatoryTrnfrOrElimCd" />
            <reference attributeName="financialBudgetAggregation" attributeToHighlightOnFail="financialBudgetAggregationCd" />
            <reference attributeName="financialFederalFunded" attributeToHighlightOnFail="financialFederalFundedCode" />
            <reference attributeName="financialObjectType" attributeToHighlightOnFail="financialObjectTypeCode" />
			<reference attributeName="financialObjectSubType" attributeToHighlightOnFail="financialObjectSubTypeCode" />   
			<reference attributeName="reportsToFinancialObject" attributeToHighlightOnFail="reportsToFinancialObjectCode" />         
        </defaultExistenceChecks>
 
        <maintainableSections>
            <maintainableSection title="Global Object Code Maintenance">
                <maintainableItems>
                <maintainableField name="financialObjectCode" required="true" />
                <maintainableField name="financialObjectCodeName" required="true" />
                <maintainableField name="financialObjectCodeShortName" required="true" />
                <maintainableField name="reportsToFinancialObjectCode" required="true" />
                <maintainableField name="financialObjectTypeCode" required="true" />
                <maintainableField name="financialObjectLevelCode" required="true" />
                <maintainableField name="financialObjectSubTypeCode" required="true" />
                <maintainableField name="historicalFinancialObjectCode" />
                <maintainableField name="financialObjectActiveIndicator">
                    <defaultValue>true</defaultValue>
                </maintainableField>
                <maintainableField name="financialBudgetAggregationCd" required="true" />
                <maintainableField name="finObjMandatoryTrnfrOrElimCd" required="true" />
                <maintainableField name="financialFederalFundedCode" required="true" />
                <maintainableField name="nextYearFinancialObjectCode" />
                <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
            <maintainableSection title="Edit Multiple Year and Chart">
                <maintainableItems>
                    <maintainableCollection name="objectCodeGlobalDetails" businessObjectClass="org.kuali.module.chart.bo.ObjectCodeGlobalDetail" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="objectCodeGlobalDetails" summaryTitle="Year and Chart">
                        <maintainableField name="universityFiscalYear" readOnlyAfterAdd="true" >
                        	<defaultValueFinderClass>org.kuali.kfs.lookup.valuefinder.FiscalYearFinder</defaultValueFinderClass>
						</maintainableField>                        	
                        <maintainableField name="chartOfAccountsCode" template="chartOfAccountsCode" readOnlyAfterAdd="true" />
                        <maintainableField name="versionNumber" />
                        <maintainableField name="newCollectionRecord" />
                        <summaryFields>
                            <summaryField name="universityFiscalYear" />
                            <summaryField name="chartOfAccountsCode" />
                        </summaryFields>
                        <duplicateIdentificationFields>
                            <duplicateIdentificationField name="chartOfAccountsCode"/>
                        </duplicateIdentificationFields>                        
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
        
        <workflowProperties>
        	<workflowPropertyGroup>
        		<workflowProperty path="newMaintainableObject.businessObject.objectCodeGlobalDetails" />
        	</workflowPropertyGroup>
        </workflowProperties>
    </maintenanceDocument>
</dictionaryEntry>