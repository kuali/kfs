<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd" >
<dictionaryEntry>
	<transactionalDocument>
        <documentClass>org.kuali.module.purap.document.AssignContractManagerDocument</documentClass>
        <businessRulesClass>org.kuali.module.purap.rules.AssignContractManagerDocumentRule</businessRulesClass>
        <documentAuthorizerClass>org.kuali.module.purap.document.authorization.AssignContractManagerDocumentAuthorizer</documentAuthorizerClass>

		<authorizations>
			<authorization action="initiate">
				<workgroups>
					<workgroup>KUALI_PURAP_PURCHASING</workgroup>
				</workgroups>
			</authorization>
		</authorizations>

		<documentTypeName>AssignContractManagerDocument</documentTypeName>
		<documentTypeCode>ACM</documentTypeCode>

		<label>Contract Manager Assignment</label>

<!-- 
nalavi: these attributes are added for the purpose of labels display in assingContractManager.tag
-->   		

		<attributes>
			
			<attributeReference name="requisitionNumber" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="purapDocumentIdentifier">
                <label>Requisition Number</label>
                <shortLabel>Requisition Number</shortLabel>

            </attributeReference>
            
            <attributeReference name="deliveryCampusCode" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="campusCode">
			    <label>Delivery Campus</label>
			    <shortLabel>Delivery Campus</shortLabel>

			</attributeReference>
            
            <attributeReference name="vendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Suggested Vendor</label>
                <shortLabel>Vendor Name</shortLabel>
            </attributeReference>
            
            <attribute name="generalDescription" >
			    <label>General Description</label>
			    <shortLabel>General Description</shortLabel>
			    <maxLength>20</maxLength>
			    <control>
					<text size="22" />
				</control>

			</attribute>
            
            <attribute name="requisitionTotalAmount" >
			    <label>Requisition Total Amount</label>
			    <shortLabel>Total</shortLabel>
			    <maxLength>20</maxLength>
			    <control>
					<text size="22" />
				</control>

			</attribute>
			
			<attribute name="requisitionCreateDate" >
			    <label>Requisition Create Date</label>
			    <shortLabel>Create Date</shortLabel>
			    <maxLength>20</maxLength>
			    <control>
					<text size="22" />
				</control>

			</attribute>
			
            <attribute name="firstItemDescription" >
			    <label>First Item Description</label>
			    <shortLabel>First Item Description</shortLabel>
			    <maxLength>20</maxLength>
			    <control>
					<text size="22" />
				</control>

			</attribute>

            <attribute name="firstItemCommodityCode" >
                <label>First Item Commodity Code</label>
                <shortLabel>First Item Commodity Code</shortLabel>
                <maxLength>20</maxLength>
                <control>
                    <text size="22" />
                </control>

            </attribute>
            
			<attribute name="firstObjectCode">
				<label>First Object Code</label>
				<shortLabel>First Object Code</shortLabel>
	
				<maxLength>20</maxLength>
				<validationPattern>
					<anyCharacter />
				</validationPattern>
	
				<control>
					<text size="22" />
				</control>
			</attribute>

		</attributes>
		<help parameterNamespace="KFS-PA" parameterDetailType="AssignContractManager" parameterName="ASSIGN_CONTRACT_MANAGER" />
		<allowsCopy>false</allowsCopy>
		<allowsErrorCorrection>false</allowsErrorCorrection>

	</transactionalDocument>
</dictionaryEntry>
