<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
	<businessObject businessObjectClass="org.kuali.core.bo.user.RiceUser">

		<inquiry>
			<title>Universal User Inquiry</title>

			<inquirySections>
				<inquirySection title="Header Text">
					<inquiryFields>
						<field attributeName="personUniversalIdentifier" />
						<field attributeName="universityId" />
						<field attributeName="personUserIdentifier" />
						<field attributeName="personName" />
					</inquiryFields>
				</inquirySection>
			</inquirySections>
		</inquiry>

		<lookup>
			<title>User Lookup</title>
			<instructions>Lookup a User</instructions>

			<defaultSort attributeName="personUniversalIdentifier" sortAscending="true" />

			<lookupFields>
				<lookupField attributeName="personUniversalIdentifier" required="false" />
				<lookupField attributeName="universityId" required="false" />
				<lookupField attributeName="personUserIdentifier" required="false" />
				<lookupField attributeName="personName" required="false" />
				<lookupField attributeName="emailAddress" required="false" />
			</lookupFields>

			<resultFields>
				<field attributeName="personUniversalIdentifier" />
				<field attributeName="universityId" />
				<field attributeName="personUserIdentifier" />
				<field attributeName="personName" />
				<field attributeName="emailAddress" />
			</resultFields>
		</lookup>

		<titleAttribute>personUniversalIdentifier</titleAttribute>

		<attributes>
			<attribute name="personUniversalIdentifier">
				<label>User ID</label>
				<shortLabel>User Id</shortLabel>

				<maxLength>10</maxLength>
				<validationPattern>
					<anyCharacter />
				</validationPattern>
				<required>true</required>

				<control>
					<text size="10" />
				</control>

				<summary>User ID</summary>
				<description>User ID</description>
			</attribute>

			<attribute name="universityId">
				<label>University ID</label>
				<shortLabel>University ID</shortLabel>

				<maxLength>11</maxLength>
				<validationPattern>
					<anyCharacter />
				</validationPattern>
				<required>false</required>

				<control>
					<text size="13" />
				</control>

				<summary>University ID</summary>
				<description>University ID</description>
			</attribute>
			
			<attribute name="personUserIdentifier">
				<label>Authentication User ID</label>
				<shortLabel>Authentication User ID</shortLabel>

				<maxLength>15</maxLength>
				<validationPattern>
					<anyCharacter />
				</validationPattern>
				<required>true</required>

				<control>
					<text size="15" />
				</control>

				<summary>Authentication User ID</summary>
				<description>Authentication User ID</description>
			</attribute>

			<attribute name="personName">
				<label>Name</label>
				<shortLabel>Name</shortLabel>

				<maxLength>255</maxLength>

				<control>
					<text size="25" />
				</control>

				<summary>Name</summary>
				<description>Name</description>

			</attribute>
			
			<attribute name="emailAddress">
				<label>Email</label>
				<shortLabel>Email</shortLabel>

				<maxLength>255</maxLength>

				<control>
					<text size="25" />
				</control>

				<summary>Email</summary>
				<description>Email</description>
			</attribute>
	
		</attributes>
	</businessObject>
</dictionaryEntry>
