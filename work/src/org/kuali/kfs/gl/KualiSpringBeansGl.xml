<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="glScrubberStep" class="org.kuali.module.gl.batch.ScrubberStep">
		<property name="scrubberService"><ref bean="glScrubberService" /></property>
	</bean>

	<bean id="glPosterEntriesStep" class="org.kuali.module.gl.batch.PosterEntriesStep">
		<property name="posterService"><ref bean="glPosterService" /></property>
	</bean>

	<bean id="glPosterIcrEntriesStep" class="org.kuali.module.gl.batch.PosterIcrEntriesStep">
		<property name="posterService"><ref bean="glPosterService" /></property>
	</bean>

	<bean id="glPosterReversalStep" class="org.kuali.module.gl.batch.PosterReversalStep">
		<property name="posterService"><ref bean="glPosterService" /></property>
	</bean>

	<bean id="glPosterIcrGenerationStep" class="org.kuali.module.gl.batch.PosterIcrGenerationStep">
		<property name="posterService"><ref bean="glPosterService" /></property>
	</bean>

	<bean id="glNightlyOutStep" class="org.kuali.module.gl.batch.NightlyOutStep">
		<property name="nightlyOutService"><ref bean="glNightlyOutService" /></property>
	</bean>

	<bean id="glTextFileLoaderStep" class="org.kuali.module.gl.batch.TextFileLoaderStep">
		<property name="originEntryService"><ref bean="glOriginEntryService"/></property>
	</bean>

	<bean id="glScrubberService" class="org.kuali.module.gl.service.impl.ScrubberServiceImpl">
		<property name="originEntryService"><ref bean="glOriginEntryService" /></property>
		<property name="dateTimeService"><ref bean="dateTimeService" /></property>
		<property name="offsetDefinitionService"><ref bean="offsetDefinitionService" /></property>
		<property name="objectCodeService"><ref bean="objectCodeService" /></property>
		<property name="accountService"><ref bean="accountService" /></property>
		<property name="kualiConfigurationService"><ref bean="kualiConfigurationService" /></property>
		<property name="universityDateDao"><ref bean="universityDateDao" /></property>
		<property name="originEntryGroupService"><ref bean="glOriginEntryGroupService" /></property>
		<property name="persistenceService"><ref bean="persistenceService"/></property>
		<property name="scrubberReport"><ref bean="glScrubberReport" /></property>
	</bean>

	<bean id="glPosterService" class="org.kuali.module.gl.service.impl.PosterServiceImpl">
		<property name="transactionPosters">
			<list>
				<ref bean="glPostGlEntry" />
				<ref bean="glPostGlAccountBalance" />
				<ref bean="glPostSufficientFundBalances" />
				<ref bean="glPostReversal" />
				<ref bean="glPostEncumbrance" />
				<ref bean="glPostExpenditureTransaction" />
				<ref bean="glPostBalance" />
			</list>
		</property>
		<property name="posterReport"><ref bean="glPosterReport" /></property>
		<property name="icrGenerationReport"><ref bean="glIcrGenerationReport" /></property>
		<property name="verifyTransaction"><ref bean="glVerifyTransaction" /></property>
		<property name="originEntryService"><ref bean="glOriginEntryService" /></property>
		<property name="originEntryGroupService"><ref bean="glOriginEntryGroupService" /></property>
		<property name="dateTimeService"><ref bean="dateTimeService" /></property>
		<property name="reversalDao"><ref bean="glReversalDao" /></property>
		<property name="universityDateDao"><ref bean="universityDateDao" /></property>
		<property name="accountingPeriodService"><ref bean="accountingPeriodService" /></property>
		<property name="expenditureTransactionDao"><ref bean="glExpenditureTransactionDao" /></property>
		<property name="icrAutomatedEntryDao"><ref bean="icrAutomatedEntryDao" /></property>
		<!--  This isn't implemented right now -->
		<!--  <property name="indirectCostRecoveryThresholdDao"><ref bean="indirectCostRecoveryThresholdDao" /></property> -->
	</bean>

	<bean id="generalLedgerPendingEntryService" class="org.kuali.module.gl.service.impl.GeneralLedgerPendingEntryServiceImpl">
        <property name="generalLedgerPendingEntryDao"><ref bean="generalLedgerPendingEntryDao"/></property>
        <property name="documentService"><ref bean="documentService" /></property>
        <property name="kualiRuleService"><ref bean="kualiRuleService" /></property>
    </bean>

	<bean id="glOriginEntryService" class="org.kuali.module.gl.service.impl.OriginEntryServiceImpl">
		<property name="originEntryDao"><ref bean="glOriginEntryDao" /></property>
		<property name="originEntryGroupService"><ref bean="glOriginEntryGroupService" /></property>
	</bean>

	<bean id="glOriginEntryGroupService" class="org.kuali.module.gl.service.impl.OriginEntryGroupServiceImpl">
		<property name="originEntryGroupDao"><ref bean="glOriginEntryGroupDao"/></property>
	</bean>
		
	<bean id="glNightlyOutService" class="org.kuali.module.gl.service.impl.NightlyOutServiceImpl">
        <property name="generalLedgerPendingEntryService"><ref bean="generalLedgerPendingEntryService" /></property>
        <property name="originEntryService"><ref bean="glOriginEntryService" /></property>
        <property name="dateTimeService"><ref bean="dateTimeService" /></property>
        <property name="originEntryGroupService"><ref bean="glOriginEntryGroupService" /></property>
    </bean>
    

	<bean id="glPostGlEntry" class="org.kuali.module.gl.batch.poster.impl.PostGlEntry">
		<property name="entryDao"><ref bean="glEntryDao" /></property>
	</bean>

	<bean id="glPostBalance" class="org.kuali.module.gl.batch.poster.impl.PostBalance">
		<property name="balanceDao"><ref bean="glBalanceDao" /></property>
	</bean>

	<bean id="glPostGlAccountBalance" class="org.kuali.module.gl.batch.poster.impl.PostGlAccountBalance">
		<property name="accountBalanceDao"><ref bean="glAccountBalanceDao"/></property>
	</bean>

	<bean id="glPostSufficientFundBalances" class="org.kuali.module.gl.batch.poster.impl.PostSufficientFundBalances">
		<property name="sufficientFundBalancesDao"><ref bean="glSufficientFundBalancesDao"/></property>
	</bean>

	<bean id="glPostReversal" class="org.kuali.module.gl.batch.poster.impl.PostReversal">
		<property name="reversalDao"><ref bean="glReversalDao" /></property>
	</bean>

	<bean id="glPostEncumbrance" class="org.kuali.module.gl.batch.poster.impl.PostEncumbrance">
		<property name="encumbranceDao"><ref bean="glEncumbranceDao" /></property>
	</bean>

	<bean id="glPostExpenditureTransaction" class="org.kuali.module.gl.batch.poster.impl.PostExpenditureTransaction">
		<property name="indirectCostRecoveryExclusionAccountDao"><ref bean="indirectCostRecoveryExclusionAccountDao"/></property>
		<property name="indirectCostRecoveryExclusionTypeDao"><ref bean="indirectCostRecoveryExclusionTypeDao"/></property>
		<property name="a21SubAccountDao"><ref bean="a21SubAccountDao"/></property>
		<property name="expenditureTransactionDao"><ref bean="glExpenditureTransactionDao"/></property>
	</bean>

	<bean id="glScrubberReport" class="org.kuali.module.gl.batch.scrubber.impl.ScrubberReportImpl">
		<property name="destinationDirectory"><value>/opt/scratch</value></property>
	</bean>

	<bean id="glPosterReport" class="org.kuali.module.gl.batch.poster.impl.PosterReportImpl">
		<property name="destinationDirectory"><value>/opt/scratch</value></property>
	</bean>

	<bean id="glIcrGenerationReport" class="org.kuali.module.gl.batch.poster.impl.IcrGenerationReportImpl">
		<property name="destinationDirectory"><value>/opt/scratch</value></property>
	</bean>

	<bean id="glVerifyTransaction" class="org.kuali.module.gl.batch.poster.impl.VerifyTransactionImpl"/>

	<bean id="glAccountBalanceDao" class="org.kuali.module.gl.dao.ojb.AccountBalanceDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glSufficientFundBalancesDao" class="org.kuali.module.gl.dao.ojb.SufficientFundBalancesDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glEntryDao" class="org.kuali.module.gl.dao.ojb.EntryDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glEncumbranceDao" class="org.kuali.module.gl.dao.ojb.EncumbranceDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="generalLedgerPendingEntryDao" class="org.kuali.module.gl.dao.ojb.GeneralLedgerPendingEntryDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glOriginEntryDao" class="org.kuali.module.gl.dao.ojb.OriginEntryDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glOriginEntryGroupDao" class="org.kuali.module.gl.dao.ojb.OriginEntryGroupDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glBalanceDao" class="org.kuali.module.gl.dao.ojb.BalanceDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="universityDateDao" class="org.kuali.module.gl.dao.ojb.UniversityDateDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glExpenditureTransactionDao" class="org.kuali.module.gl.dao.ojb.ExpenditureTransactionDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glReversalDao" class="org.kuali.module.gl.dao.ojb.ReversalDaoOjb">
		<property name="jcdAlias"><value>dataSource</value></property>
	</bean>

	<bean id="glUnitTestSqlDao" class="org.kuali.module.gl.dao.jdbc.UnitTestSqlDaoJdbc">
		<property name="dataSource"><ref bean="dataSource"/></property>
	</bean>
</beans>
