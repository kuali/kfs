<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>	

	<bean id="kualiCodeService" class="org.kuali.kfs.service.impl.KualiCodeServiceImpl">
		<property name="kualiCodeDao">
			<ref bean="kualiCodeDao" />
		</property>
	</bean>
	
	<bean id="kualiCodeDao" class="org.kuali.kfs.dao.ojb.KualiCodeDaoOjb">
		<property name="jcdAlias">
			<value>dataSource</value>
		</property>
	</bean>

	<bean id="universityDateService" class="org.kuali.module.financial.service.impl.UniversityDateServiceImpl">
		<property name="universityDateDao"><ref bean="universityDateDao" /></property>
	</bean>

	<bean id="accountingLineService" class="org.kuali.kfs.service.impl.AccountingLineServiceImpl">
		<property name="accountingLineDao">
			<bean class="org.kuali.kfs.dao.ojb.AccountingLineDaoOjb">
				<property name="jcdAlias">
					<value>dataSource</value>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="homeOriginationDao" class="org.kuali.kfs.dao.ojb.HomeOriginationDaoOjb">
		<property name="jcdAlias">
			<value>dataSource</value>
		</property>
	</bean>

	<bean id="originationCodeDao" class="org.kuali.kfs.dao.ojb.OriginationCodeDaoOjb">
		<property name="jcdAlias">
			<value>dataSource</value>
		</property>
	</bean>

	<bean id="optionsDao" class="org.kuali.kfs.dao.ojb.OptionsDaoOjb">
		<property name="jcdAlias">
			<value>dataSource</value>
		</property>
	</bean>
	
	<bean id="generalLedgerPendingEntryDao" class="org.kuali.kfs.dao.ojb.GeneralLedgerPendingEntryDaoOjb">
		<property name="jcdAlias">
			<value>dataSource</value>
		</property>
		<property name="kualiConfigurationService">
			<ref bean="kualiConfigurationService" />
		</property>
	</bean>
	<bean id="homeOriginationService" class="org.kuali.kfs.service.impl.HomeOriginationServiceImpl">
		<property name="homeOriginationDao">
			<ref bean="homeOriginationDao" />
		</property>
	</bean>

	<bean id="originationCodeService" class="org.kuali.kfs.service.impl.OriginationCodeServiceImpl">
		<property name="originationCodeDao">
			<ref bean="originationCodeDao" />
		</property>
	</bean>
	
	<bean id="optionsService" class="org.kuali.kfs.service.impl.OptionsServiceImpl">
		<property name="optionsDao">
			<ref bean="optionsDao" />
		</property>
	</bean>
	
	<bean id="generalLedgerPendingEntryService" class="org.kuali.kfs.service.impl.GeneralLedgerPendingEntryServiceImpl">
		<property name="generalLedgerPendingEntryDao">
			<ref bean="generalLedgerPendingEntryDao" />
		</property>
		<property name="kualiRuleService">
			<ref bean="kualiRuleService" />
		</property>
		<property name="chartService">
			<ref bean="chartService" />
		</property>
		<property name="optionsService">
			<ref bean="optionsService" />
		</property>
		<property name="kualiConfigurationService">
			<ref bean="kualiConfigurationService" />
		</property>
		<property name="balanceTypeService">
			<ref bean="balanceTypService" />
		</property>
	</bean>


	<bean id="postalZipCodeService" class="org.kuali.kfs.service.impl.PostalZipCodeServiceImpl">
		<property name="businessObjectService">
			<ref bean="businessObjectService" />
		</property>
	</bean>

	<!-- KFS is not a module, so it needs to just use this initailizing bean to get it's OJB metadata loaded -->
	<bean class="org.kuali.rice.OjbMetadataLoader">
		<property name="repositoryDescriptors">
			<list>
				<value>classpath:org/kuali/kfs/OJB-repository-kfs.xml</value>
			</list>
		</property>
	</bean>

	<!-- Quartz stuff -->
	<bean id="schedulerService" class="org.kuali.core.service.impl.SchedulerServiceImpl">
		<property name="scheduleTriggerDescriptor" ref="scheduleJobTrigger" />
		<property name="configurationService" ref="kualiConfigurationService" />
		<property name="dateTimeService" ref="dateTimeService" />
	</bean>

	<bean id="jobListener" class="org.kuali.core.batch.JobListener">
		<property name="schedulerService" ref="schedulerService" />
		<property name="configurationService" ref="kualiConfigurationService" />
		<property name="mailService" ref="mailService" />
		<property name="dateTimeService" ref="dateTimeService" />
	</bean>

	<bean id="scheduledJobDescriptor" abstract="true" class="org.kuali.core.batch.JobDescriptor">
		<property name="group" value="scheduled" />
	</bean>

	<bean id="unscheduledJobDescriptor" abstract="true" class="org.kuali.core.batch.JobDescriptor" />

	<bean id="step" abstract="true">
		<property name="configurationService" ref="kualiConfigurationService" />
		<property name="dateTimeService" ref="dateTimeService" />
	</bean>

	<bean id="scheduleJob" parent="scheduledJobDescriptor">
		<property name="steps">
			<list>
				<ref bean="scheduleStep" />
			</list>
		</property>
	</bean>

	<bean id="scheduleStep" parent="step" class="org.kuali.core.batch.ScheduleStep">
		<property name="schedulerService" ref="schedulerService" />
	</bean>

	<bean id="trigger" abstract="true">
		<property name="group" value="scheduled" />
		<property name="dateTimeService" ref="dateTimeService" />
	</bean>

	<bean id="simpleTrigger" abstract="true" parent="trigger" class="org.kuali.core.batch.SimpleTriggerDescriptor" />

	<bean id="cronTrigger" abstract="true" parent="trigger" class="org.kuali.core.batch.CronTriggerDescriptor" />

	<bean id="scheduleJobTrigger" parent="cronTrigger">
		<property name="jobName" value="scheduleJob" />
		<property name="cronExpression" value="00 00 23 ? * *" />
	</bean>

	<bean id="purgeOldLookupResultsStep" class="org.kuali.core.batch.PurgeOldLookupResultsStep" parent="step">
		<property name="lookupResultsService">
			<ref bean="lookupResultsService" />
		</property>
	</bean>

	<bean id="corePurgeJob" parent="scheduledJobDescriptor">
		<property name="steps">
			<list>
				<ref bean="corePurgeDocumentContentsStep" />
				<ref bean="purgePendingAttachmentsStep" />
				<ref bean="purgeOldLookupResultsStep" />
			</list>
		</property>
	</bean>

	<bean id="corePurgeDocumentContentsStep" class="org.kuali.core.batch.PurgeDocumentContentsStep" parent="step">
		<property name="documentService">
			<ref bean="documentService" />
		</property>
	</bean>

	<bean id="purgePendingAttachmentsStep" class="org.kuali.core.batch.PurgePendingAttachmentsStep" parent="step">
		<property name="attachmentService">
			<ref bean="attachmentService" />
		</property>
	</bean>
</beans>
