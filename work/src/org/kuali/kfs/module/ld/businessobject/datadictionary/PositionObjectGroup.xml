<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PositionObjectGroup" parent="PositionObjectGroup-parentBean" />

  <bean id="PositionObjectGroup-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.labor.bo.PositionObjectGroup" />
    <property name="inquiryDefinition" >
      <ref bean="PositionObjectGroup-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="PositionObjectGroup-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Labor Position Object Code Group" />
    <property name="attributes" >
      <list>
        <ref bean="PositionObjectGroup-positionObjectGroupCode" />
        <ref bean="PositionObjectGroup-positionObjectGroupName" />
        <ref bean="PositionObjectGroup-rowActiveIndicator" />
        <ref bean="PositionObjectGroup-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="PositionObjectGroup-positionObjectGroupCode" parent="PositionObjectGroup-positionObjectGroupCode-parentBean" />

  <bean id="PositionObjectGroup-positionObjectGroupCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="positionObjectGroupCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Labor Position Object Group Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="2" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="4" />
    </property>
  </bean>
  <bean id="PositionObjectGroup-positionObjectGroupName" parent="PositionObjectGroup-positionObjectGroupName-parentBean" />

  <bean id="PositionObjectGroup-positionObjectGroupName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="positionObjectGroupName" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Labor Position Object Group Name" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="40" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="42" />
    </property>
  </bean>
  <bean id="PositionObjectGroup-rowActiveIndicator" parent="PositionObjectGroup-rowActiveIndicator-parentBean" />

  <bean id="PositionObjectGroup-rowActiveIndicator-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="rowActiveIndicator" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Active Indicator" />
    <property name="shortLabel" value="Indicator" />
    <property name="maxLength" value="1" />
    <property name="control" >
      <bean parent="CheckboxControlDefinition" />
    </property>
  </bean>
  <bean id="PositionObjectGroup-versionNumber" parent="PositionObjectGroup-versionNumber-parentBean" />

  <bean id="PositionObjectGroup-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="PositionObjectGroup-inquiryDefinition" parent="PositionObjectGroup-inquiryDefinition-parentBean" />

  <bean id="PositionObjectGroup-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Position Object Group Code" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Header Text" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="positionObjectGroupCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="positionObjectGroupName" />
              <bean parent="FieldDefinition"
                    p:attributeName="rowActiveIndicator" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="PositionObjectGroup-lookupDefinition" parent="PositionObjectGroup-lookupDefinition-parentBean" />

  <bean id="PositionObjectGroup-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Position Object Group Code" />
    <property name="instructions" value="Look up a Labor Object Group" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="positionObjectGroupCode" />
        <bean parent="FieldDefinition"
              p:attributeName="rowActiveIndicator" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="positionObjectGroupCode" />
        <bean parent="FieldDefinition"
              p:attributeName="positionObjectGroupName" />
        <bean parent="FieldDefinition"
              p:attributeName="rowActiveIndicator" />
      </list>
    </property>
  </bean>
</beans>
