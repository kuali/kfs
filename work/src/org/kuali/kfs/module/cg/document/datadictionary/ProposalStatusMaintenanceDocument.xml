<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProposalStatusMaintenanceDocument" parent="ProposalStatusMaintenanceDocument-parentBean" />

  <bean id="ProposalStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cg.bo.ProposalStatus" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ProposalStatusMaintenanceDocument-EditProposalStatus" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>proposalStatusCode</value>
      </list>
    </property>
    <property name="label" value="Proposal Status" />
    <property name="shortLabel" value="Proposal Status" />
    <property name="summary" value="Proposal Status Maintenance Document" />
    <property name="description" value="Document used to create or update Proposal Status objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CG"
            p:parameterName="PROPOSAL_STATUS"
            p:parameterDetailType="ProposalStatus" />
    </property>
    <property name="documentTypeName" value="ProposalStatusMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PRST" />
    <property name="workflowProperties" >
      <ref bean="ProposalStatusMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ProposalStatusMaintenanceDocument-EditProposalStatus" parent="ProposalStatusMaintenanceDocument-EditProposalStatus-parentBean" />

  <bean id="ProposalStatusMaintenanceDocument-EditProposalStatus-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Proposal Status" />
    <property name="title" value="Edit Proposal Status" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalStatusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalStatusDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="rowActiveIndicator"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ProposalStatusMaintenanceDocument-workflowProperties" parent="ProposalStatusMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ProposalStatusMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
