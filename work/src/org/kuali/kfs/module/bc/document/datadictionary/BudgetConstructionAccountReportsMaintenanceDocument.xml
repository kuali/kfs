<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AccountReportsMaintenanceDocument" parent="AccountReportsMaintenanceDocument-parentBean" />

  <bean id="AccountReportsMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.budget.bo.BudgetConstructionAccountReports" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AccountReportsMaintenanceDocument-EditBCAccountReports" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="chartOfAccounts"
              p:activeIndicatorAttributeName="finChartOfAccountActiveIndicator"
              p:attributeToHighlightOnFail="chartOfAccountsCode"
              p:displayFieldName="Chart Of Accounts Code" />
        <bean parent="ReferenceDefinition"
              p:attributeName="account"
              p:activeIndicatorAttributeName="accountClosedIndicator"
              p:activeIndicatorReversed="true"
              p:attributeToHighlightOnFail="accountNumber"
              p:displayFieldName="Account Number" />
        <bean parent="ReferenceDefinition"
              p:attributeName="reportsToChartOfAccounts"
              p:activeIndicatorAttributeName="finChartOfAccountActiveIndicator"
              p:attributeToHighlightOnFail="reportsToChartOfAccountsCode"
              p:displayFieldName="Reports To Chart Of Accounts Code" />
        <bean parent="ReferenceDefinition"
              p:attributeName="reportsToOrganization"
              p:activeIndicatorAttributeName="organizationActiveIndicator"
              p:attributeToHighlightOnFail="reportsToOrganizationCode"
              p:displayFieldName="Reports To Organization Code" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>chartOfAccountsCode</value>
        <value>accountNumber</value>
      </list>
    </property>
    <property name="label" value="Account Reports" />
    <property name="shortLabel" value="BC - Account Rpts Maint Doc" />
    <property name="summary" value="Budget Construction Account Reports Maintenance Document" />
    <property name="description" value="Document used to create or update Budget Construction Account Reports Maintenance Document objects" />
    <property name="documentTypeName" value="AccountReportsMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.budget.rules.BudgetConstructionAccountReportsRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="BCAR" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AccountReportsMaintenanceDocument-EditBCAccountReports" parent="AccountReportsMaintenanceDocument-EditBCAccountReports-parentBean" />

  <bean id="AccountReportsMaintenanceDocument-EditBCAccountReports-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit BC Account Reports" />
    <property name="title" value="Edit BC Account Reports" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="reportsToChartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="reportsToOrganizationCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
