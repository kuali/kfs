<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AddressTypeMaintenanceDocument" parent="AddressTypeMaintenanceDocument-parentBean" />

  <bean id="AddressTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.vendor.bo.AddressType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AddressTypeMaintenanceDocument-EditAddressType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>vendorAddressTypeCode</value>
      </list>
    </property>
    <property name="label" value="Address Type" />
    <property name="shortLabel" value="Address Type" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-VN"
            p:parameterName="ADDRESS_TYPE"
            p:parameterDetailType="AddressType" />
    </property>
    <property name="documentTypeName" value="AddressTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMAT" />
    <property name="workflowProperties" >
      <ref bean="AddressTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AddressTypeMaintenanceDocument-EditAddressType" parent="AddressTypeMaintenanceDocument-EditAddressType-parentBean" />

  <bean id="AddressTypeMaintenanceDocument-EditAddressType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Address Type" />
    <property name="title" value="Edit Address Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorAddressTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorAddressTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorDefaultIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="AddressTypeMaintenanceDocument-workflowProperties" parent="AddressTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="AddressTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
