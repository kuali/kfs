<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BenefitExpenseTransferDocument" parent="BenefitExpenseTransferDocument-parentBean" />

  <bean id="BenefitExpenseTransferDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Benefit Expense Transfer" />
    <property name="shortLabel" value="Benefit Expense Transfer" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="Benefit Expense Transfer Document" />
    <property name="documentTypeName" value="BenefitExpenseTransferDocument" />
    <property name="documentClass" value="org.kuali.module.labor.document.BenefitExpenseTransferDocument" />
    <property name="businessRulesClass" value="org.kuali.module.labor.rules.BenefitExpenseTransferDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.labor.document.authorization.LaborExpenseDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="BT" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="BenefitExpenseTransferDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="BenefitExpenseTransferDocument-workflowProperties" parent="BenefitExpenseTransferDocument-workflowProperties-parentBean" />

  <bean id="BenefitExpenseTransferDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
