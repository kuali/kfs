<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="cgModule" parent="cgModule-parentBean" />

    <bean id="cgModule-parentBean" class="org.kuali.core.KualiModule" abstract="true">
		<property name="moduleId" value="cg" />
		<property name="moduleName" value="Post-Award" />
		<property name="moduleCode" value="CG" />
		<property name="moduleUserService" ref="cgUserService" />
		<property name="initializeDataDictionary" value="true" />
		<property name="moduleAuthorizer">
			<bean class="org.kuali.kfs.authorization.KfsModuleAuthorizerBase">
				<property name="packagePrefixes">
					<list>
						<value>org.kuali.module.cg.</value>
					</list>
				</property>
			</bean>
		</property>
		<property name="moduleUserRule">
			<null />
		</property>
		<property name="moduleUserPreRules">
			<null />
		</property>
		<property name="dataDictionaryPackages">
			<list>
				<value>org/kuali/module/cg/datadictionary</value>
			</list>
		</property>
		<property name="databaseRepositoryFilePaths">
			<list>
				<value>org/kuali/module/cg/OJB-repository-cg.xml</value>
			</list>
		</property>
		<property name="scriptConfigurationFilePaths">
			<list>
				<value>org/kuali/module/cg/dwr-cg.xml</value>
			</list>
		</property>
		<property name="jobNames">
			<list>
				<value>closeJob</value>
				<value>cfdaJob</value>
			</list>
		</property>
		<property name="triggerNames">
			<list>
				<value>cfdaJobTrigger</value>
			</list>
		</property>
	</bean>
	
	<!-- DAOs -->
	<bean id="awardDao" parent="platformAwareDao" class="org.kuali.module.cg.dao.ojb.AwardDaoOjb" />

	<bean id="proposalDao" parent="platformAwareDao" class="org.kuali.module.cg.dao.ojb.ProposalDaoOjb" />
	
	<bean id="closeDao" parent="platformAwareDao" class="org.kuali.module.cg.dao.ojb.CloseDaoOjb" />
	
	<!-- Services -->
	<bean id="closeService" class="org.kuali.module.cg.service.impl.CloseServiceImpl">
		<property name="awardDao">
			<ref bean="awardDao" />
		</property>
		<property name="proposalDao">
			<ref bean="proposalDao" />
		</property>
		<property name="closeDao">
			<ref bean="closeDao" />
		</property>
		<property name="dateTimeService">
			<ref bean="dateTimeService" />
		</property>
	</bean>

	<bean id="cgUserService" class="org.kuali.module.cg.service.impl.CgUserServiceImpl" parent="kualiModuleUserServiceBase">
	</bean>
	
	<bean id="proposalLookupableHelperService" class="org.kuali.module.cg.lookup.ProposalLookupableHelperServiceImpl" singleton="false" parent="lookupableHelperService" />

	<bean id="proposalLookupable" class="org.kuali.core.lookup.KualiLookupableImpl" singleton="false">
		<property name="lookupableHelperService">
			<ref bean="proposalLookupableHelperService" />
		</property>
	</bean>

    <bean id="awardLookupableHelperService" class="org.kuali.module.cg.lookup.AwardLookupableHelperServiceImpl" singleton="false" parent="lookupableHelperService" />

    <bean id="awardLookupable" class="org.kuali.core.lookup.KualiLookupableImpl" singleton="false">
        <property name="lookupableHelperService">
            <ref bean="awardLookupableHelperService" />
        </property>
    </bean>

    <bean id="projectDirectorService" class="org.kuali.module.cg.service.impl.ProjectDirectorServiceImpl">
        <property name="universalUserService">
            <ref bean="universalUserService" />
        </property>
        <property name="businessObjectService">
            <ref bean="businessObjectService" />
        </property>
    </bean>

    <bean id="subcontractorService" class="org.kuali.module.cg.service.impl.SubcontractorServiceImpl">
        <property name="businessObjectService">
            <ref bean="businessObjectService" />
        </property>
    </bean>

    <bean id="agencyService" class="org.kuali.module.cg.service.impl.AgencyServiceImpl">
        <property name="businessObjectService">
            <ref bean="businessObjectService" />
        </property>
    </bean>

    <bean id="cfdaService" class="org.kuali.module.cg.service.impl.CfdaServiceImpl">
        <property name="businessObjectService">
            <ref bean="businessObjectService" />
        </property>
    </bean>

	<!-- Workflow Lookupables -->
    <bean id="workflow-org.kuali.module.cg.bo.Proposal-Lookupable" parent="workflowLookupable" singleton="false">
        <property name="businessObjectClassName">
            <value>org.kuali.module.cg.bo.Proposal</value>
        </property>
    </bean>
	
    <bean id="workflow-org.kuali.module.cg.bo.Agency-Lookupable" parent="workflowLookupable" singleton="false">
        <property name="businessObjectClassName">
            <value>org.kuali.module.cg.bo.Agency</value>
        </property>
    </bean>
	
    <bean id="cfdaBatchStep" class="org.kuali.module.cg.batch.CfdaBatchStep" parent="step">
        <property name="cfdaService">
            <ref bean="cfdaService" />
        </property>
        <property name="kualiGroupService">
            <ref bean="kualiGroupService" />
        </property>
        <property name="universalUserService">
            <ref bean="universalUserService" />
        </property>
        <property name="mailService">
            <ref bean="mailService" />
        </property>
    </bean>

    <bean id="cfdaJob" parent="scheduledJobDescriptor">
		<property name="steps">
			<list>
				<ref bean="cfdaBatchStep" />
			</list>
		</property>
	</bean>
	
	<bean id="cfdaJobTrigger" parent="cronTrigger">
		<property name="jobName" value="cfdaJob" />
		<property name="cronExpression" value="00 00 00 1 1,4,7,10  ?" />
	</bean>

    <bean id="closeBatchStep" class="org.kuali.module.cg.batch.CloseBatchStep" parent="step">
        <property name="closeService">
            <ref bean="closeService" />
        </property>
        <property name="kualiGroupService">
            <ref bean="kualiGroupService" />
        </property>
        <property name="universalUserService">
            <ref bean="universalUserService" />
        </property>
        <property name="mailService">
            <ref bean="mailService" />
        </property>
    </bean>

    <bean id="closeJob" parent="scheduledJobDescriptor">
		<property name="steps">
			<list>
				<ref bean="closeBatchStep" />
			</list>
		</property>
	</bean>

</beans>
