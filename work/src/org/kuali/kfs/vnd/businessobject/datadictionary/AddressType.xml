<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.AddressType">

        <inquiry>
            <title>Address Type Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="vendorAddressTypeCode" />
                <field attributeName="vendorAddressTypeDescription" />
                <field attributeName="vendorDefaultIndicator" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Address Type Lookup</title>

            <instructions>Lookup an Address Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="vendorAddressTypeDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="vendorAddressTypeCode" required="false" />
                <lookupField attributeName="vendorAddressTypeDescription" required="false" />
                <lookupField attributeName="vendorDefaultIndicator" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="vendorAddressTypeCode" />
                <field attributeName="vendorAddressTypeDescription" />
                <field attributeName="vendorDefaultIndicator" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>vendorAddressTypeCode</titleAttribute>

        <attributes>

            <attribute name="vendorAddressTypeCode" forceUppercase="true">
                <label>Address Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>
                <required>true</required>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="vendorAddressTypeDescription" forceUppercase="true">
                <label>Address Type Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>
                <required>true</required>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attribute name="vendorDefaultIndicator" forceUppercase="false">
                <label>Default Indicator</label>
                <shortLabel>Default</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Address Type</objectLabel>
    </businessObject>
</dictionaryEntry>
