<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ReportingCodesMaintenanceDocument" parent="ReportingCodesMaintenanceDocument-parentBean" />

  <bean id="ReportingCodesMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.ReportingCodes" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ReportingCodesMaintenanceDocument-EditFinancialReportingCodes" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="chart"
              p:attributeToHighlightOnFail="chartOfAccountsCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="org"
              p:attributeToHighlightOnFail="organizationCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="universalUser"
              p:attributeToHighlightOnFail="universalUser.personUserIdentifier" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>chartOfAccountsCode</value>
        <value>organizationCode</value>
        <value>financialReportingCode</value>
      </list>
    </property>
    <property name="label" value="Financial Reporting Code" />
    <property name="shortLabel" value="Financial Reporting Code" />
    <property name="summary" value="Financial Reporting Code Maintenance Document" />
    <property name="description" value="Maintenance document which allows you to create, remove or modify Financial Reporting Codes." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="FINANCIAL_REPORTING_CODE"
            p:parameterDetailType="ReportingCodes" />
    </property>
    <property name="documentTypeName" value="ReportingCodesMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.chart.rules.ReportingCodesRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="RPTC" />
    <property name="workflowProperties" >
      <ref bean="ReportingCodesMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ReportingCodesMaintenanceDocument-EditFinancialReportingCodes" parent="ReportingCodesMaintenanceDocument-EditFinancialReportingCodes-parentBean" />

  <bean id="ReportingCodesMaintenanceDocument-EditFinancialReportingCodes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Financial Reporting Codes" />
    <property name="title" value="Edit Financial Reporting Codes" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialReportingCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialReportingCodeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialReportingCodeMgrId"
              p:readOnly="true"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universalUser.personUserIdentifier"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universalUser.personName"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialReportsToReportingCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ReportingCodesMaintenanceDocument-workflowProperties" parent="ReportingCodesMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ReportingCodesMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
