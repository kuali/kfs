<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BillingAddressMaintenanceDocument" parent="BillingAddressMaintenanceDocument-parentBean" />

  <bean id="BillingAddressMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.purap.bo.BillingAddress" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="BillingAddressMaintenanceDocument-EditBillingAddress" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>billingCampusCode</value>
      </list>
    </property>
    <property name="label" value="Billing Address" />
    <property name="shortLabel" value="Billing Address" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PA"
            p:parameterName="BILLING_ADDRESS"
            p:parameterDetailType="BillingAddress" />
    </property>
    <property name="documentTypeName" value="BillingAddressMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMBA" />
    <property name="workflowProperties" >
      <ref bean="BillingAddressMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PUR_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="BillingAddressMaintenanceDocument-EditBillingAddress" parent="BillingAddressMaintenanceDocument-EditBillingAddress-parentBean" />

  <bean id="BillingAddressMaintenanceDocument-EditBillingAddress-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Billing Address" />
    <property name="title" value="Edit Billing Address" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="billingCampusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingLine1Address"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingLine2Address" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingCityName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingStateCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingPostalCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingCountryCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingPhoneNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="BillingAddressMaintenanceDocument-workflowProperties" parent="BillingAddressMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="BillingAddressMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
