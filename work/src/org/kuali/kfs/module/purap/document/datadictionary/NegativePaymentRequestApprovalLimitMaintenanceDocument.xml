<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="NegativePaymentRequestApprovalLimitMaintenanceDocument" parent="NegativePaymentRequestApprovalLimitMaintenanceDocument-parentBean" />

  <bean id="NegativePaymentRequestApprovalLimitMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.purap.bo.NegativePaymentRequestApprovalLimit" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="NegativePaymentRequestApprovalLimitMaintenanceDocument-EditNegativePREQApprovalLimit" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="chartOfAccounts"
              p:attributeToHighlightOnFail="chartOfAccountsCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="organization"
              p:attributeToHighlightOnFail="organizationCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="account"
              p:attributeToHighlightOnFail="accountNumber" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>chartOfAccountsCode</value>
      </list>
    </property>
    <property name="label" value="Negative Payment Request Approval Limit" />
    <property name="shortLabel" value="Negative Payment Request Approval Limit" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PA"
            p:parameterName="NEGATIVE_PAYMENT_REQUEST_APPROVAL_LIMIT"
            p:parameterDetailType="NegativePaymentRequestApprovalLimit" />
    </property>
    <property name="documentTypeName" value="NegativePaymentRequestApprovalLimitMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMNP" />
    <property name="workflowProperties" >
      <ref bean="NegativePaymentRequestApprovalLimitMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_AP_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="NegativePaymentRequestApprovalLimitMaintenanceDocument-EditNegativePREQApprovalLimit" parent="NegativePaymentRequestApprovalLimitMaintenanceDocument-EditNegativePREQApprovalLimit-parentBean" />

  <bean id="NegativePaymentRequestApprovalLimitMaintenanceDocument-EditNegativePREQApprovalLimit-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Negative PREQ Approval Limit" />
    <property name="title" value="Edit Negative PREQ Approval Limit" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="negativePaymentRequestApprovalLimitAmount"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="NegativePaymentRequestApprovalLimitMaintenanceDocument-workflowProperties" parent="NegativePaymentRequestApprovalLimitMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="NegativePaymentRequestApprovalLimitMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
