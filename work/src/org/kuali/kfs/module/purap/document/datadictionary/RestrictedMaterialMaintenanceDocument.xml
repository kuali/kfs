<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RestrictedMaterialMaintenanceDocument" parent="RestrictedMaterialMaintenanceDocument-parentBean" />

  <bean id="RestrictedMaterialMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.purap.bo.RestrictedMaterial" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RestrictedMaterialMaintenanceDocument-EditRestrictedMaterial" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>restrictedMaterialCode</value>
      </list>
    </property>
    <property name="label" value="Restricted Material" />
    <property name="shortLabel" value="Restricted Material" />
    <property name="documentTypeName" value="RestrictedMaterialMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.purap.rules.RestrictedMaterialRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMRM" />
    <property name="workflowProperties" >
      <ref bean="RestrictedMaterialMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PUR_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="RestrictedMaterialMaintenanceDocument-EditRestrictedMaterial" parent="RestrictedMaterialMaintenanceDocument-EditRestrictedMaterial-parentBean" />

  <bean id="RestrictedMaterialMaintenanceDocument-EditRestrictedMaterial-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Restricted Material" />
    <property name="title" value="Edit Restricted Material" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="restrictedMaterialCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="restrictedMaterialDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="restrictedMaterialDefaultDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="restrictedMaterialWorkgroupName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="RestrictedMaterialMaintenanceDocument-workflowProperties" parent="RestrictedMaterialMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="RestrictedMaterialMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
