<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AdhocWorkgroup" parent="AdhocWorkgroup-parentBean" />

  <bean id="AdhocWorkgroup-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.bo.AdhocWorkgroup" />
    <property name="attributes" >
      <list>
        <ref bean="AdhocWorkgroup-documentNumber" />
        <ref bean="AdhocWorkgroup-workgroupName" />
        <ref bean="AdhocWorkgroup-permissionCode" />
        <ref bean="AdhocWorkgroup-addedByPerson" />
        <ref bean="AdhocWorkgroup-personAddedTimestamp" />
        <ref bean="AdhocWorkgroup-objectId" />
        <ref bean="AdhocWorkgroup-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="AdhocWorkgroup-documentNumber" parent="AdhocWorkgroup-documentNumber-parentBean" />

  <bean id="AdhocWorkgroup-documentNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="documentNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Document Number" />
    <property name="shortLabel" value="Document Number" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="8" />
    </property>
  </bean>
  <bean id="AdhocWorkgroup-workgroupName" parent="AdhocWorkgroup-workgroupName-parentBean" />

  <bean id="AdhocWorkgroup-workgroupName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="workgroupName" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Workgroup Identifier" />
    <property name="shortLabel" value="Workgroup" />
    <property name="maxLength" value="70" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="72" />
    </property>
  </bean>
  <bean id="AdhocWorkgroup-permissionCode" parent="AdhocWorkgroup-permissionCode-parentBean" />

  <bean id="AdhocWorkgroup-permissionCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="permissionCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Permission Type" />
    <property name="shortLabel" value="Permission Type" />
    <property name="maxLength" value="2" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.module.kra.lookup.keyvalues.ResearchAdhocPermissionTypeValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
  </bean>
  <bean id="AdhocWorkgroup-addedByPerson" parent="AdhocWorkgroup-addedByPerson-parentBean" />

  <bean id="AdhocWorkgroup-addedByPerson-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="addedByPerson" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Added By Person" />
    <property name="shortLabel" value="prsnAdd" />
    <property name="maxLength" value="20" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="20" />
    </property>
  </bean>
  <bean id="AdhocWorkgroup-personAddedTimestamp" parent="AdhocWorkgroup-personAddedTimestamp-parentBean" />

  <bean id="AdhocWorkgroup-personAddedTimestamp-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="personAddedTimestamp" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Person Added Timestamp" />
    <property name="shortLabel" value="prsnAddTs" />
    <property name="maxLength" value="10" />
    <property name="validationPattern" >
      <bean parent="DateValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="11" />
    </property>
  </bean>
  <bean id="AdhocWorkgroup-objectId" parent="AdhocWorkgroup-objectId-parentBean" />

  <bean id="AdhocWorkgroup-objectId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="objectId" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Object Id" />
    <property name="shortLabel" value="GUID" />
    <property name="maxLength" value="36" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="36" />
    </property>
  </bean>
  <bean id="AdhocWorkgroup-versionNumber" parent="AdhocWorkgroup-versionNumber-parentBean" />

  <bean id="AdhocWorkgroup-versionNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="versionNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Version Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="10" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="-1" />
    </property>
  </bean>
</beans>
