<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BudgetAdjustmentDocument" parent="BudgetAdjustmentDocument-parentBean" />

  <bean id="BudgetAdjustmentDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Budget Adjustment" />
    <property name="shortLabel" value="Budget Adjustment" />
    <property name="summary" value="Document used for adjusting budgets." />
    <property name="description" value="The Budget Adjustment document is a financial planning tool that allows an organization to adjust the current 
        and/or base budget figures for a given account as circumstances may change throughout the fiscal year. It may be used to 
        create a budget for a new account established after the beginning of a new fiscal year, and it may also be used to transfer funds between
        general fund accounts belonging to the same chart of accounts." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="BUDGET_ADJUSTMENT"
            p:parameterDetailType="BudgetAdjustment" />
    </property>
    <property name="documentTypeName" value="BudgetAdjustmentDocument" />
    <property name="documentClass" value="org.kuali.module.financial.document.BudgetAdjustmentDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.rules.AccountingRuleEngineRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.module.financial.document.authorization.BudgetAdjustmentDocumentAuthorizer" />
    <property name="preRulesCheckClass" value="org.kuali.module.financial.rules.BudgetAdjustmentDocumentPreRules" />
    <property name="documentTypeCode" value="BA" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="BudgetAdjustmentDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="BudgetAdjustmentDocument-nextPositionSourceLineNumber" />
        <ref bean="BudgetAdjustmentDocument-nextPositionTargetLineNumber" />
        <ref bean="BudgetAdjustmentDocument-postingYear" />
      </list>
    </property>
    <property name="validationMap" ref="BudgetAdjustmentDocument-validations" />
  </bean>

<!-- Attribute Definitions -->


  <bean id="BudgetAdjustmentDocument-nextPositionSourceLineNumber" parent="BudgetAdjustmentDocument-nextPositionSourceLineNumber-parentBean" />

  <bean id="BudgetAdjustmentDocument-nextPositionSourceLineNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="nextPositionSourceLineNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Next PS Source Line Number" />
    <property name="shortLabel" value="Next PS Source" />
    <property name="maxLength" value="7" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="required" value="false" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="&amp;nbsp;" />
  </bean>
  <bean id="BudgetAdjustmentDocument-nextPositionTargetLineNumber" parent="BudgetAdjustmentDocument-nextPositionTargetLineNumber-parentBean" />

  <bean id="BudgetAdjustmentDocument-nextPositionTargetLineNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="nextPositionTargetLineNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Next PS Target Line Number" />
    <property name="shortLabel" value="Next PS Target" />
    <property name="maxLength" value="7" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="required" value="false" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="&amp;nbsp;" />
  </bean>
  <bean id="BudgetAdjustmentDocument-postingYear" parent="BudgetAdjustmentDocument-postingYear-parentBean" />

  <bean id="BudgetAdjustmentDocument-postingYear-parentBean" abstract="true" parent="GenericAttributes-genericFiscalYear">
    <property name="name" value="postingYear" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.module.financial.lookup.keyvalues.BudgetAdjustmentFiscalYearValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
  </bean>

<!-- Exported Workflow Properties -->

  <bean id="BudgetAdjustmentDocument-workflowProperties" parent="BudgetAdjustmentDocument-workflowProperties-parentBean" />

  <bean id="BudgetAdjustmentDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  
  <!-- validations -->
  
  <bean id="BudgetAdjustmentDocument-validations" parent="BudgetAdjustmentDocument-validations-parentBean" />
  
  <bean id="BudgetAdjustmentDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedRouteDocumentEvent</value></key>
				<value>BudgetAdjustment-routeDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedApproveDocumentEvent</value></key>
				<value>BudgetAdjustment-approveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedBlanketApproveDocumentEvent</value></key>
				<value>BudgetAdjustment-blanketApproveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedAddAccountingLineEvent</value></key>
				<value>BudgetAdjustment-addAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedDeleteAccountingLineEvent</value></key>
				<value>BudgetAdjustment-deleteAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedUpdateAccountingLineEvent</value></key>
				<value>BudgetAdjustment-updateAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedReviewAccountingLineEvent</value></key>
				<value>BudgetAdjustment-reviewAccountingLineValidation</value>
			</entry>
    	</map>
    </property>
  </bean>
</beans>
