<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="UnitOfMeasureMaintenanceDocument" parent="UnitOfMeasureMaintenanceDocument-parentBean" />

  <bean id="UnitOfMeasureMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.bo.UnitOfMeasure" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="UnitOfMeasureMaintenanceDocument-EditUnitOfMeasure" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>itemUnitOfMeasureCode</value>
      </list>
    </property>
    <property name="label" value="Unit Of Measure" />
    <property name="shortLabel" value="Unit Of Measure" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-SY"
            p:parameterName="UNIT_OF_MEASURE"
            p:parameterDetailType="UnitOfMeasure" />
    </property>
    <property name="documentTypeName" value="UnitOfMeasureMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMUM" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PUR_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="UnitOfMeasureMaintenanceDocument-EditUnitOfMeasure" parent="UnitOfMeasureMaintenanceDocument-EditUnitOfMeasure-parentBean" />

  <bean id="UnitOfMeasureMaintenanceDocument-EditUnitOfMeasure-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Unit Of Measure" />
    <property name="title" value="Edit Unit Of Measure" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="itemUnitOfMeasureCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="itemUnitOfMeasureDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
