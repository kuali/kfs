<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetLocationGlobalMaintenanceDocument" parent="AssetLocationGlobalMaintenanceDocument-parentBean" />

  <bean id="AssetLocationGlobalMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetLocationGlobal" />
    <property name="maintainableClass" value="org.kuali.module.cams.maintenance.AssetLocationGlobalMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetLocationGlobalMaintenanceDocument-EditListofAssets" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="asset"
              p:collection="assetLocationGlobalDetails"
              p:attributeToHighlightOnFail="capitalAssetNumber" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>documentNumber</value>
      </list>
    </property>
    <property name="label" value="Asset Location Global" />
    <property name="shortLabel" value="Asset Location Global" />
    <property name="summary" value="Location Global Asset Maintenance Document" />
    <property name="description" value="Document used to create or update global location asset document." />
    <property name="documentTypeName" value="AssetLocationGlobalMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.cams.rules.AssetLocationGlobalRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ALOC" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>CM_ADMINISTRATORS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetLocationGlobalMaintenanceDocument-EditListofAssets" parent="AssetLocationGlobalMaintenanceDocument-EditListofAssets-parentBean" />

  <bean id="AssetLocationGlobalMaintenanceDocument-EditListofAssets-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit List of Assets" />
    <property name="title" value="Edit List of Assets" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="assetLocationGlobalDetails" />
          <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetLocationGlobalDetail" />
          <property name="sourceClassName" value="org.kuali.module.cams.bo.Asset" />
          <property name="sourceAttributeName" value="VALUE DOESN'T MATTER" />
          <property name="summaryTitle" value="Asset Location" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="capitalAssetNumber" />
            </list>
          </property>
          <property name="duplicateIdentificationFields">
          	<list>
          	  <bean parent="MaintainableFieldDefinition" 
          			p:name="capitalAssetNumber" />
          	</list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="capitalAssetNumber"
                    p:required="true"
                    p:readOnlyAfterAdd="true"
                    p:template="capitalAssetNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="campusCode"
                    p:required="false"
                    p:template="campusCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingCode"
                    p:required="false"
                    p:template="buildingCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingRoomNumber"
                    p:required="false"
                    p:template="buildingRoomNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingSubRoomNumber"
                    p:required="false"
                    p:template="buildingSubRoomNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="campusTagNumber"
                    p:required="false"
                    p:template="campusTagNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
