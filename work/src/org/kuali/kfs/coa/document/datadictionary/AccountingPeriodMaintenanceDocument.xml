<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AccountingPeriodMaintenanceDocument" parent="AccountingPeriodMaintenanceDocument-parentBean" />

  <bean id="AccountingPeriodMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.AccountingPeriod" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AccountingPeriodMaintenanceDocument-EditAccountingPeriod" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>universityFiscalYear</value>
        <value>universityFiscalPeriodCode</value>
      </list>
    </property>
    <property name="label" value="Accounting Period" />
    <property name="shortLabel" value="Accounting Period" />
    <property name="summary" value="Accounting Period maintenance document" />
    <property name="description" value="Document used to create or update Accounting Period objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="ACCOUNTING_PERIOD"
            p:parameterDetailType="AccountingPeriod" />
    </property>
    <property name="documentTypeName" value="AccountingPeriodMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.chart.rules.AccountingPeriodRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="APRD" />
    <property name="workflowProperties" >
      <ref bean="AccountingPeriodMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AccountingPeriodMaintenanceDocument-EditAccountingPeriod" parent="AccountingPeriodMaintenanceDocument-EditAccountingPeriod-parentBean" />

  <bean id="AccountingPeriodMaintenanceDocument-EditAccountingPeriod-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Accounting Period" />
    <property name="title" value="Edit Accounting Period" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalYear"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalPeriodCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalPeriodName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalPeriodStatusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetRolloverIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalPeriodEndDate"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="AccountingPeriodMaintenanceDocument-workflowProperties" parent="AccountingPeriodMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="AccountingPeriodMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
