<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cg.bo.AwardStatus">


        <inquiry>
            <title>Award Status Inquiry</title>

            <inquirySections><inquirySection title="Award Status Details"><inquiryFields>
                <field attributeName="awardStatusCode" />
                <field attributeName="awardStatusDescription" />
                <field attributeName="rowActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Award Status Lookup</title>

            <instructions>Look up an Award Status</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="awardStatusCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="awardStatusCode" required="false" />
                <lookupField attributeName="awardStatusDescription" required="false" />
                <lookupField attributeName="rowActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="awardStatusCode" />
                <field attributeName="awardStatusDescription" />
                <field attributeName="rowActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="awardStatusCode" forceUppercase="true">
                <label>Award Status Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern>
                	<alphaNumeric />
                </validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>Award Status Code</summary>
                <description>
					This is a two character code associated with a particular status 
					of the Award.  Examples include A=Awarded, R=Rejected, and U=Underwritten.  
				</description>
			</attribute>

			<attributeReference name="awardStatusCodeDropDown" sourceClassName="org.kuali.module.cg.bo.AwardStatus" sourceAttributeName="awardStatusCode" >
                <control>
                    <select valuesFinderClass="org.kuali.module.cg.lookup.keyvalues.AwardStatusValuesFinder" />
                </control>
			</attributeReference>


            <attribute name="awardStatusDescription" forceUppercase="true">
                <label>Award Status Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>15</maxLength>
                <validationPattern>
                	<anyCharacter allowWhitespace="true"/>
                </validationPattern>

                <control>
                    <text size="17" />
                </control>

                <summary>Award Status Description</summary>
                <description>
					This is a brief description of the status of the Award which 
					identifies the stage or progression of the Award.  Examples of 
					Award Status Description are “Awarded”, “Underwritten” or “Rejected”.  
				</description>
			</attribute>

            <attribute name="rowActiveIndicator" forceUppercase="false">
                <label>Active Indicator</label>
                <shortLabel>Active Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>Active Indicator</summary>
                <description>
					The Active Indicator identifies whether an Award Status is 
					currently used in the system, or whether the Award Status is 
					no longer used.  Existing Awards may be associated with either 
					active or inactive Award Statuses.  New Awards or Awards which 
					are being updated or revised may only be associated with active 
					Award Statuses.
				</description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
