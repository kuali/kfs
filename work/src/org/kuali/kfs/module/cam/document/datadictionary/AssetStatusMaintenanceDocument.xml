<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetStatusMaintenanceDocument" parent="AssetStatusMaintenanceDocument-parentBean" />

  <bean id="AssetStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetStatus" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetStatusMaintenanceDocument-EditAssetStatus" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>inventoryStatusCode</value>
      </list>
    </property>
    <property name="label" value="Asset Status" />
    <property name="shortLabel" value="Asset Status" />
    <property name="summary" value="Asset status maintenance document" />
    <property name="description" value="Document used to create or update Asset status objects" />
    <property name="documentTypeName" value="AssetStatusMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ASTA" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>CM_ADMINISTRATORS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetStatusMaintenanceDocument-EditAssetStatus" parent="AssetStatusMaintenanceDocument-EditAssetStatus-parentBean" />

  <bean id="AssetStatusMaintenanceDocument-EditAssetStatus-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Asset Status" />
    <property name="title" value="Edit Asset Status" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="inventoryStatusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="inventoryStatusName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
