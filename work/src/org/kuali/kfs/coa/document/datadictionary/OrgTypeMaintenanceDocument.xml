<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="OrgTypeMaintenanceDocument" parent="OrgTypeMaintenanceDocument-parentBean" />

  <bean id="OrgTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.OrgType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="OrgTypeMaintenanceDocument-EditOrganizationType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>organizationTypeCode</value>
      </list>
    </property>
    <property name="label" value="Organization Type" />
    <property name="shortLabel" value="Organization Type" />
    <property name="summary" value="Organization Type Maintenance Document" />
    <property name="description" value="Maintenance document which allows you to create new Organization Types, or modify existing Organization Types." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="ORGANIZATION_TYPE"
            p:parameterDetailType="OrgType" />
    </property>
    <property name="documentTypeName" value="OrgTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ORTY" />
    <property name="workflowProperties" >
      <ref bean="OrgTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="OrgTypeMaintenanceDocument-EditOrganizationType" parent="OrgTypeMaintenanceDocument-EditOrganizationType-parentBean" />

  <bean id="OrgTypeMaintenanceDocument-EditOrganizationType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Organization Type" />
    <property name="title" value="Edit Organization Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationTypeName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="OrgTypeMaintenanceDocument-workflowProperties" parent="OrgTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="OrgTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
