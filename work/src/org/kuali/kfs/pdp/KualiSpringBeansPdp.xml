	<bean id="pdpGlPendingTransactionDao" parent="platformAwareDao" class="org.kuali.module.pdp.dao.ojb.GlPendingTransactionDaoOjb"/>

	<bean id="pdpPaymentDetailDao" parent="platformAwareDao" class="org.kuali.module.pdp.dao.ojb.PaymentDetailDaoOjb">
		<property name="universalUserService" ref="universalUserService" />
		<property name="referenceService" ref="pdpReferenceService" />
		<property name="dateTimeService" ref="dateTimeService" />
		<property name="parameterService" ref="parameterService" />
	</bean>

