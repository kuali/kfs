<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.chart.bo.ProjectCode">


        <inquiry>
            <title>Project Code Inquiry</title>

            <inquirySections><inquirySection title="Project Code Attributes"><inquiryFields>
                <field attributeName="code" />
                <field attributeName="name" />
                <field attributeName="chartOfAccountsCode" />
                <field attributeName="organizationCode" />
                <field attributeName="projectManagerUniversal.personName" forceInquiry="true" />
                <field attributeName="projectDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Project Code Lookup</title>

            <instructions>Lookup a Project Code</instructions>

            <defaultSort attributeName="code" sortAscending="false" />

            <lookupFields>
                <lookupField attributeName="code" required="false" />
                <lookupField attributeName="projectManagerUniversal.personName" required="false" />
                <lookupField attributeName="name" required="false" />
                <lookupField attributeName="chartOfAccountsCode" required="false" />
                <lookupField attributeName="organizationCode" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="code" />
                <field attributeName="name" />
                <field attributeName="chartOfAccountsCode" />
                <field attributeName="organizationCode" />
                <field attributeName="active" />
                <field attributeName="projectManagerUniversal.personName" forceInquiry="true" />               
            </resultFields>
        </lookup>

        <titleAttribute>code</titleAttribute>

        <attributes>
            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator">
                <label>Active Indicator</label>
                <shortLabel>Active</shortLabel>
                <summary><![CDATA[&nbsp;]]></summary>
                <description>
                    Active Indicator
                </description>
            </attributeReference>

            <attributeReference name="chartOfAccountsCode" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="chartOfAccountsCode">
                <required>true</required>
                <control>
                    <text size="2" />
                </control>
                <summary><![CDATA[&nbsp;]]></summary>
            </attributeReference>


            <attributeReference name="organizationCode" sourceClassName="org.kuali.module.chart.bo.Org" sourceAttributeName="organizationCode">
                <required>true</required>
            </attributeReference>

            <attributeReference name="projectManagerUniversalId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericSystemId">
                <label>Project Manager UserID</label><!-- label changed for error messages -->
                <!-- <displayLabelAttribute>projectManagerUniversal.personUserIdentifier</displayLabelAttribute> -->
                <shortLabel>Mgr</shortLabel>
                <required>true</required>
                <control>
                    <hidden />
                </control>
            </attributeReference>

            <attributeReference name="projectManagerUniversal.personUserIdentifier" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personUserIdentifier">
                <label>Project Manager UserID</label>
                <shortLabel>UserID</shortLabel>
                <required>false</required>
                <control>
                    <kualiUser universalIdAttributeName="projectManagerUniversalId" userIdAttributeName="projectManagerUniversal.personUserIdentifier" personNameAttributeName="projectManagerUniversal.personName" />
                </control>
                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The UserID of the Project Manager.</description>
            </attributeReference>

            <attributeReference name="projectManagerUniversal.personName" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personName">
                <label>Project Manager Name</label>
                <shortLabel>Name</shortLabel>
                <required>false</required>
                <control>
                    <hidden />
                </control>
                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The Name of the Project Manager.</description>
            </attributeReference>

            <attribute name="code" forceUppercase="true">
                <label>Project Code</label>
                <shortLabel>Project</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern>
                    <anyCharacter allowWhitespace="true" />
                </validationPattern>
                <required>true</required>

                <control>
                    <text size="10" />
                </control>

                <summary><![CDATA[&nbsp;]]></summary>
                <description>
                    The unique code to identify a project.
                </description>
            </attribute>

            <attribute name="projectDescription" forceUppercase="false">
                <label>Project Description</label>
                <shortLabel>Desc</shortLabel>

                <maxLength>400</maxLength>
                <validationPattern>
                    <anyCharacter allowWhitespace="true" />
                </validationPattern>
                <required>true</required>

                <control>
                    <textarea rows="3" cols="40" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>
                    Project Description
                </description>
            </attribute>

            <attribute name="name" forceUppercase="true">
                <label>Project Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern>
                    <anyCharacter allowWhitespace="true" />
                </validationPattern>
                <required>true</required>

                <control>
                    <text size="40" />
                </control>

                <summary><![CDATA[&nbsp;]]></summary>
                <description>
                    The long descriptive name of this Project Code. This name appears on the accounting line in financial documents as well as in searches and reports.
                </description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>

        <relationships>
            <relationship objectAttributeName="projectManagerUniversal" >
                <primitiveAttribute sourceName="projectManagerUniversalId" targetName="personUniversalIdentifier" />
				<supportAttribute sourceName="projectManagerUniversal.personUserIdentifier" targetName="personUserIdentifier" identifier="true" />
				<supportAttribute sourceName="projectManagerUniversal.personName" targetName="personName" />
            </relationship>
        </relationships>

		<objectLabel>Project Code</objectLabel>
    </businessObject>
</dictionaryEntry>

