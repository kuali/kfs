<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RoutingFormKeyword" parent="RoutingFormKeyword-parentBean" />

  <bean id="RoutingFormKeyword-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.routingform.bo.RoutingFormKeyword" />
    <property name="inquiryDefinition" >
      <ref bean="RoutingFormKeyword-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="RoutingFormKeyword-lookupDefinition" />
    </property>
    <property name="attributes" >
      <list>
        <ref bean="RoutingFormKeyword-routingFormKeywordDescription" />
        <ref bean="RoutingFormKeyword-documentNumber" />
        <ref bean="RoutingFormKeyword-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="RoutingFormKeyword-routingFormKeywordDescription" parent="RoutingFormKeyword-routingFormKeywordDescription-parentBean" />

  <bean id="RoutingFormKeyword-routingFormKeywordDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="routingFormKeywordDescription" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Keywords" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="70" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="72" />
    </property>
    <property name="summary" value="routingFormKeywordDescription" />
    <property name="description" value="routingFormKeywordDescription description..." />
  </bean>
  <bean id="RoutingFormKeyword-documentNumber" parent="RoutingFormKeyword-documentNumber-parentBean" />

  <bean id="RoutingFormKeyword-documentNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="documentNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Document Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="14" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="16" />
    </property>
    <property name="summary" value="documentNumber" />
    <property name="description" value="documentNumber description..." />
  </bean>
  <bean id="RoutingFormKeyword-versionNumber" parent="RoutingFormKeyword-versionNumber-parentBean" />

  <bean id="RoutingFormKeyword-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="RoutingFormKeyword-inquiryDefinition" parent="RoutingFormKeyword-inquiryDefinition-parentBean" />

  <bean id="RoutingFormKeyword-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Routing Form Keyword Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Header Text" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="routingFormKeywordDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="documentNumber" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="RoutingFormKeyword-lookupDefinition" parent="RoutingFormKeyword-lookupDefinition-parentBean" />

  <bean id="RoutingFormKeyword-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Routing Form Keyword Lookup" />
    <property name="instructions" value="Look up a Routing Form Keyword" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="routingFormKeywordDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="documentNumber" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="routingFormKeywordDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="documentNumber" />
      </list>
    </property>
  </bean>
</beans>
