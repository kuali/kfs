<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BankMaintenanceDocument" parent="BankMaintenanceDocument-parentBean" />

  <bean id="BankMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.financial.bo.Bank" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="BankMaintenanceDocument-EditBank" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>financialDocumentBankCode</value>
      </list>
    </property>
    <property name="label" value="Bank" />
    <property name="shortLabel" value="Bank" />
    <property name="summary" value="Bank maintenance document" />
    <property name="description" value="Document used to create or update Bank objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="BANK"
            p:parameterDetailType="Bank" />
    </property>
    <property name="documentTypeName" value="BankMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.financial.rules.BankRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="BANK" />
    <property name="workflowProperties" >
      <ref bean="BankMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="BankMaintenanceDocument-EditBank" parent="BankMaintenanceDocument-EditBank-parentBean" />

  <bean id="BankMaintenanceDocument-EditBank-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Bank" />
    <property name="title" value="Edit Bank" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentBankCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentBankName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentBankShortNm"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="bankRoutingNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="BankMaintenanceDocument-workflowProperties" parent="BankMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="BankMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
