<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BasicAccountingCategoryMaintenanceDocument" parent="BasicAccountingCategoryMaintenanceDocument-parentBean" />

  <bean id="BasicAccountingCategoryMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.BasicAccountingCategory" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="BasicAccountingCategoryMaintenanceDocument-EditBasicAccountingCategoryCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>code</value>
      </list>
    </property>
    <property name="label" value="Basic Accounting Category" />
    <property name="shortLabel" value="Basic Accounting Category" />
    <property name="summary" value="Basic Accounting Category maintenance document" />
    <property name="description" value="Document used to create or update Basic Accounting Category objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="BASIC_ACCOUNTING_CATEGORY"
            p:parameterDetailType="BasicAccountingCategory" />
    </property>
    <property name="documentTypeName" value="BasicAccountingCategoryMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ACTY" />
    <property name="workflowProperties" >
      <ref bean="BasicAccountingCategoryMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="BasicAccountingCategoryMaintenanceDocument-EditBasicAccountingCategoryCode" parent="BasicAccountingCategoryMaintenanceDocument-EditBasicAccountingCategoryCode-parentBean" />

  <bean id="BasicAccountingCategoryMaintenanceDocument-EditBasicAccountingCategoryCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Basic Accounting Category Code" />
    <property name="title" value="Edit Basic Accounting Category Code" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="code"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="shortName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="sortCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="BasicAccountingCategoryMaintenanceDocument-workflowProperties" parent="BasicAccountingCategoryMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="BasicAccountingCategoryMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
