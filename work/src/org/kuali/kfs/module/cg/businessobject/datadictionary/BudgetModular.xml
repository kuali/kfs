<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BudgetModular" parent="BudgetModular-parentBean" />

  <bean id="BudgetModular-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.budget.bo.BudgetModular" />
    <property name="inquiryDefinition" >
      <ref bean="BudgetModular-inquiryDefinition" />
    </property>
    <property name="objectLabel" value="Modular Budget" />
    <property name="attributes" >
      <list>
        <ref bean="BudgetModular-documentNumber" />
        <ref bean="BudgetModular-budgetModularTaskNumber" />
        <ref bean="BudgetModular-budgetModularPersonnelDescription" />
        <ref bean="BudgetModular-budgetModularConsortiumDescription" />
        <ref bean="BudgetModular-budgetModularVariableAdjustmentDescription" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="BudgetModular-documentNumber" parent="BudgetModular-documentNumber-parentBean" />

  <bean id="BudgetModular-documentNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="documentNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Document Header ID" />
    <property name="shortLabel" value="Doc Header ID" />
    <property name="maxLength" value="7" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
    <property name="summary" value="Doc Header ID" />
    <property name="description" value="Doc Header ID" />
  </bean>
  <bean id="BudgetModular-budgetModularTaskNumber" parent="BudgetModular-budgetModularTaskNumber-parentBean" />

  <bean id="BudgetModular-budgetModularTaskNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="budgetModularTaskNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Includes Modular Variance" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="2" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="2" />
    </property>
    <property name="summary" value="Budget Modular Task Number" />
    <property name="description" value="Budget Modular Task Number..." />
  </bean>
  <bean id="BudgetModular-budgetModularPersonnelDescription" parent="BudgetModular-budgetModularPersonnelDescription-parentBean" />

  <bean id="BudgetModular-budgetModularPersonnelDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="budgetModularPersonnelDescription" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Explanation - Personnel" />
    <property name="shortLabel" value="Modular Personnel" />
    <property name="maxLength" value="50000" />
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:rows="5"
            p:cols="60" />
    </property>
    <property name="summary" value="Modular Budget Personnel Description" />
    <property name="description" value="Modular Budget Personnel Description" />
  </bean>
  <bean id="BudgetModular-budgetModularConsortiumDescription" parent="BudgetModular-budgetModularConsortiumDescription-parentBean" />

  <bean id="BudgetModular-budgetModularConsortiumDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="budgetModularConsortiumDescription" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Explanation - Consortium" />
    <property name="shortLabel" value="Modular Consortium" />
    <property name="maxLength" value="50000" />
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:rows="5"
            p:cols="60" />
    </property>
    <property name="summary" value="Modular Budget Consortium Description" />
    <property name="description" value="Modular Budget Consortium Description" />
  </bean>
  <bean id="BudgetModular-budgetModularVariableAdjustmentDescription" parent="BudgetModular-budgetModularVariableAdjustmentDescription-parentBean" />

  <bean id="BudgetModular-budgetModularVariableAdjustmentDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="budgetModularVariableAdjustmentDescription" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Explanation - Variable Adjustment" />
    <property name="shortLabel" value="Modular Variable Adjustment" />
    <property name="maxLength" value="50000" />
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:rows="5"
            p:cols="60" />
    </property>
    <property name="summary" value="Modular Budget Variable Adjustment Description" />
    <property name="description" value="Modular Budget Variable Adjustment Description" />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="BudgetModular-inquiryDefinition" parent="BudgetModular-inquiryDefinition-parentBean" />

  <bean id="BudgetModular-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Modular Budget Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Header Text" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="documentNumber" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
