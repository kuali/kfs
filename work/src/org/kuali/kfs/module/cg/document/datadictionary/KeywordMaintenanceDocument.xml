<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KeywordMaintenanceDocument" parent="KeywordMaintenanceDocument-parentBean" />

  <bean id="KeywordMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.routingform.bo.Keyword" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KeywordMaintenanceDocument-EditKeyword" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>routingFormKeywordDescription</value>
      </list>
    </property>
    <property name="label" value="Keyword" />
    <property name="shortLabel" value="Keyword" />
    <property name="summary" value="Keyword maintenance document" />
    <property name="description" value="Document used to create or update Keyword objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-RA"
            p:parameterName="KEYWORD"
            p:parameterDetailType="Keyword" />
    </property>
    <property name="documentTypeName" value="KeywordMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="KEYW" />
    <property name="workflowProperties" >
      <ref bean="KeywordMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>RA_PRE_AWARD_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KeywordMaintenanceDocument-EditKeyword" parent="KeywordMaintenanceDocument-EditKeyword-parentBean" />

  <bean id="KeywordMaintenanceDocument-EditKeyword-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Keyword" />
    <property name="title" value="Edit Keyword" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="routingFormKeywordDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="dataObjectMaintenanceCodeActiveIndicator"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="KeywordMaintenanceDocument-workflowProperties" parent="KeywordMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="KeywordMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
