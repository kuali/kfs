<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.SubObjCdGlobal</businessObjectClass>
        <maintainableClass>org.kuali.module.chart.maintenance.SubObjCdGlobalMaintainableImpl</maintainableClass>

        <businessRulesClass>org.kuali.module.chart.rules.SubObjCdGlobalRule</businessRulesClass>
        <!-- preRulesCheckClass>org.kuali.module.chart.rules.DelegateGlobalPreRules</preRulesCheckClass>-->
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>SubObjCdGlobalMaintenanceDocument</documentTypeName>
        <documentTypeCode>GSOB</documentTypeCode>

        <label>Sub-Object Code Global</label>

        <summary>Global Sub Object Code Maintenance Document</summary>
        <description>Global Sub Object Code Maintenance Document</description>
        <help parameterNamespace="KFS-CA" parameterDetailType="SubObjCdGlobal" parameterName="SUB_OBJECT_CODE_GLOBAL" />

        <lockingKeys>
            <field attributeName="documentNumber" />
        </lockingKeys>
        <defaultExistenceChecks>
            <reference attributeName="chartOfAccounts" attributeToHighlightOnFail="chartOfAccountsCode" />
            <reference attributeName="universityFiscal" attributeToHighlightOnFail="universityFiscalYear" />
        </defaultExistenceChecks>
        
        <maintainableSections>
            <maintainableSection title="Edit Global Sub Object Code">
                <maintainableItems>
                    <maintainableField name="universityFiscalYear" required="true">
                        <defaultValueFinderClass>org.kuali.kfs.lookup.valuefinder.FiscalYearFinder</defaultValueFinderClass>
                    </maintainableField>
                    <maintainableField name="chartOfAccountsCode" required="true" />
                    <maintainableField name="financialSubObjectCode" required="true" />
                    <maintainableField name="financialSubObjectCodeName" required="true" />
                    <maintainableField name="financialSubObjectCodeShortName" required="true" />
                    <maintainableField name="financialSubObjectActiveIndicator" required="false">
                        <defaultValue>true</defaultValue>
                    </maintainableField>
                    <maintainableField name="versionNumber" />
	              </maintainableItems>
            </maintainableSection>
            <maintainableSection title="Edit Object Codes">
            	  <maintainableItems>
                    <maintainableCollection name="subObjCdGlobalDetails" businessObjectClass="org.kuali.module.chart.bo.SubObjCdGlobalDetail" sourceClassName="org.kuali.module.chart.bo.ObjectCode" sourceAttributeName="subObjCdGlobalDetails" summaryTitle="Object Code">
                        <maintainableField name="universityFiscalYear" template="universityFiscalYear" required="true" readOnlyAfterAdd="true" >
                            <defaultValueFinderClass>org.kuali.kfs.lookup.valuefinder.FiscalYearFinder</defaultValueFinderClass>
						            </maintainableField>
                        <maintainableField name="chartOfAccountsCode" template="chartOfAccountsCode" readOnlyAfterAdd="true" />
                        <maintainableField name="financialObjectCode" template="financialObjectCode" required="true"/>
                        <maintainableField name="newCollectionRecord" />
                        <maintainableField name="versionNumber" />
                        <summaryFields>
                            <summaryField name="financialObjectCode" />
                        </summaryFields>
                        <duplicateIdentificationFields>
                            <duplicateIdentificationField name="chartOfAccountsCode"/>
                            <duplicateIdentificationField name="financialObjectCode"/>
                        </duplicateIdentificationFields>
                  	</maintainableCollection>
            	  </maintainableItems>
            </maintainableSection>
            <maintainableSection title="Edit Accounts">
            	  <maintainableItems>
            		<maintainableCollection name="accountGlobalDetails" businessObjectClass="org.kuali.module.chart.bo.AccountGlobalDetail"  sourceClassName="org.kuali.module.chart.bo.Account" sourceAttributeName="accountGlobalDetails" summaryTitle="Account">
                        <maintainableField name="chartOfAccountsCode" template="chartOfAccountsCode" readOnlyAfterAdd="true" />
                        <maintainableField name="accountNumber" template="accountNumber" required="true"/>
                        <maintainableField name="account.accountName" template="accountName" readOnly="true" />
                        <maintainableField name="newCollectionRecord" />
                        <maintainableField name="versionNumber" />
                        <summaryFields>
                            <summaryField name="accountNumber" />
                            <summaryField name="account.accountName" />
                        </summaryFields>
                        <duplicateIdentificationFields>
                            <duplicateIdentificationField name="chartOfAccountsCode"/>
                            <duplicateIdentificationField name="accountNumber"/>
                        </duplicateIdentificationFields>                             
                    </maintainableCollection>
            	  </maintainableItems>
            </maintainableSection>

        </maintainableSections>
        
        <workflowProperties>
        	<workflowPropertyGroup>
        		<workflowProperty path="newMaintainableObject.businessObject.accountGlobalDetails" />
        		<workflowProperty path="newMaintainableObject.businessObject.subObjCdGlobalDetails" />
			</workflowPropertyGroup>
        </workflowProperties>
        
    </maintenanceDocument>
</dictionaryEntry>