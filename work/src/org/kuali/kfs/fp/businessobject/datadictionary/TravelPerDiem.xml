<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="TravelPerDiem" parent="TravelPerDiem-parentBean" />

  <bean id="TravelPerDiem-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.financial.bo.TravelPerDiem" />
    <property name="inquiryDefinition" >
      <ref bean="TravelPerDiem-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="TravelPerDiem-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Disbursement Voucher Travel Per Diem" />
    <property name="attributes" >
      <list>
        <ref bean="TravelPerDiem-fiscalYear" />
        <ref bean="TravelPerDiem-perDiemCountryName" />
        <ref bean="TravelPerDiem-perDiemCountryText" />
        <ref bean="TravelPerDiem-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="TravelPerDiem-fiscalYear" parent="TravelPerDiem-fiscalYear-parentBean" />

  <bean id="TravelPerDiem-fiscalYear-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="fiscalYear" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Fiscal Year" />
    <property name="shortLabel" value="Year" />
    <property name="maxLength" value="4" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="4" />
    </property>
  </bean>
  <bean id="TravelPerDiem-perDiemCountryName" parent="TravelPerDiem-perDiemCountryName-parentBean" />

  <bean id="TravelPerDiem-perDiemCountryName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="perDiemCountryName" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Per Diem Category/Country Name" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="10" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
  </bean>
  <bean id="TravelPerDiem-perDiemCountryText" parent="TravelPerDiem-perDiemCountryText-parentBean" />

  <bean id="TravelPerDiem-perDiemCountryText-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="perDiemCountryText" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Per Diem Category/Country URL" />
    <property name="shortLabel" value="URL" />
    <property name="maxLength" value="255" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="75" />
    </property>
  </bean>
  <bean id="TravelPerDiem-versionNumber" parent="TravelPerDiem-versionNumber-parentBean" />

  <bean id="TravelPerDiem-versionNumber-parentBean" abstract="true" parent="GenericAttributes-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="TravelPerDiem-inquiryDefinition" parent="TravelPerDiem-inquiryDefinition-parentBean" />

  <bean id="TravelPerDiem-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Disbursement Voucher Travel Per Diem Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Header Text" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="fiscalYear" />
              <bean parent="FieldDefinition"
                    p:attributeName="perDiemCountryName" />
              <bean parent="FieldDefinition"
                    p:attributeName="perDiemCountryText" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="TravelPerDiem-lookupDefinition" parent="TravelPerDiem-lookupDefinition-parentBean" />

  <bean id="TravelPerDiem-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Disbursement Voucher Travel Per Diem Lookup" />
    <property name="instructions" value="Lookup a Travel Per Diem Category" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
        <property name="attributeNames" >
          <list>
            <value>perDiemCountryName</value>
          </list>
        </property>
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="fiscalYear"
              p:defaultValueFinderClass="org.kuali.kfs.lookup.valuefinder.FiscalYearFinder" />
        <bean parent="FieldDefinition"
              p:attributeName="perDiemCountryName" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="fiscalYear" />
        <bean parent="FieldDefinition"
              p:attributeName="perDiemCountryName" />
        <bean parent="FieldDefinition"
              p:attributeName="perDiemCountryText" />
      </list>
    </property>
  </bean>
</beans>
