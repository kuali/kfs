<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="MessageOfTheDayMaintenanceDocument" parent="MessageOfTheDayMaintenanceDocument-parentBean" />

  <bean id="MessageOfTheDayMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.financial.bo.MessageOfTheDay" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="MessageOfTheDayMaintenanceDocument-EditMessageOfTheDay" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="financialSystemOrigination"
              p:attributeToHighlightOnFail="financialSystemOriginationCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>financialSystemOriginationCode</value>
      </list>
    </property>
    <property name="label" value="Message Of The Day" />
    <property name="shortLabel" value="Message Of The Day" />
    <property name="summary" value="Message Of The Day maintenance document" />
    <property name="description" value="Document used to create or update Message Of The Day objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="MESSAGE_OF_THE_DAY"
            p:parameterDetailType="MessageOfTheDay" />
    </property>
    <property name="documentTypeName" value="MessageOfTheDayMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="MOTD" />
    <property name="workflowProperties" >
      <ref bean="MessageOfTheDayMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="MessageOfTheDayMaintenanceDocument-EditMessageOfTheDay" parent="MessageOfTheDayMaintenanceDocument-EditMessageOfTheDay-parentBean" />

  <bean id="MessageOfTheDayMaintenanceDocument-EditMessageOfTheDay-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Message Of The Day" />
    <property name="title" value="Edit Message Of The Day" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="financialSystemOriginationCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialSystemMessageOfTheDayText" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="MessageOfTheDayMaintenanceDocument-workflowProperties" parent="MessageOfTheDayMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="MessageOfTheDayMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
