<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.RecurringPaymentFrequency">


        <inquiry>
            <title>Recurring Payment Frequency Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="recurringPaymentFrequencyCode" />
                <field attributeName="recurringPaymentFrequencyDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Recurring Payment Frequency Lookup</title>

            <instructions>Lookup a Recurring Payment Frequency</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="recurringPaymentFrequencyDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="recurringPaymentFrequencyCode" required="false" />
                <lookupField attributeName="recurringPaymentFrequencyDescription" required="false" />
                <lookupField attributeName="active" required="false" />
             </lookupFields>

            <resultFields>
                <field attributeName="recurringPaymentFrequencyCode" />
                <field attributeName="recurringPaymentFrequencyDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>recurringPaymentFrequencyCode</titleAttribute>

        <attributes>

            <attribute name="recurringPaymentFrequencyCode" forceUppercase="true">
                <label>Recurring Payment Frequency Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

                <summary>recurringPaymentFrequencyCode</summary>
                <description>recurringPaymentFrequencyCode description...</description>
			</attribute>

            <attribute name="recurringPaymentFrequencyDescription" forceUppercase="true">
                <label>Recurring Payment Frequency Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="47" />
                </control>

                <summary>recurringPaymentFrequencyDescription</summary>
                <description>recurringPaymentFrequencyDescription description...</description>
			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
