<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="purapModule" class="org.kuali.core.KualiModule">
		<property name="moduleId" value="purap" />
		<property name="moduleName" value="Kuali Purchasing/Accounts Payable" />
		<property name="moduleCode" value="PA" />
		<property name="moduleUserService" ref="purapUserService" />
		<property name="moduleAuthorizer">
			<bean class="org.kuali.kfs.authorization.KfsModuleAuthorizerBase">
				<property name="packagePrefixes">
					<list>
						<value>org.kuali.module.purap.</value>
					</list>
				</property>
			</bean>
		</property>
		<property name="moduleUserRule">
			<null />
		</property>
		<property name="moduleUserPreRules">
			<null />
		</property>
		<property name="dataDictionaryPackages">
			<list>
				<value>org/kuali/module/purap/datadictionary</value>
			</list>
		</property>
		<property name="databaseRepositoryFilePaths">
			<list>
				<value>org/kuali/module/purap/OJB-repository-purap.xml</value>
			</list>
		</property>
	</bean>

	<bean id="purapUserService" class="org.kuali.module.purap.service.impl.PurapUserServiceImpl" parent="kualiModuleUserServiceBase">
	</bean>

	<bean id="requisitionService" class="org.kuali.module.purap.service.impl.RequisitionServiceImpl">
		<property name="businessObjectService">
			<ref bean="businessObjectService" />
		</property>
		<property name="dateTimeService">
			<ref bean="dateTimeService" />
		</property>
		<property name="requisitionDao">
			<ref bean="requisitionDao" />
		</property>
        <property name="vendorService">
            <ref bean="vendorService" />
        </property>
	</bean>

	<bean id="purapService" class="org.kuali.module.purap.service.impl.PurapServiceImpl">
		<property name="businessObjectService">
			<ref bean="businessObjectService" />
		</property>
		<property name="kualiConfigurationService">
			<ref bean="kualiConfigurationService" />
		</property>		
	</bean>

    <bean id="generalLedgerService" class="org.kuali.module.purap.service.impl.GeneralLedgerServiceImpl">
    </bean>
    
    <bean id="paymentRequestDao" parent="platformAwareDao" class="org.kuali.module.purap.dao.ojb.PaymentRequestDaoOjb" />
    
    <bean id="paymentRequestService" class="org.kuali.module.purap.service.impl.PaymentRequestServiceImpl">
    	<property name="businessObjectService">
			<ref bean="businessObjectService" />
		</property>
		<property name="dateTimeService">
			<ref bean="dateTimeService" />
		</property>
		<property name="paymentRequestDao">
			<ref bean="paymentRequestDao" />
		</property>
        <property name="vendorService">
            <ref bean="vendorService" />
        </property>
        <property name="purchaseOrderService">
            <ref bean="purchaseOrderService" />
        </property>
        <property name="documentService">
			<ref bean="documentService" />
		</property>
        <property name="generalLedgerService">
            <ref bean="generalLedgerService" />
        </property>
        <property name="purapService">
            <ref bean="purapService" />
        </property>
        <property name="noteService">
            <ref bean="noteService" />
        </property>
        <property name="workflowDocumentService">
            <ref bean="workflowDocumentService" />
        </property>
        <property name="kualiConfigurationService">
            <ref bean="kualiConfigurationService" />
        </property>	        
        <property name="kualiRuleService">
            <ref bean="kualiRuleService" />
        </property>	        
    
    </bean>

	<bean id="printService" class="org.kuali.module.purap.service.impl.PrintServiceImpl">
		<property name="businessObjectService">
			<ref bean="businessObjectService" />
		</property>
		<property name="kualiConfigurationService">
			<ref bean="kualiConfigurationService" />
		</property>
        <property name="imageDao">
            <ref bean="imageDao" />
        </property>
	</bean>
			
	<bean id="purchaseOrderService" class="org.kuali.module.purap.service.impl.PurchaseOrderServiceImpl">
		<property name="businessObjectService">
			<ref bean="businessObjectService" />
		</property>
		<property name="dateTimeService">
			<ref bean="dateTimeService" />
		</property>
		<property name="documentService">
			<ref bean="documentService" />
		</property>
        <property name="generalLedgerService">
            <ref bean="generalLedgerService" />
        </property>
        <property name="purapService">
            <ref bean="purapService" />
        </property>
        <property name="noteService">
            <ref bean="noteService" />
        </property>
		<property name="purchaseOrderDao">
			<ref bean="purchaseOrderDao" />
		</property>
        <property name="workflowDocumentService">
            <ref bean="workflowDocumentService" />
        </property>
        <property name="printService">
            <ref bean="printService" />
        </property>	
        <property name="kualiConfigurationService">
            <ref bean="kualiConfigurationService" />
        </property>	        
        <property name="kualiRuleService">
            <ref bean="kualiRuleService" />
        </property>	        
        <property name="vendorService">
            <ref bean="vendorService" />
        </property>
	</bean>

	<!-- parent class, this is so we can override attributes if we add any later -->
	<bean id="purchaseOrderPostProcessServiceBase" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorServiceBase" abstract="true">
        <property name="purchaseOrderService">
            <ref bean="purchaseOrderService" />
        </property>	
        <property name="generalLedgerService">
            <ref bean="generalLedgerService" />
        </property>	
        <property name="purapService">
            <ref bean="purapService" />
        </property>	
        <property name="dateTimeService">
            <ref bean="dateTimeService" />
        </property>	
	</bean>
	
    <bean id="purchaseOrderPostProcessorService" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorServiceImpl" parent="purchaseOrderPostProcessServiceBase">
    </bean>
	<bean id="purchaseOrderPostProcessorCloseService" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorCloseServiceImpl" parent="purchaseOrderPostProcessServiceBase">
	</bean>
	<bean id="purchaseOrderPostProcessorReopenService" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorReopenServiceImpl" parent="purchaseOrderPostProcessServiceBase">
	</bean>
	<bean id="purchaseOrderPostProcessorRetransmitService" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorRetransmitServiceImpl" parent="purchaseOrderPostProcessServiceBase">
	</bean>
	<bean id="purchaseOrderPostProcessorRemoveHoldService" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorRemoveHoldServiceImpl" parent="purchaseOrderPostProcessServiceBase">
	</bean>	
	<bean id="purchaseOrderPostProcessorPaymentHoldService" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorPaymentHoldServiceImpl" parent="purchaseOrderPostProcessServiceBase">
	</bean>
	<bean id="purchaseOrderPostProcessorVoidService" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorVoidServiceImpl" parent="purchaseOrderPostProcessServiceBase">
	</bean>		
  	<bean id="purchaseOrderPostProcessorPrintService" class="org.kuali.module.purap.service.impl.PurchaseOrderPostProcessorPrintServiceImpl" parent="purchaseOrderPostProcessServiceBase">
	</bean>
  
	<bean id="requisitionDao" parent="platformAwareDao" class="org.kuali.module.purap.dao.ojb.RequisitionDaoOjb" />
	
	<bean id="purchaseOrderDao" parent="platformAwareDao" class="org.kuali.module.purap.dao.ojb.PurchaseOrderDaoOjb" />

	<bean id="imageDao" parent="platformAwareDao" class="org.kuali.module.purap.dao.ojb.ImageDaoNet">
		<property name="kualiConfigurationService">
			<ref bean="kualiConfigurationService" />
		</property>		
	</bean>
	
	<bean id="singleConfirmationQuestion" class="org.kuali.module.purap.question.SingleConfirmationQuestion" singleton="false" />
</beans>
