<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProjectTypeMaintenanceDocument" parent="ProjectTypeMaintenanceDocument-parentBean" />

  <bean id="ProjectTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.routingform.bo.ProjectType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ProjectTypeMaintenanceDocument-EditProjectType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>projectTypeCode</value>
      </list>
    </property>
    <property name="label" value="Project Type" />
    <property name="shortLabel" value="Project Type" />
    <property name="summary" value="Project Type maintenance document" />
    <property name="description" value="Document used to create or update Project Type objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-RA"
            p:parameterName="PROJECT_TYPE"
            p:parameterDetailType="ProjectType" />
    </property>
    <property name="documentTypeName" value="ProjectTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PRJT" />
    <property name="workflowProperties" >
      <ref bean="ProjectTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>RA_PRE_AWARD_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ProjectTypeMaintenanceDocument-EditProjectType" parent="ProjectTypeMaintenanceDocument-EditProjectType-parentBean" />

  <bean id="ProjectTypeMaintenanceDocument-EditProjectType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Project Type" />
    <property name="title" value="Edit Project Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="projectTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="projectTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="sortNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="dataObjectMaintenanceCodeActiveIndicator"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ProjectTypeMaintenanceDocument-workflowProperties" parent="ProjectTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ProjectTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
