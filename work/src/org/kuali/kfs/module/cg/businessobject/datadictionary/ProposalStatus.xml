<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cg.bo.ProposalStatus">


        <inquiry>
            <title>Proposal Status Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="proposalStatusCode" />
                <field attributeName="proposalStatusDescription" />
                <field attributeName="rowActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Proposal Status Lookup</title>
   
            <instructions>Look up a Proposal Status</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="proposalStatusCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="proposalStatusCode" required="false" />
                <lookupField attributeName="proposalStatusDescription" required="false" />
                <lookupField attributeName="rowActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="proposalStatusCode" />
                <field attributeName="proposalStatusDescription" />
                <field attributeName="rowActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="proposalStatusCode" forceUppercase="true">
                <label>Proposal Status Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>Proposal Status Code</summary>
                <description>
					This is a one-letter code associated with a particular status of 
					the Proposal.  Examples include A=Awarded, P=Proposed, and U=Underwritten.  
				</description>
			</attribute>

            <attribute name="proposalStatusDescription" forceUppercase="true">
                <label>Proposal Status Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>15</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="17" />
                </control>

                <summary>Proposal Status Description</summary>
                <description>
					This is a brief description of the status of the Proposal which identifies 
					the stage or progression of the Proposal.  Examples of Proposal Status 
					Description are “Proposed”, “Underwritten” or “Rejected”.  
				</description>
			</attribute>

            <attribute name="rowActiveIndicator" forceUppercase="false">
                <label>Active Indicator</label>
                <shortLabel>Active Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>Active Indicator</summary>
                <description>
					The Active Indicator identifies whether a Proposal Status is currently 
					used in the system, or whether the Proposal Status is no longer used.  
					Existing Proposals may be associated with either active or inactive Proposal 
					Statuses.  New Proposals or Proposals which are being updated or revised 
					may only be associated with active Proposal Statuses.
				</description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
