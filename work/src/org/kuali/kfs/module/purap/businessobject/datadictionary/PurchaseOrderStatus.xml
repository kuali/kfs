<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.PurchaseOrderStatus">


        <inquiry>
            <title>Purchase Order Status Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="statusCode" />
                <field attributeName="statusDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Purchase Order Status Lookup</title>

            <instructions>Lookup a Purchase Order Status</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="statusDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="statusCode" required="false" />
                <lookupField attributeName="statusDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="statusCode" />
                <field attributeName="statusDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>statusCode</titleAttribute>

        <attributes>

            <attribute name="statusCode" forceUppercase="true">
                <label>Purchase Order Status Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

                <summary>purchaseOrderStatusCode</summary>
                <description>purchaseOrderStatusCode description...</description>
			</attribute>

            <attribute name="statusDescription">
                <label>Purchase Order Status Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="47" />
                </control>

                <summary>purchaseOrderStatusDescription</summary>
                <description>purchaseOrderStatusDescription description...</description>
			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
