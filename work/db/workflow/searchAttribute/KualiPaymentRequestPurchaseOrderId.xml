<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
  <ruleAttributes xmlns="ns:workflow/RuleAttribute" xsi:schemaLocation="ns:workflow/RuleAttribute resource:RuleAttribute">
    <ruleAttribute>
      <name>KualiPaymentRequestPurchaseOrderId</name>
      <className>org.kuali.workflow.attribute.KualiXmlSearchableAttributeImpl</className>
      <label>Kuali Payment Request Purchase Order ID</label>
      <description>Attribute to identify the Purchase Order Number of the Payment Request Document</description>
      <type>SearchableXmlAttribute</type>
      <searchingConfig>
        <fieldDef name="paymentRequestPurchaseOrderId" title="kuali_dd_label(PaymentRequestDocument)">
          <display>
            <type>text</type>
          </display>
          <searchDefinition dataType="long" />
          <validation required="false">
            <regex>^[0-9]{0,}$</regex>
            <message>Invalid PO Nbr Value.  A valid Purchase Order number value must be numeric.</message>
          </validation>
          <fieldEvaluation>
            <xpathexpression>wf:xstreamsafe('//document/purchaseOrderIdentifier')</xpathexpression>
          </fieldEvaluation>
        </fieldDef>
      </searchingConfig>
    </ruleAttribute>
  </ruleAttributes>
</data>
