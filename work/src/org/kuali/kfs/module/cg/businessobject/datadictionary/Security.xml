<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Security" parent="Security-parentBean" />

  <bean id="Security-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.cg.bo.Security" />
    <property name="inquiryDefinition" >
      <ref bean="Security-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Security-lookupDefinition" />
    </property>
    <property name="attributes" >
      <list>
        <ref bean="Security-kualiUser.personUniversalIdentifier" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Security-kualiUser.personUniversalIdentifier" parent="Security-kualiUser.personUniversalIdentifier-parentBean" />

  <bean id="Security-kualiUser.personUniversalIdentifier-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="kualiUser.personUniversalIdentifier" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Kuali Universal User ID" />
    <property name="shortLabel" value="UniversalID" />
    <property name="maxLength" value="50" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:exactLength="50" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="50" />
    </property>
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Security-inquiryDefinition" parent="Security-inquiryDefinition-parentBean" />

  <bean id="Security-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Contracts and Grants Security" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Security Details" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="kualiUser.personUniversalIdentifier" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Security-lookupDefinition" parent="Security-lookupDefinition-parentBean" />

  <bean id="Security-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Contracts and Grants Security Lookup" />
    <property name="instructions" value="Lookup a Contracts and Grants Security Record" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
        <property name="attributeNames" >
          <list>
            <value>kualiUser.personUniversalIdentifier</value>
          </list>
        </property>
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:required="true"
              p:attributeName="kualiUser.personUniversalIdentifier" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="kualiUser.personUniversalIdentifier" />
      </list>
    </property>
  </bean>
</beans>
