<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.ReportingCodes</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.chart.rules.ReportingCodesRule</businessRulesClass>

        <documentAuthorizerClass>org.kuali.core.document.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KualiReportingCodesMaintenanceDocument</documentTypeName>
        <documentTypeCode>RPTC</documentTypeCode>
        <label>Financial Reporting Code Maintenance Document</label>
        <shortLabel>FinRptCdMaintDoc</shortLabel>
        <summary>Financial Reporting Code Maintenance Document</summary>
        <description>Maintenance document which allows you to create, remove or modify Financial Reporting Codes.</description>

        <lockingKeys>
            <field attributeName="chartOfAccountsCode" />
            <field attributeName="organizationCode" />
            <field attributeName="financialReportingCode" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="chart" attributeToHighlightOnFail="chartOfAccountsCode" />
            <reference attributeName="org" attributeToHighlightOnFail="organizationCode" />
            <reference attributeName="universalUser" attributeToHighlightOnFail="universalUser.personUserIdentifier" />
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit Financial Reporting Codes">
                <maintainableItems>
                    <maintainableField name="chartOfAccountsCode" required="true" />
                    <maintainableField name="organizationCode" required="true" />
                    <maintainableField name="financialReportingCode" required="true" />
                    <maintainableField name="financialReportingCodeDescription" required="true" />
                    <maintainableField name="financialReportingCodeMgrId" required="true" readOnly="true" />
                    <maintainableField name="universalUser.personUserIdentifier" required="true" />
                    <maintainableField name="universalUser.personName" required="false" readOnly="true" />
                    <maintainableField name="financialReportsToReportingCode" required="true" />
                    <maintainableField name="versionNumber" required="true" />

                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>

</dictionaryEntry>