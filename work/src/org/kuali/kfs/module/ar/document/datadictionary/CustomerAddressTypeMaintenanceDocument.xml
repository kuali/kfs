<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CustomerAddressTypeMaintenanceDocument" parent="CustomerAddressTypeMaintenanceDocument-parentBean" />

  <bean id="CustomerAddressTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.ar.bo.CustomerAddressType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="CustomerAddressTypeMaintenanceDocument-EditCustomerAddressType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>customerAddressTypeCode</value>
      </list>
    </property>
    <property name="label" value="Customer Address Type" />
    <property name="shortLabel" value="CustAddrTyp" />
    <property name="summary" value="Customer Address Type maintenance document" />
    <property name="description" value="Document used to create or update Customer Address Type objects" />
    <property name="documentTypeName" value="CustomerAddressTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="CATY" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="CustomerAddressTypeMaintenanceDocument-EditCustomerAddressType" parent="CustomerAddressTypeMaintenanceDocument-EditCustomerAddressType-parentBean" />

  <bean id="CustomerAddressTypeMaintenanceDocument-EditCustomerAddressType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Customer Address Type" />
    <property name="title" value="Edit Customer Address Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="customerAddressTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="customerAddressTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
