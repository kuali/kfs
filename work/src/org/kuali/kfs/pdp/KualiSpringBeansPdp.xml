			<list>
				<ref bean="pdpExtractChecksStep" />
			</list>
		</property>
	</bean>

	<bean id="pdpLoadPaymentsStep" class="org.kuali.module.pdp.batch.LoadPaymentsStep" parent="step">
		<property name="paymentFileService" ref="pdpPaymentFileService"/>
	</bean>

	<bean id="pdpDailyReportStep" class="org.kuali.module.pdp.batch.DailyReportStep" parent="step">
