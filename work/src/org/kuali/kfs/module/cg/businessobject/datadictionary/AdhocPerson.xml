<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AdhocPerson" parent="AdhocPerson-parentBean" />

  <bean id="AdhocPerson-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.bo.AdhocPerson" />
    <property name="objectLabel" value="Adhoc Permission" />
    <property name="attributes" >
      <list>
        <ref bean="AdhocPerson-documentNumber" />
        <ref bean="AdhocPerson-personUniversalIdentifier" />
        <ref bean="AdhocPerson-permissionCode" />
        <ref bean="AdhocPerson-addedByPerson" />
        <ref bean="AdhocPerson-personAddedTimestamp" />
        <ref bean="AdhocPerson-objectId" />
        <ref bean="AdhocPerson-versionNumber" />
        <ref bean="AdhocPerson-user" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="AdhocPerson-documentNumber" parent="AdhocPerson-documentNumber-parentBean" />

  <bean id="AdhocPerson-documentNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="documentNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Document Number" />
    <property name="shortLabel" value="Document Number" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="8" />
    </property>
  </bean>
  <bean id="AdhocPerson-personUniversalIdentifier" parent="AdhocPerson-personUniversalIdentifier-parentBean" />

  <bean id="AdhocPerson-personUniversalIdentifier-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="personUniversalIdentifier" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Universal ID" />
    <property name="shortLabel" value="UnvlID" />
    <property name="maxLength" value="12" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="12" />
    </property>
  </bean>
  <bean id="AdhocPerson-permissionCode" parent="AdhocPerson-permissionCode-parentBean" />

  <bean id="AdhocPerson-permissionCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="permissionCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Permission Type" />
    <property name="shortLabel" value="Permission Type" />
    <property name="maxLength" value="2" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.module.kra.lookup.keyvalues.ResearchAdhocPermissionTypeValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
  </bean>
  <bean id="AdhocPerson-addedByPerson" parent="AdhocPerson-addedByPerson-parentBean" />

  <bean id="AdhocPerson-addedByPerson-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="addedByPerson" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Added By Person" />
    <property name="shortLabel" value="prsnAdd" />
    <property name="maxLength" value="20" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="20" />
    </property>
  </bean>
  <bean id="AdhocPerson-personAddedTimestamp" parent="AdhocPerson-personAddedTimestamp-parentBean" />

  <bean id="AdhocPerson-personAddedTimestamp-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="personAddedTimestamp" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Person Added Timestamp" />
    <property name="shortLabel" value="prsnAddTs" />
    <property name="maxLength" value="10" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="11" />
    </property>
  </bean>
  <bean id="AdhocPerson-objectId" parent="AdhocPerson-objectId-parentBean" />

  <bean id="AdhocPerson-objectId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="objectId" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Object Id" />
    <property name="shortLabel" value="GUID" />
    <property name="maxLength" value="36" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="36" />
    </property>
  </bean>
  <bean id="AdhocPerson-versionNumber" parent="AdhocPerson-versionNumber-parentBean" />

  <bean id="AdhocPerson-versionNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="versionNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Version Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="10" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="-1" />
    </property>
  </bean>
  <bean id="AdhocPerson-user" parent="AdhocPerson-user-parentBean" />

  <bean id="AdhocPerson-user-parentBean" abstract="true" parent="UniversalUser-personUniversalIdentifier">
    <property name="name" value="user" />
    <property name="label" value="Universal User" />
    <property name="shortLabel" value="User" />
  </bean>
</beans>
