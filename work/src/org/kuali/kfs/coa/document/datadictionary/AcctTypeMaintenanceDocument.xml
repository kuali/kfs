<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AcctTypeMaintenanceDocument" parent="AcctTypeMaintenanceDocument-parentBean" />

  <bean id="AcctTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.AcctType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AcctTypeMaintenanceDocument-EditAccountType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>accountTypeCode</value>
      </list>
    </property>
    <property name="label" value="Account Type" />
    <property name="shortLabel" value="Account Type" />
    <property name="summary" value="Account Type Maintenance Document" />
    <property name="description" value="Maintenance document which allows you to create new Account Types, or modify existing Account Types." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="ACCOUNT_TYPE"
            p:parameterDetailType="AcctType" />
    </property>
    <property name="documentTypeName" value="AcctTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ATYP" />
    <property name="workflowProperties" >
      <ref bean="AcctTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AcctTypeMaintenanceDocument-EditAccountType" parent="AcctTypeMaintenanceDocument-EditAccountType-parentBean" />

  <bean id="AcctTypeMaintenanceDocument-EditAccountType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Account Type" />
    <property name="title" value="Edit Account Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="accountTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountTypeName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="AcctTypeMaintenanceDocument-workflowProperties" parent="AcctTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="AcctTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
