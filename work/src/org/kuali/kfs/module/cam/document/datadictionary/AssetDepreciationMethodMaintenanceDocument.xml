<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetDepreciationMethodMaintenanceDocument" parent="AssetDepreciationMethodMaintenanceDocument-parentBean" />

  <bean id="AssetDepreciationMethodMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetDepreciationMethod" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetDepreciationMethodMaintenanceDocument-EditAssetDepreciationMethod" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>depreciationMethodCode</value>
      </list>
    </property>
    <property name="label" value="Asset Depreciation Method" />
    <property name="shortLabel" value="Asset Depreciation Method" />
    <property name="summary" value="Asset Depreciation Method maintenance document" />
    <property name="description" value="Document used to create or update Asset Depreciation Method objects" />
    <property name="documentTypeName" value="AssetDepreciationMethodMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="DPRM" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>CM_ADMINISTRATORS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetDepreciationMethodMaintenanceDocument-EditAssetDepreciationMethod" parent="AssetDepreciationMethodMaintenanceDocument-EditAssetDepreciationMethod-parentBean" />

  <bean id="AssetDepreciationMethodMaintenanceDocument-EditAssetDepreciationMethod-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Asset Depreciation Method" />
    <property name="title" value="Edit Asset Depreciation Method" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="depreciationMethodCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="depreciationMethodName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
