<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="GrantDescription" parent="GrantDescription-parentBean" />

  <bean id="GrantDescription-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.cg.bo.GrantDescription" />
    <property name="inquiryDefinition" >
      <ref bean="GrantDescription-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="GrantDescription-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Grant Description" />
    <property name="attributes" >
      <list>
        <ref bean="GrantDescription-grantDescription" />
        <ref bean="GrantDescription-grantDescriptionCode" />
        <ref bean="GrantDescription-grantDescriptionActiveCode" />
        <ref bean="GrantDescription-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="GrantDescription-grantDescription" parent="GrantDescription-grantDescription-parentBean" />

  <bean id="GrantDescription-grantDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="grantDescription" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Grant Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="25" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="27" />
    </property>
  </bean>
  <bean id="GrantDescription-grantDescriptionCode" parent="GrantDescription-grantDescriptionCode-parentBean" />

  <bean id="GrantDescription-grantDescriptionCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="grantDescriptionCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Grant Description Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="3" />
    <property name="validationPattern" >
      <bean parent="AlphaNumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="5" />
    </property>
  </bean>
  <bean id="GrantDescription-grantDescriptionActiveCode" parent="GrantDescription-grantDescriptionActiveCode-parentBean" />

  <bean id="GrantDescription-grantDescriptionActiveCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="grantDescriptionActiveCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Active Indicator" />
    <property name="shortLabel" value="Active Indicator" />
    <property name="maxLength" value="1" />
    <property name="control" >
      <bean parent="CheckboxControlDefinition" />
    </property>
  </bean>
  <bean id="GrantDescription-versionNumber" parent="GrantDescription-versionNumber-parentBean" />

  <bean id="GrantDescription-versionNumber-parentBean" abstract="true" parent="GenericAttributes-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="GrantDescription-inquiryDefinition" parent="GrantDescription-inquiryDefinition-parentBean" />

  <bean id="GrantDescription-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Grant Description Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Grant Description Details" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="grantDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="grantDescriptionCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="grantDescriptionActiveCode" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="GrantDescription-lookupDefinition" parent="GrantDescription-lookupDefinition-parentBean" />

  <bean id="GrantDescription-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Grant Description Lookup" />
    <property name="instructions" value="Look up a Grant Description" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="grantDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="grantDescriptionCode" />
        <bean parent="FieldDefinition"
              p:attributeName="grantDescriptionActiveCode" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="grantDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="grantDescriptionCode" />
        <bean parent="FieldDefinition"
              p:attributeName="grantDescriptionActiveCode" />
      </list>
    </property>
  </bean>
</beans>
