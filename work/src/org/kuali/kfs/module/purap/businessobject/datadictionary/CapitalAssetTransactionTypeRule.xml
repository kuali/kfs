<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.CapitalAssetTransactionTypeRule">

        <inquiry>
            <title>Capital Asset Transaction Type Rule Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>               
                <field attributeName="capitalAssetTransactionTypeCode" />
                <field attributeName="financialObjectSubTypeCode" />
                <field attributeName="capitalAssetRelationshipLimitNumber" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Capital Asset Transaction Type Rule Lookup</title>

            <instructions>Lookup a Capital Asset Transaction Type Rule</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="capitalAssetTransactionTypeCode" />
                    <sortAttribute attributeName="financialObjectSubTypeCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="capitalAssetTransactionTypeCode" required="false" />
                <lookupField attributeName="financialObjectSubTypeCode" required="false" />
                <lookupField attributeName="capitalAssetRelationshipLimitNumber" required="false" />
            </lookupFields>

            <resultFields>               
                <field attributeName="capitalAssetTransactionTypeCode" />
                <field attributeName="financialObjectSubTypeCode" />
                <field attributeName="capitalAssetRelationshipLimitNumber" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="capitalAssetTransactionTypeCode" forceUppercase="true">
                <label>Capital Asset Transaction Type Code</label>
                <shortLabel>Tran Type Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="financialObjectSubTypeCode" forceUppercase="true">
                <label>Financial Object Sub Type Code</label>
                <shortLabel>Subobject Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>

			</attribute>
			
			<attribute name="capitalAssetRelationshipLimitNumber" forceUppercase="true">
                <label>Capital Asset Relationship Limit Number</label>
                <shortLabel>Relationship Limit</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="5" />
                </control>

			</attribute>

            <attribute name="versionNumber" forceUppercase="true">
                <label>Version Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

			</attribute>

        </attributes>
    </businessObject>
</dictionaryEntry>
