<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetGlobalMaintenanceDocument" parent="AssetGlobalMaintenanceDocument-parentBean" />

  <bean id="AssetGlobalMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetGlobal" />
    <property name="maintainableClass" value="org.kuali.module.cams.maintenance.AssetGlobalMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetGlobalMaintenanceDocument-AssetDetailInformation" />
        <ref bean="AssetGlobalMaintenanceDocument-CampusLocation" />
        <ref bean="AssetGlobalMaintenanceDocument-AddPayments" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="organizationOwnerChartOfAccounts"
              p:attributeToHighlightOnFail="organizationOwnerChartOfAccountsCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="organizationOwnerAccount"
              p:attributeToHighlightOnFail="organizationOwnerAccountNumber" />
        <bean parent="ReferenceDefinition"
              p:attributeName="assetCondition"
              p:attributeToHighlightOnFail="conditionCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="capitalAssetType"
              p:attributeToHighlightOnFail="capitalAssetTypeCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="acquisitionType"
              p:attributeToHighlightOnFail="acquisitionTypeCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="agency"
              p:attributeToHighlightOnFail="agencyNumber" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>documentNumber</value>
      </list>
    </property>
    <property name="label" value="Asset Global" />
    <property name="shortLabel" value="Asset Global" />
    <property name="summary" value="Global Asset Maintenance Document" />
    <property name="description" value="Document used to create or update global asset document." />
    <property name="documentTypeName" value="AssetGlobalMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.cams.rules.AssetGlobalRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="GAA" />
    <property name="webScriptFiles" >
      <list>
        <value>../dwr/interface/AccountService.js</value>
        <value>../scripts/cams/assetGlobalMaintenanceDocument.js</value>
      </list>
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetGlobalMaintenanceDocument-AssetDetailInformation" parent="AssetGlobalMaintenanceDocument-AssetDetailInformation-parentBean" />

  <bean id="AssetGlobalMaintenanceDocument-AssetDetailInformation-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Asset Detail Information" />
    <property name="title" value="Asset Detail Information" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationOwnerChartOfAccountsCode"
              p:required="true"
              p:webUILeaveFieldFunction="accountNameLookup" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationOwnerAccountNumber"
              p:required="true"
              p:webUILeaveFieldFunction="accountNameLookup" />
        <bean parent="MaintainableFieldDefinition"
              p:name="agencyNumber"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="acquisitionTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="inventoryStatusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="conditionCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorName"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="manufacturerName"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="manufacturerModelNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationText" />
        <bean parent="MaintainableFieldDefinition"
              p:name="representativeUniversalIdentifier"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="assetRepresentative.personUserIdentifier" />
        <bean parent="MaintainableFieldDefinition"
              p:name="assetRepresentative.personName"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="lastInventoryDate"
              p:required="false"
              p:readOnly="true"
              p:defaultValueFinderClass="org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="createDate"
              p:required="false"
              p:readOnly="true"
              p:defaultValueFinderClass="org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetInServiceDate"
              p:required="false"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetDepreciationDate"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="landCountyName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="landAcreageSize" />
        <bean parent="MaintainableFieldDefinition"
              p:name="landParcelNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentNextLineNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentTypeCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
  <bean id="AssetGlobalMaintenanceDocument-CampusLocation" parent="AssetGlobalMaintenanceDocument-CampusLocation-parentBean" />

  <bean id="AssetGlobalMaintenanceDocument-CampusLocation-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Location Information" />
    <property name="title" value="Location" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="assetSharedDetails" />
          <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetGlobalDetail" />
          <property name="summaryTitle" value="Asset Location" />
          <property name="summaryFields" >
            <list>
               <bean parent="MaintainableFieldDefinition"
                    p:name="campusCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingCode"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingRoomNumber"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingSubRoomNumber" 
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusName"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusAddress"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusCityName"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusStateCode"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusZipCode"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusCountryCode" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>              
              <bean parent="MaintainableFieldDefinition"
                    p:name="campusCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingCode"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingRoomNumber"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingSubRoomNumber" 
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusName"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusAddress"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusCityName"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusStateCode"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusZipCode"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="offCampusCountryCode" />
               <bean parent="MaintainableFieldDefinition"
                    p:name="locationQuantity"
                    p:required="true"
                     />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />       
            </list>
          </property>
          <property name="maintainableCollections" >
            <list>
              <bean parent="MaintainableCollectionDefinition">
                <property name="name" value="assetGlobalUniqueDetails" />
                <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetGlobalDetail" />
                <property name="summaryTitle" value="Asset Unique Information" />
                <property name="summaryFields" >
                  <list>
                    <bean parent="MaintainableFieldDefinition"
                          p:name="capitalAssetNumber" 
                          />
                  </list>
                </property>
                <property name="maintainableFields" >
                  <list>
                	 <bean parent="MaintainableFieldDefinition"
                   		 p:name="capitalAssetNumber"
                   		 p:readOnly="true" />
                    <bean parent="MaintainableFieldDefinition"
                          p:name="serialNumber" />
                    <bean parent="MaintainableFieldDefinition"
                          p:name="organizationInventoryName" />
                    <bean parent="MaintainableFieldDefinition"
                          p:name="organizationAssetTypeIdentifier" />
                    <bean parent="MaintainableFieldDefinition"
                          p:name="governmentTagNumber" />
                    <bean parent="MaintainableFieldDefinition"
                          p:name="campusTagNumber" />
                    <bean parent="MaintainableFieldDefinition"
                          p:name="nationalStockNumber" />
                    <bean parent="MaintainableFieldDefinition"
                          p:name="versionNumber" />
					<bean parent="MaintainableFieldDefinition"
                    	  p:name="newCollectionRecord"
                    	  p:defaultValue="true" />                           
                  </list>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  <bean id="AssetGlobalMaintenanceDocument-AddPayments" parent="AssetGlobalMaintenanceDocument-AddPayments-parentBean" />

  <bean id="AssetGlobalMaintenanceDocument-AddPayments-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Add Payments" />
    <property name="title" value="Add Payments" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="assetPaymentDetails" />
          <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetPaymentDetail" />
          <property name="summaryTitle" value="Asset Payment" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialDocumentLineNumber" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialDocumentLineNumber"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="chartOfAccountsCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountNumber"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="subAccountNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialObjectCode"
                    p:required="false" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialSubObjectCode" 
                    p:overrideLookupClass="org.kuali.module.chart.bo.SubObjCd"
                    p:overrideFieldConversions="financialSubObjectCode:financialSubObjectCode,chartOfAccountsCode:chartOfAccountsCode,accountNumber:accountNumber,financialObjectCode:accountObjectCode"
                    />
              <bean parent="MaintainableFieldDefinition"
                    p:name="projectCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="organizationReferenceId" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="expenditureFinancialDocumentNumber"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="expenditureFinancialDocumentTypeCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="purchaseOrderNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="requisitionNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="expenditureFinancialDocumentPostedDate"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialDocumentPostingYear"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialDocumentPostingPeriodCode"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="amount"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="paymentApplicationDate"
                    p:required="true" 
                    p:readOnly="true"
					p:defaultValueFinderClass="org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />      
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
