<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="UniversityDateMaintenanceDocument" parent="UniversityDateMaintenanceDocument-parentBean" />

  <bean id="UniversityDateMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.gl.bo.UniversityDate" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="UniversityDateMaintenanceDocument-EditUniversityDate" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="accountingPeriod"
              p:attributeToHighlightOnFail="universityFiscalAccountingPeriod" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>universityDate</value>
      </list>
    </property>
    <property name="label" value="University Date" />
    <property name="shortLabel" value="University Date" />
    <property name="summary" value="University Date maintenance document" />
    <property name="description" value="Document used to create or update University Date objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-GL"
            p:parameterName="UNIVERSITY_DATE"
            p:parameterDetailType="UniversityDate" />
    </property>
    <property name="documentTypeName" value="UniversityDateMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="UDAT" />
    <property name="workflowProperties" >
      <ref bean="UniversityDateMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="UniversityDateMaintenanceDocument-EditUniversityDate" parent="UniversityDateMaintenanceDocument-EditUniversityDate-parentBean" />

  <bean id="UniversityDateMaintenanceDocument-EditUniversityDate-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit University Date" />
    <property name="title" value="Edit University Date" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="universityDate"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalYear"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalAccountingPeriod"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="UniversityDateMaintenanceDocument-workflowProperties" parent="UniversityDateMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="UniversityDateMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
