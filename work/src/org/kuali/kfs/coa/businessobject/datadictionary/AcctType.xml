<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AcctType" parent="AcctType-parentBean" />

  <bean id="AcctType-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.AcctType" />
    <property name="inquiryDefinition" >
      <ref bean="AcctType-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="AcctType-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="accountTypeCode" />
    <property name="objectLabel" value="Account Type" />
    <property name="attributes" >
      <list>
        <ref bean="AcctType-accountTypeCode" />
        <ref bean="AcctType-accountTypeName" />
        <ref bean="AcctType-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="AcctType-accountTypeCode" parent="AcctType-accountTypeCode-parentBean" />

  <bean id="AcctType-accountTypeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="accountTypeCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Account Type Code" />
    <property name="shortLabel" value="Account Type" />
    <property name="maxLength" value="2" />
    <property name="validationPattern" >
      <bean parent="AlphaNumericValidationPattern"
            p:exactLength="2" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="2" />
    </property>
  </bean>
  <bean id="AcctType-accountTypeName" parent="AcctType-accountTypeName-parentBean" />

  <bean id="AcctType-accountTypeName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="accountTypeName" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Account Type Name" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="40" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="50" />
    </property>
  </bean>
  <bean id="AcctType-versionNumber" parent="AcctType-versionNumber-parentBean" />

  <bean id="AcctType-versionNumber-parentBean" abstract="true" parent="GenericAttributes-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="AcctType-inquiryDefinition" parent="AcctType-inquiryDefinition-parentBean" />

  <bean id="AcctType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Account Type Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Header Text" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="accountTypeCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="accountTypeName" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="AcctType-lookupDefinition" parent="AcctType-lookupDefinition-parentBean" />

  <bean id="AcctType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Account Type Lookup" />
    <property name="instructions" value="Lookup an Account Type" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
        <property name="attributeNames" >
          <list>
            <value>accountTypeCode</value>
          </list>
        </property>
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="accountTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="accountTypeName" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="accountTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="accountTypeName" />
      </list>
    </property>
  </bean>
</beans>
