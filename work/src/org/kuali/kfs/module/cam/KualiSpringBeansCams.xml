    <bean id="assetLocationService" class="org.kuali.module.cams.service.impl.AssetLocationServiceImpl" />
    
    <bean id="assetPaymentDao" parent="platformAwareDao" class="org.kuali.module.cams.dao.ojb.AssetPaymentDaoOjb"/>
    
    <bean id="assetPaymentService" class="org.kuali.module.cams.service.impl.AssetPaymentServiceImpl">    
    	<property name="assetPaymentDao" ref="assetPaymentDao" />
    	<property name="parameterService" ref="parameterService" />
    	<property name="universityDateService" ref="universityDateService" />
