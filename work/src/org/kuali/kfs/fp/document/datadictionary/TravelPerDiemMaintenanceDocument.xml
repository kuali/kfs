<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="TravelPerDiemMaintenanceDocument" parent="TravelPerDiemMaintenanceDocument-parentBean" />

  <bean id="TravelPerDiemMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.financial.bo.TravelPerDiem" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="TravelPerDiemMaintenanceDocument-EditTravelPerDiemCategory" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>fiscalYear</value>
        <value>perDiemCountryName</value>
      </list>
    </property>
    <property name="label" value="Disbursement Voucher Travel Per Diem" />
    <property name="shortLabel" value="Disbursement Voucher Travel Per Diem" />
    <property name="summary" value="Travel Per Diem Maintenance Document" />
    <property name="description" value="Document used to create or update Travel Per Diem objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="TRAVEL_PER_DIEM"
            p:parameterDetailType="TravelPerDiem" />
    </property>
    <property name="documentTypeName" value="TravelPerDiemMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="DVPD" />
    <property name="workflowProperties" >
      <ref bean="TravelPerDiemMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="TravelPerDiemMaintenanceDocument-EditTravelPerDiemCategory" parent="TravelPerDiemMaintenanceDocument-EditTravelPerDiemCategory-parentBean" />

  <bean id="TravelPerDiemMaintenanceDocument-EditTravelPerDiemCategory-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Travel Per Diem Category" />
    <property name="title" value="Edit Travel Per Diem Category" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="fiscalYear"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="perDiemCountryName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="perDiemCountryText" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="TravelPerDiemMaintenanceDocument-workflowProperties" parent="TravelPerDiemMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="TravelPerDiemMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
