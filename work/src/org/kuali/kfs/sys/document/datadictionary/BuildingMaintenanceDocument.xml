<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="BuildingMaintenanceDocument" parent="BuildingMaintenanceDocument-parentBean" />

  <bean id="BuildingMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.bo.Building" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="BuildingMaintenanceDocument-EditBuilding" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="campus"
              p:attributeToHighlightOnFail="campusCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="buildingAddressZip"
              p:attributeToHighlightOnFail="buildingAddressZipCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>campusCode</value>
        <value>buildingCode</value>
      </list>
    </property>
    <property name="label" value="Building" />
    <property name="shortLabel" value="Building" />
    <property name="summary" value="Building maintenance document" />
    <property name="description" value="Document used to create or update Building objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-SY"
            p:parameterName="BUILDING"
            p:parameterDetailType="Building" />
    </property>
    <property name="documentTypeName" value="BuildingMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="BLDG" />
    <property name="workflowProperties" >
      <ref bean="BuildingMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="BuildingMaintenanceDocument-EditBuilding" parent="BuildingMaintenanceDocument-EditBuilding-parentBean" />

  <bean id="BuildingMaintenanceDocument-EditBuilding-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Building" />
    <property name="title" value="Edit Building" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="campusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingStreetAddress" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingAddressCityName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingAddressStateCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingAddressZipCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="alternateBuildingCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="BuildingMaintenanceDocument-workflowProperties" parent="BuildingMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="BuildingMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
