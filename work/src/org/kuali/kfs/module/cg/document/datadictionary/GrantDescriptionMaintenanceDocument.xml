<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.cg.bo.GrantDescription</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KualiContractsAndGrantsGrantDescriptionMaintenanceDocument</documentTypeName>
        <documentTypeCode>GDES</documentTypeCode>

        <label>Grant Description Maintenance Document</label>
        <shortLabel>GrantDescriptionMaintDoc</shortLabel>

        <summary>Grant Description Maintenance Document</summary>
        <description>Document used to create or update Grant Description objects</description>

        <lockingKeys>
            <field attributeName="grantDescriptionCode" />
        </lockingKeys>

        <maintainableSections>
            <maintainableSection title="Edit Grant Description">
                <maintainableItems>
                    <maintainableField name="grantDescriptionCode" required="true" />
                    <maintainableField name="grantDescription" required="true" />
                    <maintainableField name="grantDescriptionActiveCode" required="true" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
