<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AdhocOrg" parent="AdhocOrg-parentBean" />

  <bean id="AdhocOrg-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.bo.AdhocOrg" />
    <property name="attributes" >
      <list>
        <ref bean="AdhocOrg-documentNumber" />
        <ref bean="AdhocOrg-fiscalCampusCode" />
        <ref bean="AdhocOrg-primaryDepartmentCode" />
        <ref bean="AdhocOrg-permissionCode" />
        <ref bean="AdhocOrg-addedByPerson" />
        <ref bean="AdhocOrg-personAddedTimestamp" />
        <ref bean="AdhocOrg-objectId" />
        <ref bean="AdhocOrg-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="AdhocOrg-documentNumber" parent="AdhocOrg-documentNumber-parentBean" />

  <bean id="AdhocOrg-documentNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="documentNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Document Number" />
    <property name="shortLabel" value="Document Number" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="8" />
    </property>
  </bean>
  <bean id="AdhocOrg-fiscalCampusCode" parent="AdhocOrg-fiscalCampusCode-parentBean" />

  <bean id="AdhocOrg-fiscalCampusCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="fiscalCampusCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Chart Code" />
    <property name="shortLabel" value="Chart" />
    <property name="maxLength" value="2" />
    <property name="validationPattern" >
      <bean parent="AlphaValidationPattern"
            p:exactLength="2" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="2" />
    </property>
  </bean>
  <bean id="AdhocOrg-primaryDepartmentCode" parent="AdhocOrg-primaryDepartmentCode-parentBean" />

  <bean id="AdhocOrg-primaryDepartmentCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="primaryDepartmentCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Organization Code" />
    <property name="shortLabel" value="Org" />
    <property name="maxLength" value="4" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="4" />
    </property>
  </bean>
  <bean id="AdhocOrg-permissionCode" parent="AdhocOrg-permissionCode-parentBean" />

  <bean id="AdhocOrg-permissionCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="permissionCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Permission Type" />
    <property name="shortLabel" value="Permission Type" />
    <property name="maxLength" value="2" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.module.kra.lookup.keyvalues.ResearchAdhocPermissionTypeValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
  </bean>
  <bean id="AdhocOrg-addedByPerson" parent="AdhocOrg-addedByPerson-parentBean" />

  <bean id="AdhocOrg-addedByPerson-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="addedByPerson" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Added By Person" />
    <property name="shortLabel" value="prsnAdd" />
    <property name="maxLength" value="20" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="20" />
    </property>
  </bean>
  <bean id="AdhocOrg-personAddedTimestamp" parent="AdhocOrg-personAddedTimestamp-parentBean" />

  <bean id="AdhocOrg-personAddedTimestamp-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="personAddedTimestamp" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Person Added Timestamp" />
    <property name="shortLabel" value="prsnAddTs" />
    <property name="maxLength" value="10" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="11" />
    </property>
  </bean>
  <bean id="AdhocOrg-objectId" parent="AdhocOrg-objectId-parentBean" />

  <bean id="AdhocOrg-objectId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="objectId" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Object Id" />
    <property name="shortLabel" value="GUID" />
    <property name="maxLength" value="36" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="36" />
    </property>
  </bean>
  <bean id="AdhocOrg-versionNumber" parent="AdhocOrg-versionNumber-parentBean" />

  <bean id="AdhocOrg-versionNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="versionNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Version Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="10" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="-1" />
    </property>
  </bean>
</beans>
