<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="IndirectCostAdjustmentDocument" parent="IndirectCostAdjustmentDocument-parentBean" />

  <bean id="IndirectCostAdjustmentDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Indirect Cost Adjustment" />
    <property name="shortLabel" value="Indirect Cost Adjustment" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="&amp;nbsp;" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="INDIRECT_COST_ADJUSTMENT"
            p:parameterDetailType="IndirectCostAdjustment" />
    </property>
    <property name="documentTypeName" value="IndirectCostAdjustmentDocument" />
    <property name="documentClass" value="org.kuali.module.financial.document.IndirectCostAdjustmentDocument" />
    <property name="businessRulesClass" value="org.kuali.module.financial.rules.IndirectCostAdjustmentDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.document.authorization.AccountingDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ICA" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="IndirectCostAdjustmentDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="IndirectCostAdjustmentDocument-workflowProperties" parent="IndirectCostAdjustmentDocument-workflowProperties-parentBean" />

  <bean id="IndirectCostAdjustmentDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
