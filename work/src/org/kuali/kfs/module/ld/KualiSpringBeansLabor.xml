<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="laborModule" class="org.kuali.core.KualiModule">
        <property name="moduleId" value="labor" />
        <property name="moduleName" value="Kuali Labor Distribution" />
        <property name="moduleCode" value="LB" />
        <property name="moduleUserService" ref="laborUserService" />
        <property name="moduleAuthorizer">
            <bean class="org.kuali.core.authorization.KualiModuleAuthorizerBase">
                <property name="packagePrefixes">
                    <list>
                        <value>org.kuali.module.labor.</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="moduleUserRule">
            <null />
        </property>
        <property name="moduleUserPreRules">
            <null />
        </property>
        <property name="dataDictionaryPackages">
            <list>
                <value>org.kuali.module.labor.datadictionary</value>
            </list>
        </property>
    </bean>

    <!--  Section 1: Spring Beans for Business Objects -->

    <bean id="laborUserService" class="org.kuali.module.labor.service.impl.LaborUserServiceImpl" parent="kualiModuleUserServiceBase">
        <property name="chartUserService">
            <ref bean="chartUserService" />
        </property>
    </bean>

    <bean id="laborLedgerPendingEntryService" class="org.kuali.module.labor.service.impl.LaborLedgerPendingEntryServiceImpl">
        <property name="businessObjectService">
            <ref bean="businessObjectService" />
        </property>
    </bean>

    <bean id="laborGeneralLedgerEntryService" class="org.kuali.module.labor.service.impl.LaborGeneralLedgerEntryServiceImpl">
        <property name="businessObjectService">
            <ref bean="businessObjectService" />
        </property>
        <property name="laborGeneralLedgerEntryDao">
            <ref bean="laborGeneralLedgerEntryDao" />
        </property>
    </bean>

    <bean id="laborLedgerEntryService" class="org.kuali.module.labor.service.impl.LaborLedgerEntryServiceImpl">
        <property name="businessObjectService">
            <ref bean="businessObjectService" />
        </property>
        <property name="laborLedgerEntryDao">
            <ref bean="laborLedgerEntryDao" />
        </property>
    </bean>

    <bean id="laborOriginEntryService" class="org.kuali.module.labor.service.impl.LaborOriginEntryServiceImpl">
        <property name="laborOriginEntryDao">
            <ref bean="laborOriginEntryDao" />
        </property>
        <property name="originEntryGroupService">
            <ref bean="glOriginEntryGroupService" />
        </property>
        <property name="dateTimeService">
            <ref bean="dateTimeService" />
        </property>
        <property name="originEntryDao">
            <ref bean="glOriginEntryDao" />
        </property>
    </bean>

    <!-- Section 2: Spring Beans for DAO -->

    <bean id="laborOriginEntryDao" class="org.kuali.module.labor.dao.ojb.LaborOriginEntryDaoOjb">
        <property name="jcdAlias">
            <value>dataSource</value>
        </property>
        <property name="entryClass">
            <bean class="java.lang.Class" factory-method="forName">
                <constructor-arg value="org.kuali.module.labor.bo.LaborOriginEntry" />
            </bean>
        </property>
    </bean>

    <bean id="laborLedgerEntryDao" class="org.kuali.module.labor.dao.ojb.LaborLedgerEntryDaoOjb">
        <property name="jcdAlias">
            <value>dataSource</value>
        </property>
    </bean>

    <bean id="laborGeneralLedgerEntryDao" class="org.kuali.module.labor.dao.ojb.LaborGeneralLedgerEntryDaoOjb">
        <property name="jcdAlias">
            <value>dataSource</value>
        </property>
    </bean>

    <!-- Section 3: Spring Bean for Batch processes -->

    <bean id="laborScrubberService" class="org.kuali.module.labor.service.impl.LaborScrubberServiceImpl">
        <property name="flexibleOffsetAccountService">
            <ref bean="flexibleOffsetAccountService" />
        </property>
        <property name="documentTypeService">
            <ref bean="documentTypeService" />
        </property>
        <property name="laborOriginEntryService">
            <ref bean="laborOriginEntryService" />
        </property>
        <property name="dateTimeService">
            <ref bean="dateTimeService" />
        </property>
        <property name="offsetDefinitionService">
            <ref bean="offsetDefinitionService" />
        </property>
        <property name="objectCodeService">
            <ref bean="objectCodeService" />
        </property>
        <property name="kualiConfigurationService">
            <ref bean="kualiConfigurationService" />
        </property>
        <property name="universityDateDao">
            <ref bean="universityDateDao" />
        </property>
        <property name="originEntryGroupService">
            <ref bean="glOriginEntryGroupService" />
        </property>
        <property name="persistenceService">
            <ref bean="persistenceService" />
        </property>
        <property name="reportService">
            <ref bean="glReportService" />
        </property>
        <property name="scrubberValidator">
            <ref bean="laborScrubberValidator" />
        </property>
    </bean>
        
    <bean id="laborScrubberValidator" class="org.kuali.module.labor.service.impl.ScrubberValidatorImpl">
        <property name="scrubberValidator">
            <ref bean="glScrubberValidator" />
        </property>
    </bean>

    <bean id="laborPosterService" class="org.kuali.module.labor.service.impl.PosterServiceImpl" init-method="init">
        <property name="laborOriginEntryService">
            <ref bean="laborOriginEntryService" />
        </property>
        <property name="originEntryGroupService">
            <ref bean="glOriginEntryGroupService" />
        </property>

        <property name="dateTimeService">
            <ref bean="dateTimeService" />
        </property>
        <property name="kualiConfigurationService">
            <ref bean="kualiConfigurationService" />
        </property>

        <property name="reportService">
            <ref bean="laborReportService" />
        </property>
        <property name="verifyTransaction">
            <ref bean="glVerifyTransaction" />
        </property>

        <property name="laborLedgerEntryPoster">
            <ref bean="laborLedgerEntryPoster" />
        </property>
        <property name="laborBalancePoster">
            <ref bean="laborBalancePoster" />
        </property>
        <property name="laborGLLedgerEntryPoster">
            <ref bean="laborGLLedgerEntryPoster" />
        </property>
    </bean>

    <bean id="laborReportService" class="org.kuali.module.labor.service.impl.ReportServiceImpl">
        <property name="laborOriginEntryService">
            <ref bean="laborOriginEntryService" />
        </property>
        <property name="originEntryGroupService">
            <ref bean="glOriginEntryGroupService" />
        </property>
    </bean>

    <bean id="laborLedgerEntryPoster" class="org.kuali.module.labor.batch.poster.impl.LaborLedgerEntryPoster">
        <property name="laborLedgerEntryService">
            <ref bean="laborLedgerEntryService" />
        </property>
    </bean>

    <bean id="laborBalancePoster" class="org.kuali.module.labor.batch.poster.impl.LaborBalancePoster">
        <property name="businessObjectService">
            <ref bean="businessObjectService" />
        </property>
    </bean>

    <bean id="laborGLLedgerEntryPoster" class="org.kuali.module.labor.batch.poster.impl.LaborGLLedgerEntryPoster">
        <property name="laborGeneralLedgerEntryService">
            <ref bean="laborGeneralLedgerEntryService" />
        </property>
    </bean>

</beans>
