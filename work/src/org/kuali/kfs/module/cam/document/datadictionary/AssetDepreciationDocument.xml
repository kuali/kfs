<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetDepreciationDocument" parent="AssetDepreciationDocument-parentBean" />

  <bean id="AssetDepreciationDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Asset Depreciation" />
    <property name="shortLabel" value="Asset Depreciation" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="Asset Depreciation Document - Batch." />
    <property name="documentTypeName" value="AssetDepreciationDocument" />
    <property name="documentClass" value="org.kuali.module.cams.document.AssetDepreciationDocument" />
    <property name="businessRulesClass" value="org.kuali.module.cams.rules.AssetDepreciationDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.cams.document.authorization.AssetDepreciationDocumentAuthorizer" />
    <property name="documentTypeCode" value="DEPR" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
