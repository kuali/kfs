<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetRetirementReasonMaintenanceDocument" parent="AssetRetirementReasonMaintenanceDocument-parentBean" />

  <bean id="AssetRetirementReasonMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetRetirementReason" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetRetirementReasonMaintenanceDocument-EditAssetRetirementReason" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>retirementReasonCode</value>
        <value>retirementReasonName</value>
        <value>retirementReasonRestrictionIndicator</value>
      </list>
    </property>
    <property name="label" value="Asset Retirement Reason" />
    <property name="shortLabel" value="Asset Retirement Reason" />
    <property name="summary" value="Asset Retirement Reason maintenance document" />
    <property name="description" value="Document used to create or update Asset Retirement Reason objects" />
    <property name="documentTypeName" value="AssetRetirementReasonMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="RRSN" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>CM_ADMINISTRATORS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetRetirementReasonMaintenanceDocument-EditAssetRetirementReason" parent="AssetRetirementReasonMaintenanceDocument-EditAssetRetirementReason-parentBean" />

  <bean id="AssetRetirementReasonMaintenanceDocument-EditAssetRetirementReason-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Asset Retirement Reason" />
    <property name="title" value="Edit Asset Retirement Reason" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="retirementReasonCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="retirementReasonName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="retirementReasonRestrictionIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
