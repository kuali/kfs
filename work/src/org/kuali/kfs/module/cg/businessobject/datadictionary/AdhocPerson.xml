<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.kra.bo.AdhocPerson">
    
    	<attributes>
    	
    		<attribute name="documentNumber" forceUppercase="true">
                <label>Document Number</label>
                <shortLabel>Document Number</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern>
                    <anyCharacter />
                </validationPattern>

                <control>
                    <text size="8" />
                </control>

                <summary>Document Number...</summary>
                <description>Document Number...</description>
            </attribute>
            
            <attribute name="personUniversalIdentifier" forceUppercase="true">
                <label>Universal ID</label>
                <shortLabel>UnvlID</shortLabel>

                <maxLength>12</maxLength>
                <validationPattern>
                    <numeric />
                </validationPattern>
                <required>true</required>

                <control>
                    <text size="12" />
                </control>

                <summary>Universal ID</summary>
                <description>Universal ID</description>
            </attribute>
            
            <attribute name="permissionCode">
                <label>Permission Type</label>
                <maxLength>2</maxLength>
                <control>
                    <select valuesFinderClass="org.kuali.module.kra.lookup.keyvalues.ResearchAdhocPermissionTypeValuesFinder" />
                </control>
                <summary>Permission Type</summary>
                <description>The level of action a permitted user is allowed to take on the document.</description>
            </attribute>
            
            <attribute name="addedByPerson" forceUppercase="true">
                <label>Added By Person</label>
                <shortLabel>prsnAdd</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern>
                    <anyCharacter />
                </validationPattern>

                <control>
                    <text size="20" />
                </control>

                <summary>Added By Person</summary>
                <description>Added By Person summary...</description>
            </attribute>
            
            <attribute name="personAddedTimestamp" forceUppercase="false">
                <label>Person Added Timestamp</label>
                <shortLabel>prsnAddTs</shortLabel>

                <maxLength>10</maxLength>

                <validationPattern><timestamp /></validationPattern>

                <control>
                    <text size="11" />
                </control>

                <summary>Person Added Timestamp</summary>
                <description>Person Added Timestamp description</description>
            </attribute>
            
            <attribute name="objectId" forceUppercase="true">
                <label>Object Id</label>
                <shortLabel>GUID</shortLabel>

                <maxLength>36</maxLength>

                <validationPattern>
                    <anyCharacter />
                </validationPattern>

                <control>
                    <text size="36" />
                </control>

                <summary>objectId summary...</summary>
                <description>objectId description...</description>
            </attribute>

            <attribute name="versionNumber" forceUppercase="true">
                <label>Version Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>10</maxLength>

                <validationPattern>
                    <numeric />
                </validationPattern>

                <control>
                    <text size="-1" />
                </control>

                <summary>versionNumber summary...</summary>
                <description>versionNumber description...</description>
            </attribute>
            
            <attributeReference name="user" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personUniversalIdentifier">
                <label>Universal User</label>
                <shortLabel>User</shortLabel>
                <summary>Universal User</summary>
                <description>Universal User description</description>
            </attributeReference>
    	
    	</attributes>
		<objectLabel>Adhoc Permission</objectLabel>    	
    </businessObject>
</dictionaryEntry>