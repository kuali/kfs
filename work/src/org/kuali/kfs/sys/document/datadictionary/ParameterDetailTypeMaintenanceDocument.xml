<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.core.bo.ParameterDetailType</businessObjectClass>
        <maintainableClass>
            org.kuali.core.maintenance.KualiMaintainableImpl
        </maintainableClass>
        <businessRulesClass>
            org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase
        </businessRulesClass>
        <documentAuthorizerClass>
            org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase
        </documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_PARAMETER_MAINTAINERS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>
        <documentTypeName>ParameterDetailTypeMaintenanceDocument</documentTypeName>
        <documentTypeCode>PDTP</documentTypeCode>
        <label>Parameter Component Maintenance Document</label>
        <shortLabel>Parm Comp. Maint. Doc.</shortLabel>
        <summary>Parameter Component Maintenance Document</summary>
        <description>
            This document can be used to create or update parameter components.
        </description>
        <help parameterNamespace="KR-NS" parameterDetailType="N/A"
            parameterName="NERVOUS_SYSTEM_HELP_PARAMETER_DETAIL_TYPE"
        />

        <lockingKeys>
            <field attributeName="parameterNamespaceCode" />
            <field attributeName="parameterDetailTypeCode" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="parameterNamespace"
                attributeToHighlightOnFail="parameterNamespaceCode"
                activeIndicatorAttributeName="active"
            />
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit Parameter Component">
                <maintainableItems>
                    <maintainableField name="parameterNamespaceCode" required="true" />
                    <maintainableField name="parameterDetailTypeCode" required="true" />
                    <maintainableField name="parameterDetailTypeName" required="true" />
                    <maintainableField name="active" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>