<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="CollectionActivity-routeDocumentValidation"
		parent="CollectionActivity-routeDocumentValidation-parentBean"
		scope="prototype" />

	<bean id="CollectionActivity-routeDocumentValidation-parentBean"
		parent="CompositeValidation" scope="prototype" abstract="true">
		<property name="validations">
			<list>
				<bean parent="CollectionActivity-documentValidation" scope="prototype">
					<property name="parameterProperties">
						<list>
							<bean parent="validationFieldConversion">
								<property name="sourceEventProperty" value="document" />
								<property name="targetValidationProperty" value="collectionActivityDocument" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

</beans>
