<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="camsModule" parent="camsModule-parentBean" />

    <bean id="camsModule-parentBean" class="org.kuali.core.KualiModule" abstract="true">
		<property name="moduleId" value="cams" />
		<property name="moduleName" value="Capital Asset Management" />
		<property name="moduleCode" value="CM" />
		<property name="moduleUserService" ref="camsUserService" />
		<property name="initializeDataDictionary" value="true" />
		<property name="moduleAuthorizer">
			<bean class="org.kuali.kfs.authorization.KfsModuleAuthorizerBase">
				<property name="packagePrefixes">
					<list>
						<value>org.kuali.module.cams.</value>
					</list>
				</property>
			</bean>
		</property>
		<property name="moduleUserRule">
			<null />
		</property>
		<property name="moduleUserPreRules">
			<null />
		</property>
		<property name="dataDictionaryPackages">
			<list>
				<value>org/kuali/module/cams/datadictionary</value>
			</list>
		</property>
		<property name="databaseRepositoryFilePaths">
			<list>
				<value>org/kuali/module/cams/OJB-repository-cams.xml</value>
			</list>
		</property>
		<!-- Asset Depreciation batch - START -->				
		<property name="triggerNames">
			<list>
				<value>assetDepreciationBatchJobTrigger</value>
			</list>
		</property>
		<!-- Asset Depreciation batch - END -->								
	</bean>

	<bean id="camsUserService" class="org.kuali.module.cams.service.impl.CamsUserServiceImpl" parent="kualiModuleUserServiceBase">
	</bean>

<!-- ********* Begin of depreciation batch beans ********** -->
	<bean id="assetDepreciationService" class="org.kuali.module.cams.service.impl.AssetDepreciationServiceImpl">											       
        <property name="parameterService">
            <ref bean="parameterService" />
        </property>
        <property name="depreciableAssetsDao">
            <ref bean="depreciableAssetsDao" />
        </property>
        <property name="camsReportService">
            <ref bean="camsReportService" />
        </property>        
		<property name="kualiConfigurationService">
			<ref bean="kualiConfigurationService" />
		</property>                
		<property name="generalLedgerPendingEntryService">
			<ref bean="generalLedgerPendingEntryService" />
		</property>                		
		<property name="dateTimeService">
			<ref bean="dateTimeService" />
		</property>
		<property name="universityDateDao">
			<ref bean="universityDateDao" />
		</property>
		<property name="workflowDocumentService">
			<ref bean="workflowDocumentService" />
		</property>
		<property name="homeOriginationService">
			<ref bean="homeOriginationService" />
		</property>
		<property name="documentTypeService">
			<ref bean="documentTypeService" />
		</property>
		<property name="businessObjectService">
			<ref bean="businessObjectService" />
		</property>		
    </bean>

	<bean id="depreciableAssetsDao" parent="platformAwareDao" class="org.kuali.module.cams.dao.ojb.DepreciableAssetsDaoOjb">
		<property name="kualiConfigurationService">
			<ref bean="kualiConfigurationService" />
		</property>
        <property name="parameterService">
            <ref bean="parameterService" />
        </property>
		<property name="dateTimeService">
			<ref bean="dateTimeService" />
		</property>
        <property name="optionsService">
            <ref bean="optionsService" />
        </property>
     	<property name="businessObjectService">
            <ref bean="businessObjectService" />
      	</property>
		                				                		
	</bean>	

    <bean id="assetDepreciationStep" class="org.kuali.module.cams.batch.AssetDepreciationStep" parent="step">
		<property name="assetDepreciationService">
			 <ref bean="assetDepreciationService" />
		</property>
	</bean>

	<bean id="assetDepreciationBatchJob" parent="scheduledJobDescriptor">
		<property name="steps">
			<list>
				<ref bean="assetDepreciationStep"/>
			</list>
		</property>
	</bean>

	<bean id="assetDepreciationBatchJobTrigger" parent="cronTrigger">
		<property name="jobName" value="assetDepreciationBatchJob" />
		<!--  it will run on the 3rd=3 thursday=5 of the month-->
		<property name="cronExpression" value="00 00 00 ? * 5#3" />
	</bean>


<!-- *********  End of depreciation batch beans ********** -->

<!-- ********* Begin of report service beans ********** -->
	<bean id="camsReportService" class="org.kuali.module.cams.service.impl.ReportServiceImpl"></bean>
