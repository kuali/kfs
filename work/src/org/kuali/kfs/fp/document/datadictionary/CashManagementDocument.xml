<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CashManagementDocument" parent="CashManagementDocument-parentBean" />

  <bean id="CashManagementDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Cash Management" />
    <property name="shortLabel" value="Cash Management" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="blah blah Document blah Cash Management blah blah" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="CASH_MANAGEMENT"
            p:parameterDetailType="CashManagement" />
    </property>
    <property name="documentTypeName" value="CashManagementDocument" />
    <property name="documentClass" value="org.kuali.module.financial.document.CashManagementDocument" />
    <property name="businessRulesClass" value="org.kuali.module.financial.rules.CashManagementDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.financial.document.authorization.CashManagementDocumentAuthorizer" />
    <property name="documentTypeCode" value="CMD" />
    <property name="workflowProperties" >
      <ref bean="CashManagementDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="CashManagementDocument-workgroupName" />
        <ref bean="CashManagementDocument-cashDrawerStatus" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="CashManagementDocument-workgroupName" parent="CashManagementDocument-workgroupName-parentBean" />

  <bean id="CashManagementDocument-workgroupName-parentBean" abstract="true" parent="UniversalUser-personUserIdentifier">
    <property name="name" value="workgroupName" />
    <property name="label" value="Verification Unit" />
    <property name="shortLabel" value="Verification Unit" />
    <property name="maxLength" value="70" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="72" />
    </property>
    <property name="summary" value="Verification unit associated with this document" />
    <property name="description" value="Verification Unit used in selecting cash receipts and making deposits" />
  </bean>
  <bean id="CashManagementDocument-cashDrawerStatus" parent="CashManagementDocument-cashDrawerStatus-parentBean" />

  <bean id="CashManagementDocument-cashDrawerStatus-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="cashDrawerStatus" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Cash Drawer Status" />
    <property name="shortLabel" value="Cash Drawer Status" />
    <property name="maxLength" value="10" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
    <property name="summary" value="Current status of cash drawer associated with this document" />
    <property name="description" value="..." />
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="CashManagementDocument-workflowProperties" parent="CashManagementDocument-workflowProperties-parentBean" />

  <bean id="CashManagementDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="basePath" value="kualiTransactionalDocumentInformation.documentInitiator.universalUser.campus" />
        </bean>
      </list>
    </property>
  </bean>
</beans>
