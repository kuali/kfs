<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="OffsetAccountMaintenanceDocument" parent="OffsetAccountMaintenanceDocument-parentBean" />

  <bean id="OffsetAccountMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.financial.bo.OffsetAccount" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="OffsetAccountMaintenanceDocument-EditOffsetAccount" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="chart"
              p:attributeToHighlightOnFail="chartOfAccountsCode"
              p:displayFieldName="Chart of Accounts" />
        <bean parent="ReferenceDefinition"
              p:attributeName="account"
              p:attributeToHighlightOnFail="accountNumber"
              p:displayFieldName="Account" />
        <bean parent="ReferenceDefinition"
              p:attributeName="objectCodeCurrent"
              p:attributeToHighlightOnFail="financialOffsetObjectCode"
              p:displayFieldName="Offset Object Code" />
        <bean parent="ReferenceDefinition"
              p:attributeName="financialOffsetChartOfAccount"
              p:attributeToHighlightOnFail="financialOffsetChartOfAccountCode"
              p:displayFieldName="Offset Chart of Accounts" />
        <bean parent="ReferenceDefinition"
              p:attributeName="financialOffsetAccount"
              p:attributeToHighlightOnFail="financialOffsetAccountNumber"
              p:displayFieldName="Offset Account" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>chartOfAccountsCode</value>
        <value>accountNumber</value>
        <value>financialOffsetObjectCode</value>
      </list>
    </property>
    <property name="label" value="Offset Account" />
    <property name="shortLabel" value="Offset Account" />
    <property name="summary" value="OffsetAccountMaintenanceDocument" />
    <property name="description" value="Document used to create or update Offset Accounts" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="OFFSET_ACCOUNT"
            p:parameterDetailType="OffsetAccount" />
    </property>
    <property name="documentTypeName" value="OffsetAccountMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="OFAC" />
    <property name="workflowProperties" >
      <ref bean="OffsetAccountMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="OffsetAccountMaintenanceDocument-EditOffsetAccount" parent="OffsetAccountMaintenanceDocument-EditOffsetAccount-parentBean" />

  <bean id="OffsetAccountMaintenanceDocument-EditOffsetAccount-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Offset Account" />
    <property name="title" value="Edit Offset Account" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialOffsetObjectCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialOffsetChartOfAccountCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialOffsetAccountNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="OffsetAccountMaintenanceDocument-workflowProperties" parent="OffsetAccountMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="OffsetAccountMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
