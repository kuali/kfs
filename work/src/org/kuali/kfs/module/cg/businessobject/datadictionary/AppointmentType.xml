<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.kra.budget.bo.AppointmentType">


        <inquiry>
            <title>Appointment Type</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="appointmentTypeCode" />
                <field attributeName="appointmentTypeDescription" />
                <field attributeName="appointmentTypeAbbrieviation" />
                <field attributeName="fringeRateAmount" />
                <field attributeName="costShareFringeRateAmount" />
                <field attributeName="relatedAppointmentTypeCode" />
                <field attributeName="lastUpdate" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Appointment Type Lookup</title>

            <instructions>Lookup an Appointment Type</instructions>

            <defaultSort attributeName="appointmentTypeCode" sortAscending="true" />

            <lookupFields>
                <lookupField attributeName="appointmentTypeCode" required="false" />
                <lookupField attributeName="appointmentTypeAbbrieviation" required="false" />
                <lookupField attributeName="active" required="false">
                    <defaultValue>Y</defaultValue>
                </lookupField>
            </lookupFields>

            <resultFields>
                <field attributeName="appointmentTypeCode" />
                <field attributeName="appointmentTypeDescription" />
                <field attributeName="appointmentTypeAbbrieviation" />
                <field attributeName="fringeRateAmount" />
                <field attributeName="costShareFringeRateAmount" />
                <field attributeName="lastUpdate" />
                <field attributeName="active" />
            </resultFields>
        </lookup>
        
        <titleAttribute>appointmentTypeCode</titleAttribute>

        <attributes>

            <attribute name="appointmentTypeCode" forceUppercase="true">
                <label>Appointment Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern>
                    <alphaNumeric exactLength="2" />
                </validationPattern>

                <control>
                    <text size="2" />
                </control>

                <summary>Appointment Type Code</summary>
                <description>The type of appointment for a given user.</description>
            </attribute>

            <attribute name="appointmentTypeDescription" forceUppercase="false">
                <label>Position Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern>
                    <anyCharacter allowWhitespace="true"/>
                </validationPattern>

                <control>
                    <text size="40" />
                </control>

                <summary>Appointment Type Description</summary>
                <description>A description of the appointment type.</description>
            </attribute>

            <attribute name="appointmentTypeAbbrieviation" forceUppercase="false">
                <label>Appointment Type Abbreviation</label>
                <shortLabel>Appt Type Abrv</shortLabel>

                <maxLength>25</maxLength>
                <validationPattern>
                    <anyCharacter allowWhitespace="true"/>
                </validationPattern>

                <control>
                    <text size="12" />
                </control>

                <summary>Appointment Type Abbrieviation</summary>
                <description>An abbreviation of the appointment type.</description>
            </attribute>


            <attribute name="fringeRateAmount" forceUppercase="false">
                <label>Fringe Rate</label>
                <shortLabel>Fringe</shortLabel>

                <maxLength>8</maxLength>
                <inclusiveMax>99</inclusiveMax>
                <validationPattern>
                    <floatingPoint />
                </validationPattern>

                <control>
                    <text size="10" />
                </control>

                <summary>Fringe Rate</summary>
                <description>This is the fringe benefits rate that is charged on salaries that are booked to the project. The fringe rate is dependent on the employee classification.</description>
            </attribute>

            <attribute name="costShareFringeRateAmount" forceUppercase="false">
                <label>Cost Share Fringe Rate</label>
                <shortLabel>Cost Share Fringe</shortLabel>

                <maxLength>8</maxLength>
                <inclusiveMax>99</inclusiveMax>
                <validationPattern>
                    <floatingPoint />
                </validationPattern>

                <control>
                    <text size="10" />
                </control>

                <summary>Cost Share Fringe Rate</summary>
                <description>This is the fringe benefits rate that is charged on cost-shared salaries. The fringe rate is dependent on the employee classification.</description>
            </attribute>

            <attributeReference name="lastUpdate"  sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericTimestamp">
                <label>Last Update Timestamp</label>
                <shortLabel>Last Update</shortLabel>
                <summary>Last Update</summary>
                <description>The date of the most recent change to the fringe benefits rates.</description>
            </attributeReference>
            
            <attributeReference name="relatedAppointmentTypeCode" sourceClassName="org.kuali.module.kra.budget.bo.AppointmentType" sourceAttributeName="appointmentTypeCode">
                <label>Related Appointment Type Code</label>
                <shortLabel>Related Appt Type</shortLabel>
                <summary>Related Appointment Type Code</summary>
                <description>The Appointment Type Code of a related Appointment Type, used for creating entries for dual appointment types.  For example, an Academic 12- Month appointment could be combined with an Hourly appointment.</description>
            </attributeReference>

            <attribute name="objectId" forceUppercase="true">
                <label>Object Id</label>
                <shortLabel>GUID</shortLabel>

                <maxLength>36</maxLength>

                <validationPattern>
                    <anyCharacter />
                </validationPattern>

                <control>
                    <text size="36" />
                </control>

                <summary>Object ID</summary>
                <description>objectId description...</description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

        </attributes>
        <objectLabel>Appointment Type</objectLabel>
    </businessObject>
</dictionaryEntry>

