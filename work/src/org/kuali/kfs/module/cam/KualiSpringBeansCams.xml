    <bean id="camsGeneralLedgerPendingEntryGenerationProcess" class="org.kuali.module.cams.service.impl.CamsGeneralLedgerPendingEntryGenerationProcessImpl">
    	<property name="generalLedgerPendingEntryService" ref="generalLedgerPendingEntryService" />
