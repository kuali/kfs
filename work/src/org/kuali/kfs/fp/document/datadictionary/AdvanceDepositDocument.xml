<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AdvanceDepositDocument" parent="AdvanceDepositDocument-parentBean" />

  <bean id="AdvanceDepositDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Advance Deposit" />
    <property name="shortLabel" value="Advance Deposit" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="An Advanced Deposit (AD) document is used to record advance deposits that go straight to the bank from a departmental unit, without being verified through the normal cash receipting process. This document allows for distribution of the monetary amount received, into the appropriate accounts in the financial system. Once submitted, an Advance Deposit document routes straight to FINAL and is applied to the General Ledger." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="ADVANCE_DEPOSIT"
            p:parameterDetailType="AdvanceDeposit" />
    </property>
    <property name="documentTypeName" value="AdvanceDepositDocument" />
    <property name="documentClass" value="org.kuali.module.financial.document.AdvanceDepositDocument" />
    <property name="businessRulesClass" value="org.kuali.module.financial.rules.AdvanceDepositDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.financial.document.authorization.AdvanceDepositDocumentAuthorizer" />
    <property name="documentTypeCode" value="AD" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="AdvanceDepositDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="AdvanceDepositDocument-workflowProperties" parent="AdvanceDepositDocument-workflowProperties-parentBean" />

  <bean id="AdvanceDepositDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
