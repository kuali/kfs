<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CreditCardTypeMaintenanceDocument" parent="CreditCardTypeMaintenanceDocument-parentBean" />

  <bean id="CreditCardTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.financial.bo.CreditCardType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="CreditCardTypeMaintenanceDocument-EditCreditCardType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>financialDocumentCreditCardTypeCode</value>
      </list>
    </property>
    <property name="label" value="Credit Card Type" />
    <property name="shortLabel" value="Credit Card Type" />
    <property name="summary" value="Credit Card Type Maintenance Document" />
    <property name="description" value="Document used to create or update a credit card type." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="CREDIT_CARD_TYPE"
            p:parameterDetailType="CreditCardType" />
    </property>
    <property name="documentTypeName" value="CreditCardTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="CCTY" />
    <property name="workflowProperties" >
      <ref bean="CreditCardTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="CreditCardTypeMaintenanceDocument-EditCreditCardType" parent="CreditCardTypeMaintenanceDocument-EditCreditCardType-parentBean" />

  <bean id="CreditCardTypeMaintenanceDocument-EditCreditCardType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Credit Card Type" />
    <property name="title" value="Edit Credit Card Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentCreditCardTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentCreditCardCompanyName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="CreditCardTypeMaintenanceDocument-workflowProperties" parent="CreditCardTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="CreditCardTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
