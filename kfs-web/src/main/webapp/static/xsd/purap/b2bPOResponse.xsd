<xsd:schema elementFormDefault="qualified"
		    targetNamespace="http://www.kuali.org/kfs/purap/b2bPOResponse"
		    xmlns="http://www.kuali.org/kfs/purap/b2bPOResponse" 
		    xmlns:xsd="http://www.w3.org/2001/XMLSchema">

<xsd:import namespace="http://www.w3.org/XML/1998/namespace" schemaLocation="http://www.w3.org/2001/xml.xsd" />

<!-- Simple Data Types from purapTypes.xsd -->

    <xsd:simpleType name="statusCodeType">
        <xsd:restriction base="xsd:token">
            <xsd:pattern value="[0-9]{3}"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="statusTextType">
        <xsd:restriction base="xsd:string">
            <xsd:maxLength value="200"/>
        </xsd:restriction>
    </xsd:simpleType>

<!-- Original Schema -->

	<xsd:element name="Error">
	  	<xsd:complexType>
	  		<xsd:sequence>
	  			<xsd:element name="ErrorMessage" type="xsd:string"/>  <!-- Not needed to restrict the length since this gets added to notes -->
	  		</xsd:sequence>	
	  	</xsd:complexType>
  	</xsd:element>	
		    
	<xsd:element name="PurchaseOrderMessage">
	    <xsd:complexType>
	      <xsd:sequence>
	      	<xsd:element name="Header">		    
	        	<xsd:complexType>
		            <xsd:sequence>
		        		 <xsd:element name="MessageId" type="xsd:string"/> <!-- Not used -->
		        		 <xsd:element name="Timestamp" type="xsd:string"/> <!-- Not used -->
		            </xsd:sequence>
		        </xsd:complexType>
		     </xsd:element>       
	        <xsd:element name="ResponseMessage">		    
	        	<xsd:complexType>
		            <xsd:sequence>
        		      	<xsd:element name="Status">
	        		      	<xsd:complexType>
	        		      		<xsd:sequence>
                                    <xsd:element name="StatusCode" type="statusCodeType"/>
                                    <xsd:element name="StatusText" type="statusTextType"/>
	        		      			<xsd:element name="Errors" minOccurs="0">
	        		      				<xsd:complexType>
									  		<xsd:sequence>
									  			<xsd:element ref="Error" maxOccurs="unbounded"/>
									  		</xsd:sequence>
									  	</xsd:complexType>	
	        		      			</xsd:element>
	       		      			</xsd:sequence>
	       		      		</xsd:complexType>	
        		      	</xsd:element>
        		      	<xsd:element name="ObjectErrors" minOccurs="0">
        		      		<xsd:complexType>
	        		      		<xsd:sequence>
	        		      			<xsd:element name="PurchaseOrderRef" minOccurs="0">
	        		      				<xsd:complexType>
									  		<xsd:sequence>
										  		<xsd:element name="Error" maxOccurs="unbounded">
                                                    <xsd:complexType>
                                                       <xsd:sequence>
                                                           <xsd:element name="ErrorMessage" maxOccurs="unbounded"/>
                                                       </xsd:sequence>
                                                       <xsd:attribute name="type" type="xsd:string" />
                                                    </xsd:complexType>
										  		</xsd:element>
		                              		</xsd:sequence>	
                                            <xsd:attribute name="ponumber" type="xsd:unsignedInt" use="required" />
		                              	</xsd:complexType>	
	        		      			</xsd:element>
                                    <xsd:element name="PurchaseOrderLineRef" minOccurs="0">
                                        <xsd:complexType>
                                            <xsd:sequence>
                                                <xsd:element name="Error" maxOccurs="unbounded">
                                                    <xsd:complexType>
                                                       <xsd:sequence>
                                                           <xsd:element name="ErrorMessage" maxOccurs="unbounded"/>
                                                       </xsd:sequence>
                                                       <xsd:attribute name="type" type="xsd:string" />
                                                    </xsd:complexType>
                                                </xsd:element>
                                            </xsd:sequence> 
                                            <xsd:attribute name="ponumber" type="xsd:unsignedInt" use="required" />
                                            <xsd:attribute name="linenumber" type="xsd:unsignedInt" use="required" />
                                        </xsd:complexType>  
                                    </xsd:element>
	       		      			</xsd:sequence>
       		      			</xsd:complexType>
        		      	</xsd:element>
        		    </xsd:sequence>
        		</xsd:complexType>
        	</xsd:element>
        </xsd:sequence>
        <xsd:attribute name="version" type="xsd:string"/>
       </xsd:complexType>
    </xsd:element>    		      		

</xsd:schema>		    
