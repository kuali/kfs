<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CapitalAssetTransactionTypeRuleMaintenanceDocument" parent="CapitalAssetTransactionTypeRuleMaintenanceDocument-parentBean" />

  <bean id="CapitalAssetTransactionTypeRuleMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.purap.bo.CapitalAssetTransactionTypeRule" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="CapitalAssetTransactionTypeRuleMaintenanceDocument-EditCapitalAssetTransactionTypeRule" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>capitalAssetTransactionTypeCode</value>
        <value>financialObjectSubTypeCode</value>
      </list>
    </property>
    <property name="label" value="Capital Asset Transaction Type Rule" />
    <property name="shortLabel" value="Capital Asset Transaction Type Rule" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PA"
            p:parameterName="CAPITAL_ASSET_TRANSACTION_TYPE"
            p:parameterDetailType="CapitalAssetTransactionType" />
    </property>
    <property name="documentTypeName" value="CapitalAssetTransactionTypeRuleMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMTR" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PUR_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="CapitalAssetTransactionTypeRuleMaintenanceDocument-EditCapitalAssetTransactionTypeRule" parent="CapitalAssetTransactionTypeRuleMaintenanceDocument-EditCapitalAssetTransactionTypeRule-parentBean" />

  <bean id="CapitalAssetTransactionTypeRuleMaintenanceDocument-EditCapitalAssetTransactionTypeRule-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Capital Asset Transaction Type Rule" />
    <property name="title" value="Edit Capital Asset Transaction Type Rule" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetTransactionTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialObjectSubTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetRelationshipLimitNumber" />
      </list>
    </property>
  </bean>
</beans>
