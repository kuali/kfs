<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="OffsetDefinitionMaintenanceDocument" parent="OffsetDefinitionMaintenanceDocument-parentBean" />

  <bean id="OffsetDefinitionMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.OffsetDefinition" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="OffsetDefinitionMaintenanceDocument-EditOffsetDefinition" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="chartOfAccounts"
              p:activeIndicatorAttributeName="finChartOfAccountActiveIndicator"
              p:attributeToHighlightOnFail="chartOfAccountsCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="universityFiscal"
              p:attributeToHighlightOnFail="universityFiscalYear" />
        <bean parent="ReferenceDefinition"
              p:attributeName="financialObject"
              p:attributeToHighlightOnFail="financialObjectCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="financialBalanceType"
              p:attributeToHighlightOnFail="financialBalanceTypeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>universityFiscalYear</value>
        <value>chartOfAccountsCode</value>
        <value>financialDocumentTypeCode</value>
        <value>financialBalanceTypeCode</value>
      </list>
    </property>
    <property name="label" value="Offset Definition" />
    <property name="shortLabel" value="Offset Definition" />
    <property name="summary" value="Offset Definition Maintenance Document" />
    <property name="description" value="Maintenance document which allows you to create new Offset Definitions, remove exsiting Offset Definitions, or modify existing Offset Definitions." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="OFFSET_DEFINITION"
            p:parameterDetailType="OffsetDefinition" />
    </property>
    <property name="documentTypeName" value="OffsetDefinitionMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.chart.rules.OffsetDefinitionRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="OFSD" />
    <property name="workflowProperties" >
      <ref bean="OffsetDefinitionMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="OffsetDefinitionMaintenanceDocument-EditOffsetDefinition" parent="OffsetDefinitionMaintenanceDocument-EditOffsetDefinition-parentBean" />

  <bean id="OffsetDefinitionMaintenanceDocument-EditOffsetDefinition-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Offset Definition" />
    <property name="title" value="Edit Offset Definition" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalYear"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialBalanceTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialObjectCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="OffsetDefinitionMaintenanceDocument-workflowProperties" parent="OffsetDefinitionMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="OffsetDefinitionMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
