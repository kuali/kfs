<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean id="trigger" abstract="true">
		<property name="group" value="scheduled" />
		<property name="dateTimeService" ref="dateTimeService" />
		<property name="testMode" value="true" />
	</bean>
	
	<bean id="mailService" class="org.kuali.test.NonSendingMailService">
		<property name="mailSender">
			<ref bean="mailSender" />
		</property>
		<property name="batchMailingList" value="${mailing.list.batch}" />
	</bean>
</beans>