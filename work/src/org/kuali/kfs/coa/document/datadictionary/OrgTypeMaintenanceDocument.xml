<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.OrgType</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_ROLE_MAINTENANCE</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>OrgTypeMaintenanceDocument</documentTypeName>
        <documentTypeCode>ORTY</documentTypeCode>
        <label>Organization Type Maintenance Document</label>
        <shortLabel>OrgTypeMaintDoc</shortLabel>
        <summary>Organization Type Maintenance Document</summary>
        <description>Maintenance document which allows you to create new Organization Types, or modify existing Organization Types.</description>
        <help parameterNamespace="KFS-CA" parameterDetailType="OrganizationType" parameterName="ORGANIZATION_TYPE" />

        <lockingKeys>
            <field attributeName="organizationTypeCode" />
        </lockingKeys>

        <maintainableSections>
            <maintainableSection title="Edit Organization Type">
                <maintainableItems>
                    <maintainableField name="organizationTypeCode" required="true" />
                    <maintainableField name="organizationTypeName" required="true" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>

</dictionaryEntry>