<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CreditMemoStatusMaintenanceDocument" parent="CreditMemoStatusMaintenanceDocument-parentBean" />

  <bean id="CreditMemoStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.purap.bo.CreditMemoStatus" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="CreditMemoStatusMaintenanceDocument-EditCreditMemoStatus" />
      </list>
    </property>
    <property name="allowsNewOrCopy" value="false" />
    <property name="lockingKeys" >
      <list>
        <value>statusCode</value>
      </list>
    </property>
    <property name="label" value="Credit Memo Status" />
    <property name="shortLabel" value="Credit Memo Status" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PA"
            p:parameterName="CREDIT_MEMO_STATUS"
            p:parameterDetailType="CreditMemoStatus" />
    </property>
    <property name="documentTypeName" value="CreditMemoStatusMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMCM" />
    <property name="workflowProperties" >
      <ref bean="CreditMemoStatusMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_AP_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="CreditMemoStatusMaintenanceDocument-EditCreditMemoStatus" parent="CreditMemoStatusMaintenanceDocument-EditCreditMemoStatus-parentBean" />

  <bean id="CreditMemoStatusMaintenanceDocument-EditCreditMemoStatus-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Credit Memo Status" />
    <property name="title" value="Edit Credit Memo Status" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="statusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="statusDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="CreditMemoStatusMaintenanceDocument-workflowProperties" parent="CreditMemoStatusMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="CreditMemoStatusMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
