<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PaymentReasonCodeMaintenanceDocument" parent="PaymentReasonCodeMaintenanceDocument-parentBean" />

  <bean id="PaymentReasonCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.financial.bo.PaymentReasonCode" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PaymentReasonCodeMaintenanceDocument-EditPaymentReason" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>code</value>
      </list>
    </property>
    <property name="label" value="Disbursement Voucher Payment Reason" />
    <property name="shortLabel" value="Disbursement Voucher Payment Reason" />
    <property name="summary" value="Payment Reason Code Maintenance Document" />
    <property name="description" value="Document used to create or update Payment Reason objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="PAYMENT_REASON"
            p:parameterDetailType="PaymentReasonCode" />
    </property>
    <property name="documentTypeName" value="PaymentReasonCodeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="DVPR" />
    <property name="workflowProperties" >
      <ref bean="PaymentReasonCodeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PaymentReasonCodeMaintenanceDocument-EditPaymentReason" parent="PaymentReasonCodeMaintenanceDocument-EditPaymentReason-parentBean" />

  <bean id="PaymentReasonCodeMaintenanceDocument-EditPaymentReason-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Payment Reason" />
    <property name="title" value="Edit Payment Reason" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="code"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="name" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PaymentReasonCodeMaintenanceDocument-workflowProperties" parent="PaymentReasonCodeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="PaymentReasonCodeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
